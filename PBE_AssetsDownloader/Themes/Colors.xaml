<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Lo usamos para Styles.xaml / SidebarMenuButton -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF5577CC"/> 
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#FF2E3B5C"/>
    
    <!-- Modern Dark Theme Colors -->
    <SolidColorBrush x:Key="DarkBackground" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FF2D2D30"/>     <!-- Este color lo usaremos para cuando tengamos una seleccion encima del raton -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#FF252526"/>  <!-- Este color lo usaremos para fondos -->
    <SolidColorBrush x:Key="AccentBlue" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="AccentGreen" Color="#FF16825D"/>
    <SolidColorBrush x:Key="AccentPurple" Color="#9370DB"/>
    <SolidColorBrush x:Key="AccentOrange" Color="#FFD7BA7D"/>
    <SolidColorBrush x:Key="AccentRed" Color="#FFCC3333"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#FF969696"/>
    <SolidColorBrush x:Key="TextMuted" Color="#FF6A6A6A"/>
    <SolidColorBrush x:Key="BorderColor" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="HoverColor" Color="#FF3A3A3C"/>
    
    <!-- Colores que usará CustomScrollbarStyles.xaml -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#252526" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#505050" />
    <SolidColorBrush x:Key="ScrollBarThumbHoverBackground" Color="#707070" />
    <SolidColorBrush x:Key="ScrollBarThumbPressedBackground" Color="#909090" />
    <SolidColorBrush x:Key="ScrollBarArrowColor" Color="#BBBBBB" />
    <SolidColorBrush x:Key="ScrollBarArrowHoverColor" Color="White" />

    <!-- Diff Viewer -->
    <!-- Background colors for the text editor lines -->
    <Color x:Key="DiffTextBackgroundRemoved">#58FF6B6B</Color>
    <Color x:Key="DiffTextBackgroundAdded">#586BCF7F</Color>
    <Color x:Key="DiffTextBackgroundModified">#58FFD93D</Color>
    <!-- Solid colors for the side navigation panel -->
    <Color x:Key="DiffNavigationRemoved">#A6FF6B6B</Color>
    <Color x:Key="DiffNavigationAdded">#A66BCF7F</Color>
    <Color x:Key="DiffNavigationModified">#A6FFD93D</Color>
    <Color x:Key="DiffNavigationImaginary">#FF1E1E1E</Color>
    <Color x:Key="BackgroundPanelNavigation">#28808080</Color>


</ResourceDictionary>