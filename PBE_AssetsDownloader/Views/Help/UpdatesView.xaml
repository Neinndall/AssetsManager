<UserControl x:Class="PBE_AssetsManager.Views.Help.UpdatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="Application Updates" 
                         FontSize="28" 
                         FontWeight="Light" 
                         Foreground="{StaticResource TextPrimary}"
                         Margin="0,4,0,0"/>
            <TextBlock Text="Keep your application up to date with the latest features" 
                         FontSize="14" 
                         Foreground="{StaticResource TextMuted}"
                         Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Update Check Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Update"
                                               Foreground="{StaticResource AccentGreen}"
                                               FontSize="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Update Check" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource AccentGreen}"/>
                        <TextBlock Text="Check for the latest version and download updates" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                
                <TextBlock Text="Stay up to date with the latest features, improvements, and bug fixes by checking for updates regularly."
                           Foreground="{StaticResource TextPrimary}" 
                           FontSize="13" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <Button x:Name="buttonCheckUpdates" 
                        Content="Check for Updates"
                        Height="36"
                        Width="160"
                        HorizontalAlignment="Left"
                        Click="buttonCheckUpdates_Click"
                        Style="{StaticResource ModernButton}"/>
            </StackPanel>
        </Border>

        <!-- Update Information Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="PackageVariant"
                                               Foreground="SaddleBrown"
                                               FontSize="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Update Information" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="About automatic updates and release cycle" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextSecondary}" Text="• Updates are released regularly with new features and fixes"/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextSecondary}" Text="• The application will notify you when updates are available"/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextSecondary}" Text="• You can always check manually using the button above"/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextSecondary}" Text="• Backup your settings before major updates"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>