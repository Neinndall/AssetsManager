<UserControl x:Class="PBE_AssetsManager.Views.ComparatorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Consolas, Courier New">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:MaterialIcon Kind="Compare"
                                             Height="54"
                                             Width="54"
                                             Margin="0,0,10,0"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBlue}"
                                             Grid.Column="0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="COMPARATOR" 
                               FontSize="26" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBlue}"
                               Margin="0,2,0,0"/>
                    <TextBlock Text="Manually compare JSON files or WAD files."
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <StackPanel>
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Header con icono y tÃ­tulo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                            <materialDesign:MaterialIcon Kind="FileCompare"
                                                         FontSize="20"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AccentBlue}"/>
                            <StackPanel>
                                <TextBlock Text="Manual JSON Comparison" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select two JSON files to compare" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- New File -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:MaterialIcon Grid.Column="0" Kind="FilePlusOutline" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentGreen}"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="New File" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select the new JSON file to compare" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="newFileTextBox" 
                                             Grid.Column="0"
                                             Height="36"
                                             IsReadOnly="True"
                                             Style="{StaticResource ModernTextBox}"/>
                                    <Button Grid.Column="2"
                                            Content="Browse"
                                            Width="80" 
                                            Height="36"
                                            Style="{StaticResource SecondaryButton}"
                                            Click="btnSelectNew_Click"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!-- Original File -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:MaterialIcon Grid.Column="0" Kind="FileDocumentOutline" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="Old File" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select the old JSON file to compare" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="originalFileTextBox" 
                                             Grid.Column="0"
                                             Height="36"
                                             IsReadOnly="True"
                                             Style="{StaticResource ModernTextBox}"/>
                                    <Button Grid.Column="2"
                                            Content="Browse"
                                            Width="80" 
                                            Height="36"
                                            Style="{StaticResource SecondaryButton}"
                                            Click="btnSelectOriginal_Click"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!-- Actions -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:MaterialIcon Grid.Column="0" Kind="Flash" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Actions" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Compare the two selected files" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="compareButton" 
                                        Content="Compare" 
                                        Height="36"
                                        Width="150"
                                        Style="{StaticResource ModernButton}"
                                        Click="btnCompare_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- WADs Comparator Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Header con icono y tÃ­tulo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                            <materialDesign:MaterialIcon Kind="Compare"
                                                         FontSize="20"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AccentBlue}"/>
                            <StackPanel>
                                <TextBlock Text="WADs Comparator" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Compare WAD files to identify differences" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- New PBE Directory -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:MaterialIcon Grid.Column="0" Kind="FolderRefreshOutline" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentGreen}"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="New PBE Directory" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select the new PBE directory" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <Grid Grid.Column="1" Margin="0,42,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="newPbeDirectoryTextBox" 
                                         Grid.Column="0"
                                         Height="36"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Select the new PBE directory"/>
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Width="80" 
                                        Height="36"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="btnSelectNewPbeDirectory_Click"
                                        ToolTip="Browse for directory"/>
                            </Grid>
                        </Grid>

                        <!-- Old PBE Directory -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:MaterialIcon Grid.Column="0" Kind="FolderClockOutline" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="Old PBE Directory" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select the old PBE directory" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <Grid Grid.Column="1" Margin="0,42,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="oldPbeDirectoryTextBox" 
                                         Grid.Column="0"
                                         Height="36"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Select the old PBE directory"/>
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Width="80" 
                                        Height="36"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="btnSelectOldPbeDirectory_Click"
                                        ToolTip="Browse for directory"/>
                            </Grid>
                        </Grid>
                        
                        <!-- Actions -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:MaterialIcon Grid.Column="0" Kind="Flash" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Actions" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Compare WAD files or load previous results" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,12"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="loadButton" 
                                        Content="Load Results"
                                        Height="36"
                                        Width="150"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="loadButton_Click"
                                        ToolTip="Load previously saved WAD comparison results"
                                        Margin="0,0,12,0"/>
                                    <Button x:Name="compareWadButton" 
                                        Content="Compare" 
                                        Height="36"
                                        Width="150"
                                        Style="{StaticResource ModernButton}"
                                        Click="compareWadButton_Click"
                                        ToolTip="Compare WAD files"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>