<Window x:Class="PBE_AssetsDownloader.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        Title="Settings" Height="720" Width="940"
        MinHeight="720" MinWidth="940"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#FF1E1E1E"
        FontFamily="Consolas, Courier New">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{StaticResource SidebarBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource CardBackground}" 
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="20,24">
                    <StackPanel>
                        <TextBlock Text="⚙️ SETTINGS" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="{StaticResource AccentBlue}"/>
                        <TextBlock Text="Configuration Panel" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextMuted}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <StackPanel Margin="0,16,0,0">
                    <RadioButton x:Name="NavGeneral" 
                               Content="General" 
                               Tag="🔧"
                               GroupName="Navigation" 
                               IsChecked="True" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavHashes" 
                               Content="Hash Paths" 
                               Tag="📁"
                               GroupName="Navigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavAdvanced" 
                               Content="Advanced" 
                               Tag="⚡"
                               GroupName="Navigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavLogs" 
                               Content="Logs" 
                               Tag="📋"
                               GroupName="Navigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="0" 
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="32,24">
                        
            
            
                <StackPanel>
                    <!-- General Settings Panel -->
                <StackPanel x:Name="GeneralPanel">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=NavGeneral}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- Page Header -->
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="General Settings" 
                                 FontSize="28" 
                                 FontWeight="Light" 
                                 Foreground="{StaticResource TextPrimary}"
                                 Margin="0,4,0,0"/>
                        <TextBlock Text="Configure basic application behavior and synchronization options" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextMuted}"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Synchronization Card -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="Sync" 
                                                               Foreground="{StaticResource AccentBlue}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Synchronization" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Manage automatic hash database updates" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <CheckBox x:Name="checkBoxSyncHashes" 
                                    Content="Synchronization with CDTB" 
                                    Style="{StaticResource ModernCheckBox}"/>
                            <TextBlock Text="Automatically sync with the latest hash database from CDTB servers"
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="30,0,0,8" 
                                     TextWrapping="Wrap"/>

                            <CheckBox x:Name="checkBoxCheckJsonData" 
                                    Content="Check for files updates" 
                                    Style="{StaticResource ModernCheckBox}"/>
                            <TextBlock Text="Check for updates to JSON files and their differences."
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="30,0,0,8" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- File Management Card -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="FolderSync" 
                                                               Foreground="{StaticResource AccentGreen}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="File Management" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Control how hash files are handled during updates" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <CheckBox x:Name="checkBoxAutoCopy" 
                                    Content="Auto-replace outdated hashes" 
                                    Style="{StaticResource ModernCheckBox}"/>
                            <TextBlock Text="Automatically replace old hash files with newer versions"
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="30,0,0,8" 
                                     TextWrapping="Wrap"/>
                            
                            <CheckBox x:Name="checkBoxCreateBackUp" 
                                    Content="Create backups before replacing" 
                                    Style="{StaticResource ModernCheckBox}"/>
                            <TextBlock Text="Backup existing files to prevent data loss during updates"
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="30,0,0,8" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Scan Mode Card -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="Magnify" 
                                                               Foreground="{StaticResource TextPrimary}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Scan Mode" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Configure scanning behavior" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <CheckBox x:Name="checkBoxOnlyCheckDifferences" 
                                    Content="Scan-only mode (no downloads)" 
                                    Style="{StaticResource ModernCheckBox}"/>
                            <TextBlock Text="Only identify differences without downloading or modifying files"
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="30,0,0,0" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Hash Paths Panel -->
                <StackPanel x:Name="HashPathsPanel">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=NavHashes}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- Page Header -->
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Hash File Paths" 
                                 FontSize="28" 
                                 FontWeight="Light" 
                                 Foreground="{StaticResource TextPrimary}"
                                 Margin="0,4,0,0"/>
                        <TextBlock Text="Configure default directories for hash file storage" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextMuted}"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- New Hash Directory -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="FolderPlus" 
                                                               Foreground="{StaticResource AccentGreen}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="New Hash Files Directory" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource AccentGreen}"/>
                                    <TextBlock Text="Location where new hash files will be stored" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="textBoxNewHashPath" 
                                       Grid.Column="0"
                                       Height="36"
                                       IsReadOnly="True"
                                       Style="{StaticResource ModernTextBox}"
                                       Margin="0,0,12,0"/>
                                
                                <Button x:Name="btnBrowseNew" 
                                      Content="Browse"
                                      Grid.Column="1"
                                      Height="36"
                                      Width="100"
                                      Click="btnBrowseNew_Click"
                                      Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Old Hash Directory -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="FolderMinus" 
                                                               Foreground="{StaticResource AccentOrange}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Old Hash Files Directory" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource AccentOrange}"/>
                                    <TextBlock Text="Location where existing hash files are located" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="textBoxOldHashPath" 
                                       Grid.Column="0"
                                       Height="36"
                                       IsReadOnly="True"
                                       Style="{StaticResource ModernTextBox}"
                                       Margin="0,0,12,0"/>
                                
                                <Button x:Name="btnBrowseOld" 
                                      Content="Browse"
                                      Grid.Column="1"
                                      Height="36"
                                      Width="100"
                                      Click="btnBrowseOld_Click"
                                      Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Advanced Panel -->
                <StackPanel x:Name="AdvancedPanel">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=NavAdvanced}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- Page Header -->
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Advanced Settings" 
                                 FontSize="28" 
                                 FontWeight="Light" 
                                 Foreground="{StaticResource TextPrimary}"
                                 Margin="0,4,0,0"/>
                        <TextBlock Text="Performance and advanced configuration options" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextMuted}"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- JSON File Monitoring Card -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="FileDocument" 
                                                               Foreground="{StaticResource AccentBlue}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="JSON File Monitoring" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Manage the list of JSON files and directories to monitor for updates" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>

                            <ListBox x:Name="JsonFilesListBox"
                                     Background="{StaticResource DarkBackground}"
                                     BorderBrush="{StaticResource BorderColor}"
                                     Foreground="{StaticResource TextPrimary}"
                                     Height="250"
                                     Margin="0,0,0,12"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.Resources>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="true">
                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverColor}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverColor}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.Resources>
                            </ListBox>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnAddJsonFile" Content="Add" Style="{StaticResource ModernButton}" Width="80" Margin="0,0,8,0" Click="btnAddJsonFile_Click"/>
                                <Button x:Name="btnEditJsonFile" Content="Edit" Style="{StaticResource SecondaryButton}" Width="80" Margin="0,0,8,0" Click="btnEditJsonFile_Click"/>
                                <Button x:Name="btnRemoveJsonFile" Content="Remove" Style="{StaticResource DestructiveButton}" Width="80" Click="btnRemoveJsonFile_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Logs Panel -->
                <StackPanel x:Name="LogsPanel">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=NavLogs}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- Page Header -->
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Application Logs" 
                                 FontSize="28" 
                                 FontWeight="Light" 
                                 Foreground="{StaticResource TextPrimary}"
                                 Margin="0,4,0,0"/>
                        <TextBlock Text="View system messages and debug information" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextMuted}"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Logs Card -->
                    <Border Style="{StaticResource SettingsCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:MaterialIcon Kind="ClipboardText" 
                                                               Foreground="{StaticResource TextPrimary}"
                                                               FontSize="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="System Logs" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Real-time application activity and error logs" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Border Background="{StaticResource DarkBackground}"
                                  BorderBrush="{StaticResource BorderColor}"
                                  BorderThickness="1"
                                  CornerRadius="4">
                                <ScrollViewer x:Name="LogScrollViewer"
                                            Height="300"
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Disabled">
                                    <RichTextBox x:Name="richTextBoxLogs" 
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="{StaticResource TextPrimary}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               IsReadOnly="True"
                                               Padding="12">
                                    </RichTextBox>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="1" 
                  Background="{StaticResource CardBackground}"
                  BorderBrush="{StaticResource BorderColor}"
                  BorderThickness="0,1,0,0"
                  Padding="32,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Left">
                        <materialDesign:MaterialIcon Kind="LightbulbOn" 
                                                     FontSize="12" 
                                                     Margin="0,0,8,0" 
                                                     VerticalAlignment="Center"
                                                     Foreground="Gold"/>
                        <TextBlock Text="Changes aren´t applied immediately"
                                 Foreground="{StaticResource TextMuted}" 
                                 FontSize="12" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button x:Name="BtnResetDefaults" 
                              Content="Reset to Defaults" 
                              Height="36" 
                              Width="154"
                              Click="BtnResetDefaults_Click"
                              Style="{StaticResource SecondaryButton}" 
                              Margin="0,0,12,0"/>
                        
                        <Button x:Name="btnSave" 
                              Content="Save Changes" 
                              Height="36" 
                              Width="120"
                              Click="btnSave_Click"
                              Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>