<UserControl x:Class="PBE_AssetsDownloader.UI.HomeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsDownloader.UI" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             Background="#FF1E1E1E" FontFamily="Consolas, Courier New">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:MaterialIcon Kind="HomeVariant"
                                                 Height="58"
                                                 Width="58"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBlue}"
                                                 Grid.Column="0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="ASSETS DOWNLOADER" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Configure directories and start the download process" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>

                <Button x:Name="startButton" 
                        Grid.Column="1"
                        Content="▶️ Start Download" 
                        Height="44"
                        Width="160"
                        Style="{StaticResource ModernButton}"
                        Click="startButton_Click"
                        ToolTip="Start the download process"/>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernVerticalScrollBar}"/>
            </ScrollViewer.Resources>
            
            <StackPanel>
                <!-- Directory Configuration Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Header con icono y título -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                            <materialDesign:MaterialIcon Kind="Folder"
                                                         FontSize="20"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AccentBlue}"/>
                            <StackPanel>
                                <TextBlock Text="Directory Configuration" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Configure source and destination directories" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- New Hash Directory -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icono -->
                            <materialDesign:MaterialIcon Grid.Column="0" Kind="FolderPlus" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentGreen}"/>
                            <!-- Textos -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="New Hash Directory" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select the directory containing new hash files" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <!-- Cuadro alineado -->
                            <Grid Grid.Column="1" Margin="0,42,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="newHashesTextBox" 
                                         Grid.Column="0"
                                         Height="36"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Select the directory containing new hash files"/>
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Width="80" 
                                        Height="36"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="btnSelectNewHashesDirectory_Click"
                                        ToolTip="Browse for directory"/>
                            </Grid>
                        </Grid>

                        <!-- Old Hash Directory -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icono -->
                            <materialDesign:MaterialIcon Grid.Column="0" Kind="FolderMinus" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>
                            <!-- Textos -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="Old Hashes Directory" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select the directory containing old hash files" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <!-- Cuadro alineado -->
                            <Grid Grid.Column="1" Margin="0,42,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="oldHashesTextBox" 
                                         Grid.Column="0"
                                         Height="36"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Select the directory containing old hash files"/>
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Width="80" 
                                        Height="36"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="btnSelectOldHashesDirectory_Click"
                                        ToolTip="Browse for directory"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
