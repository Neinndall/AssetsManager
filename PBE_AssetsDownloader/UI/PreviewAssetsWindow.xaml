<Window x:Class="PBE_AssetsDownloader.UI.PreviewAssetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBE_AssetsDownloader.UI"
        xmlns:info="clr-namespace:PBE_AssetsDownloader.Info"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Assets Preview"
        Height="860" Width="1400" MinHeight="860" MinWidth="1400"
        Background="#FF1E1E1E"
        FontFamily="Consolas, Courier New"
        Closed="PreviewAssetsWindow_Closed">

    <Window.Resources>
        <!-- Estilo global para todos los ScrollViewer en esta ventana -->
        <Style TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="👁️" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                <StackPanel>
                    <TextBlock Text="ASSETS PREVIEW" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock Text="Browse and preview available assets" 
                               FontSize="14" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Assets List Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Assets List Header -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="📋" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                            <StackPanel>
                                <TextBlock Text="Assets List" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Select an asset to preview" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Search Box -->
                        <Grid>
                            <Border Background="{StaticResource DarkBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="6"/>
                            <TextBox x:Name="txtSearch"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12,10"
                                     Foreground="{StaticResource TextPrimary}"
                                     FontSize="14"
                                     TextChanged="TxtSearch_TextChanged"
                                     GotFocus="TxtSearch_GotFocus"
                                     LostFocus="TxtSearch_LostFocus"/>
                            <TextBlock Text="🔍 Search an asset..."
                                       x:Name="txtSearchPlaceholder"
                                       IsHitTestVisible="False"
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0">
                            </TextBlock>
                        </Grid>
                    </StackPanel>

                    <!-- Assets ListBox -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <ListBox x:Name="listBoxAssets"
                                 ItemsSource="{Binding DisplayedAssets}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="8"
                                 SelectionChanged="listBoxAssets_SelectionChanged"
                                 FontFamily="Consolas, Courier New" 
                                 FontSize="13"
                                 Foreground="{StaticResource TextPrimary}">
                            <ListBox.Resources>
                                <DataTemplate DataType="{x:Type info:AssetInfo}">
                                    <TextBlock Text="{Binding Name, StringFormat='  {0}'}" Margin="0,2"/>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type sys:String}">
                                    <TextBlock Text="{Binding}" FontWeight="Bold" Margin="0,4,0,2"/>
                                </DataTemplate>
                            </ListBox.Resources>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Border" 
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource CardBackground}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>
            </Border>

            <!-- Preview Area Card -->
            <Border Grid.Column="2" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="🖼️" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="Asset Preview" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Preview of the selected asset" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Preview Content -->
                    <Border Grid.Row="1"
                            x:Name="borderMediaPlayer"
                            Background="#FF0D1117"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <!-- Menu Context - Save as -->
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="MenuItem_Click_SaveAs">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Left"
                                                   Margin="-16,0,0,0">
                                            <TextBlock Text="💾" 
                                                      FontSize="18" 
                                                      Margin="0,0,12,0" 
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Text="Save as..." 
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                        <Grid>
                            <!-- No Data Message -->
                            <StackPanel x:Name="noDataPanel"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Visible">
                                <TextBlock Text="📂" 
                                          FontSize="48" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,16"
                                          Opacity="0.5"/>
                                <TextBlock x:Name="textBlockNoData"
                                          Text="NO ASSET SELECTED"
                                          FontFamily="Consolas, Courier New"
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource TextMuted}"
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"/>
                                <TextBlock Text="Select an asset from the list to preview"
                                          FontFamily="Consolas, Courier New"
                                          FontSize="14"
                                          Foreground="{StaticResource TextMuted}"
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"
                                          Margin="0,8,0,0"
                                          Opacity="0.7"/>
                            </StackPanel>
                            <!-- Media Content will be added here programmatically -->
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>