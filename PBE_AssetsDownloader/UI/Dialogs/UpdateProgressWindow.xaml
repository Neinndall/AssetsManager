<Window x:Class="PBE_AssetsDownloader.UI.Dialogs.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="Downloading Update" Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{StaticResource CardBackground}" CornerRadius="5" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource AccentBlue}" CornerRadius="5,5,0,0" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="Download" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="White"/>
                    <TextBlock Grid.Column="1" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontWeight="Bold" Margin="5,10" Foreground="White"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="15,20">
                <TextBlock x:Name="MessageTextBlock" Margin="0,0,0,10"
                           HorizontalAlignment="Center" TextWrapping="Wrap"
                           Text="Initializing download..." Foreground="{DynamicResource TextSecondary}"/>

                <ProgressBar x:Name="DownloadProgressBar" Height="20" Minimum="0" Maximum="100" HorizontalAlignment="Stretch" Style="{DynamicResource ModernProgressBar}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>