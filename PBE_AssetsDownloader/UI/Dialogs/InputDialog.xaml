<Window x:Class="PBE_AssetsDownloader.UI.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" ShowInTaskbar="False" 
        Background="{StaticResource SidebarBackground}" FontFamily="Consolas, Courier New">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="textBlockQuestion" Grid.Row="0" Margin="0,0,0,10" Foreground="White" TextWrapping="Wrap"/>
        <TextBox Name="textBoxInput" Grid.Row="1" MinWidth="300" Margin="0,0,0,10" Style="{StaticResource ModernTextBox}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnOk" Content="OK" Width="75" Margin="0,0,10,0" Click="btnOk_Click" Style="{StaticResource ModernButton}"/>
            <Button Name="btnCancel" Content="Cancel" Width="75" Click="btnCancel_Click" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>