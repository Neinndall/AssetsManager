<Window x:Class="PBE_AssetsDownloader.UI.JsonDiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="JSON Diff Viewer" Height="860" Width="1400" MinHeight="860" MinWidth="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        FontFamily="Consolas, Courier New">

    <Window.Resources>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="{StaticResource ScrollBarBackground}"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}"/>
                </Trigger>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8"/>
                    <Setter Property="Template" Value="{StaticResource HorizontalScrollBarTemplate}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="↔️" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                <StackPanel>
                    <TextBlock Text="JSON DIFFERENCE" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock Text="Compare old and new JSON file versions" 
                               FontSize="14" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Old JSON Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="📜" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="Old Version" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Content of the previous file" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <avalonEdit:TextEditor x:Name="OldJsonContent" 
                                             IsReadOnly="True" 
                                             Background="Transparent" 
                                             BorderThickness="0" 
                                             Foreground="{StaticResource TextPrimary}" 
                                             Padding="0,8"
                                             ShowLineNumbers="True"
                                             WordWrap="False"
                                             HorizontalScrollBarVisibility="Auto"
                                             VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Grid Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="12" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" 
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- New JSON Card -->
            <Border Grid.Column="2" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="✨" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="New Version" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Content of the updated file" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <avalonEdit:TextEditor x:Name="NewJsonContent" 
                                             IsReadOnly="True" 
                                             Background="Transparent" 
                                             BorderThickness="0" 
                                             Foreground="{StaticResource TextPrimary}" 
                                             Padding="0,8"
                                             ShowLineNumbers="True"
                                             WordWrap="False"
                                             HorizontalScrollBarVisibility="Auto"
                                             VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>