<Window x:Class="PBE_AssetsDownloader.UI.JsonDiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="JSON Diff Viewer" Height="960" Width="1500" MinHeight="960" MinWidth="1500"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        FontFamily="Consolas, Courier New">

    <Window.Resources>
        <Style x:Key="NavigationButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <materialDesign:MaterialIcon Kind="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="{StaticResource ScrollBarBackground}"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}"/>
                </Trigger>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8"/>
                    <Setter Property="Template" Value="{StaticResource HorizontalScrollBarTemplate}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="↔️" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <StackPanel>
                        <TextBlock Text="JSON DIFFERENCE"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"/>
                        <TextBlock Text="Compare old and new JSON file versions"
                                   FontSize="14"
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="2" 
                        Background="{StaticResource SidebarBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="PreviousDiffButton" 
                                Click="PreviousDiffButton_Click" 
                                Style="{StaticResource NavigationButton}"
                                Content="ArrowUp">
                            <Button.ToolTip>
                                <ToolTip Content="Go to previous difference"/>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="NextDiffButton" 
                                Margin="5,0,0,0"
                                Click="NextDiffButton_Click" 
                                Style="{StaticResource NavigationButton}"
                                Content="ArrowDown">
                            <Button.ToolTip>
                                <ToolTip Content="Go to next difference"/>
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <!-- Old JSON Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="📜" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="Old Version"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Content of the previous file"
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <avalonEdit:TextEditor x:Name="OldJsonContent"
                                             IsReadOnly="True"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="{StaticResource TextPrimary}"
                                             Padding="0,8"
                                             ShowLineNumbers="True"
                                             WordWrap="False"
                                             HorizontalScrollBarVisibility="Auto"
                                             VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Grid Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="12"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- New JSON Card -->
            <Border Grid.Column="2" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="✨" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="New Version"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Content of the updated file"
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <avalonEdit:TextEditor x:Name="NewJsonContent"
                                             IsReadOnly="True"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="{StaticResource TextPrimary}"
                                             Padding="0,8"
                                             ShowLineNumbers="True"
                                             WordWrap="False"
                                             HorizontalScrollBarVisibility="Auto"
                                             VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Grid Splitter for Navigation Panel -->
            <GridSplitter Grid.Column="3"
                          Width="12"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- Navigation Panel -->
            <Border Grid.Column="4" Style="{StaticResource SettingsCard}" Padding="8">
                <Grid x:Name="NavigationGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Old Diff Navigation -->
                    <Canvas x:Name="OldNavigationPanel" Grid.Column="0" Background="{StaticResource DarkBackground}" ClipToBounds="True">
                        <Canvas.ToolTip>
                            <ToolTip Background="{StaticResource CardBackground}" Foreground="{StaticResource TextPrimary}">
                                <StackPanel>
                                    <TextBlock Text="Old Version Navigation" FontWeight="Bold"/>
                                    <TextBlock Text="Click or drag to scroll"/>
                                </StackPanel>
                            </ToolTip>
                        </Canvas.ToolTip>
                    </Canvas>

                    <!-- New Diff Navigation -->
                    <Canvas x:Name="NewNavigationPanel" Grid.Column="1" Background="{StaticResource DarkBackground}" ClipToBounds="True">
                        <Canvas.ToolTip>
                            <ToolTip Background="{StaticResource CardBackground}" Foreground="{StaticResource TextPrimary}">
                                <StackPanel>
                                    <TextBlock Text="New Version Navigation" FontWeight="Bold"/>
                                    <TextBlock Text="Click or drag to scroll"/>
                                </StackPanel>
                            </ToolTip>
                        </Canvas.ToolTip>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>