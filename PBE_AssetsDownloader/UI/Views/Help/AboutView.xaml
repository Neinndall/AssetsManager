<UserControl x:Class="PBE_AssetsDownloader.UI.Views.Help.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="About"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="Information about the application"
                       FontSize="14"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Description Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Information" 
                                               Foreground="{StaticResource AccentBlue}"
                                               FontSize="20" 
                                               Margin="0,0,12,0" 
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Description"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="General information about the application" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="This app is designed to automatically download and manage new assets from League of Legends PBE server updates. It helps content creators and developers stay up-to-date with the latest changes and additions to the game."
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Key Features Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Star"
                                               Foreground="Gold"
                                               FontSize="20" 
                                               Margin="0,0,12,0" 
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Key Features"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Discover the main functionalities of the application" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Automatic detection of new PBE updates."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Downloads and organizes new game assets."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Supports synchronization with CDTB."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Auto-copy functionality for hash files."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Back-Ups for old hash files."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Asset preview before downloading."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Built-in player for video files (.webm, .ogg) and audio."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  JSON file comparison tool."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  History tracking for JSON file differences."/>
                <TextBlock Margin="0,4" FontSize="13" Foreground="{StaticResource TextPrimary}" Text="•  Manually download assets from other days with differences text files."/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>