<UserControl x:Class="PBE_AssetsDownloader.UI.Views.Settings.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <x:Array x:Key="UpdateFrequencies" Type="{x:Type System:Int32}">
            <System:Int32>1</System:Int32>
            <System:Int32>5</System:Int32>
            <System:Int32>10</System:Int32>
            <System:Int32>15</System:Int32>
            <System:Int32>30</System:Int32>
        </x:Array>
    </UserControl.Resources>

    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="General Settings" 
                         FontSize="28" 
                         FontWeight="Light" 
                         Foreground="{StaticResource TextPrimary}"
                         Margin="0,4,0,0"/>
            <TextBlock Text="Configure basic application behavior and synchronization options" 
                         FontSize="14" 
                         Foreground="{StaticResource TextMuted}"
                         Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Synchronization Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Sync" 
                                                   Foreground="{StaticResource AccentBlue}"
                                                   FontSize="20" 
                                                   Margin="0,0,12,0" 
                                                   VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Synchronization" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Manage automatic hash database updates" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                
                <CheckBox x:Name="checkBoxSyncHashes" 
                        Content="Synchronization with CDTB" 
                        Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Automatically sync with the latest hash database from CDTB servers"
                         Foreground="{StaticResource TextMuted}" 
                         FontSize="12" 
                         Margin="30,0,0,8" 
                         TextWrapping="Wrap"/>

                <CheckBox x:Name="checkBoxCheckJsonData" 
                        Content="Check for files updates" 
                        Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Check for updates to JSON files and their differences."
                         Foreground="{StaticResource TextMuted}" 
                         FontSize="12" 
                         Margin="30,0,0,8" 
                         TextWrapping="Wrap"/>

                <CheckBox x:Name="checkBoxEnableBackgroundUpdates" 
                        Content="Enable background updates" 
                        Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Periodically check for updates while the application is running."
                         Foreground="{StaticResource TextMuted}" 
                         FontSize="12" 
                         Margin="30,0,0,8" 
                         TextWrapping="Wrap"/>

                <!-- Frequency Selector - Visible only when background updates are enabled -->
                <StackPanel Margin="30,5,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=checkBoxEnableBackgroundUpdates}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Update check frequency:" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" 
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="comboBoxUpdateFrequency" 
                              Width="150" 
                              HorizontalAlignment="Left"
                              Style="{StaticResource ModernComboBox}"
                              ItemsSource="{StaticResource UpdateFrequencies}"/>
                </StackPanel>

                <CheckBox x:Name="checkBoxEnableDiffHistory"
                          Content="Enable Difference History"
                          Margin="0,15,0,0"
                          Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Save a history of all JSON file differences detected during updates."
                         Foreground="{StaticResource TextMuted}"
                         FontSize="12"
                         Margin="30,0,0,8"
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- File Management Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="FolderSync" 
                                                   Foreground="{StaticResource AccentGreen}"
                                                   FontSize="20" 
                                                   Margin="0,0,12,0" 
                                                   VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="File Management" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Control how hash files are handled during updates" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                
                <CheckBox x:Name="checkBoxAutoCopy" 
                        Content="Auto-replace outdated hashes" 
                        Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Automatically replace old hash files with newer versions"
                         Foreground="{StaticResource TextMuted}" 
                         FontSize="12" 
                         Margin="30,0,0,8" 
                         TextWrapping="Wrap"/>
                
                <CheckBox x:Name="checkBoxCreateBackUp" 
                        Content="Create backups before replacing" 
                        Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Backup existing files to prevent data loss during updates"
                         Foreground="{StaticResource TextMuted}" 
                         FontSize="12" 
                         Margin="30,0,0,8" 
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Scan Mode Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Magnify" 
                                                   Foreground="{StaticResource TextPrimary}"
                                                   FontSize="20" 
                                                   Margin="0,0,12,0" 
                                                   VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Scan Mode" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Configure scanning behavior" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                
                <CheckBox x:Name="checkBoxOnlyCheckDifferences" 
                        Content="Scan-only mode (no downloads)" 
                        Style="{StaticResource ModernCheckBox}"/>
                <TextBlock Text="Only identify differences without downloading or modifying files"
                         Foreground="{StaticResource TextMuted}" 
                         FontSize="12" 
                         Margin="30,0,0,0" 
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>