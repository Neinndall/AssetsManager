<UserControl x:Class="PBE_AssetsManager.Views.ExportWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsManager.Views"
             xmlns:export="clr-namespace:PBE_AssetsManager.Views.Export"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="Consolas, Courier New">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icono grande -->
                    <materialDesign:MaterialIcon Kind="Export"
                                                 Height="54"
                                                 Width="54"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBlue}"
                                                 Grid.Column="0"/>

                    <!-- Título + Subtítulo -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="EXPORT" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Filter, preview and download specific assets using the resources folder."
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <StackPanel>
                <export:DirectoryConfigControl x:Name="DirectoryConfig"/>
                <export:FilterConfigControl x:Name="FilterConfig"/>

                <!-- ACTIONS CARD -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Header con icono y título -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                            <materialDesign:MaterialIcon Kind="Flash" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>
                            <StackPanel>
                                <TextBlock Text="Actions" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Preview or download the selected assets" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="btnPreviewAssets" 
                                    Content="🔍 Preview Assets" 
                                    Height="36"
                                    Width="160"
                                    Margin="0,0,16,0"
                                    Style="{StaticResource ModernButton}"
                                    Click="btnPreviewAssets_Click"
                                    ToolTip="Preview selected assets before download"/>

                            <Button x:Name="BtnDownloadSelectedAssets" 
                                    Content="⬇️ Download Assets" 
                                    Height="36"
                                    Width="160"
                                    Style="{StaticResource ModernButton}"
                                    Click="BtnDownloadSelectedAssets_Click"
                                    ToolTip="Download the selected assets"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>