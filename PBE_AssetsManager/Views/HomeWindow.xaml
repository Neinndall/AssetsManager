<UserControl x:Class="PBE_AssetsManager.Views.HomeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsManager.Views" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:homeControls="clr-namespace:PBE_AssetsManager.Views.Controls.Home"
             mc:Ignorable="d" FontFamily="Consolas, Courier New">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:MaterialIcon Kind="HomeVariant"
                                                 Height="54"
                                                 Width="54"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Grid.Column="0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="HOME" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Download assets by adding the hash directories."
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <StackPanel>
                <!-- Directory Configuration Header Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:MaterialIcon Kind="FolderSettingsOutline" 
                                                   FontSize="20" 
                                                   Foreground="{StaticResource AccentBrush}"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Directory Configuration" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Configure source and destination directories for hashes" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Content Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,15">
                    <homeControls:HomeControl x:Name="HomeControl"/>
                </Border>

                <!-- Actions Header Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <materialDesign:MaterialIcon Kind="Flash" 
                                                       FontSize="20" 
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Actions" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Start the asset download process" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Button x:Name="startButton" 
                                Grid.Column="1"
                                Content="▶️ Start Download" 
                                Height="36"
                                Width="150"
                                Style="{StaticResource ModernButton}"
                                Click="startButton_Click"
                                ToolTip="Start the download process"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>