<UserControl x:Class="PBE_AssetsManager.Views.HomeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsManager.Views" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:homeControls="clr-namespace:PBE_AssetsManager.Views.Controls.Home"
             mc:Ignorable="d" FontFamily="Consolas, Courier New">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:MaterialIcon Kind="HomeVariant"
                                                 Height="54"
                                                 Width="54"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBlue}"
                                                 Grid.Column="0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="HOME" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Download assets by adding the hash directories."
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            
            <StackPanel>
                <!-- Directory Configuration Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Header con icono y tÃ­tulo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                            <materialDesign:MaterialIcon Kind="Folder"
                                                         FontSize="20"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AccentBlue}"/>
                            <StackPanel>
                                <TextBlock Text="Directory Configuration" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Configure source and destination directories" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <homeControls:DirectorySelectionControl x:Name="DirectorySelection"/>

                        <homeControls:HomeActionsControl x:Name="ActionsControl"/>
                        
                    </StackPanel>
                </Border>

                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>