<Window x:Class="PBE_AssetsManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBE_AssetsManager.Views"
        xmlns:controls="clr-namespace:PBE_AssetsManager.Views.Controls"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="PBE_AssetsManager"
        Width="950" Height="750" 
        MinWidth="950" MinHeight="750" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SidebarBackground}"
        FontFamily="Consolas, Courier New">

    <Grid>
        <!-- Main Layout Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <controls:SidebarView x:Name="Sidebar"
                                  Grid.Column="0"/>

            <!-- Main Content Area and Logger -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="160" MinHeight="38"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="0">
                    <ContentControl x:Name="MainContentArea"
                                    Background="Transparent"/>
                </Border>

                <GridSplitter Grid.Row="1"
                              Height="6" HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="Transparent"
                              Cursor="SizeNS"
                              ResizeDirection="Rows"
                              ResizeBehavior="PreviousAndNext">
                    <GridSplitter.Template>
                        <ControlTemplate TargetType="GridSplitter">
                            <Grid Background="Transparent">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Ellipse Width="3" Height="3" Fill="{StaticResource BorderColor}" Margin="1,0"/>
                                    <Ellipse Width="3" Height="3" Fill="{StaticResource BorderColor}" Margin="1,0"/>
                                    <Ellipse Width="3" Height="3" Fill="{StaticResource BorderColor}" Margin="1,0"/>
                                    <Ellipse Width="3" Height="3" Fill="{StaticResource BorderColor}" Margin="1,0"/>
                                    <Ellipse Width="3" Height="3" Fill="{StaticResource BorderColor}" Margin="1,0"/>
                                </StackPanel>
                            </Grid>
                        </ControlTemplate>
                    </GridSplitter.Template>
                </GridSplitter>

                <!-- LogView -->
                <Border Grid.Row="2"
                    Background="{StaticResource SidebarBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,1,0,0"
                    Padding="0">
                <controls:LogView x:Name="LogView"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Update Notification Icon -->
        <materialIcons:MaterialIcon x:Name="UpdateNotificationIcon"
                                    Kind="AlertCircle"
                                    Width="24"
                                    Height="24"
                                    Foreground="LightSkyBlue"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,30,39"
                                    ToolTip=""
                                    Visibility="Collapsed"
                                    MouseLeftButtonDown="UpdateNotificationIcon_MouseLeftButtonDown">
            <materialIcons:MaterialIcon.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
            </materialIcons:MaterialIcon.Effect>
        </materialIcons:MaterialIcon>

        <!-- Progress Icon -->
        <Button x:Name="ProgressSummaryButton"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Background="Transparent" BorderThickness="0"
                Visibility="Collapsed"
                Padding="0" Margin="0,0,30,10"
                Width="24" Height="24"
                ToolTip="">
            <materialIcons:MaterialIcon x:Name="ProgressIcon" Kind="Loading"
                                        Width="16" Height="16"
                                        Foreground="{StaticResource AccentBrush}"
                                        VerticalAlignment="Center">
                <materialIcons:MaterialIcon.RenderTransform>
                    <RotateTransform CenterX="8" CenterY="8"/>
                </materialIcons:MaterialIcon.RenderTransform>
            </materialIcons:MaterialIcon>
        </Button>
    </Grid>
</Window>