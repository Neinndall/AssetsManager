<UserControl x:Class="PBE_AssetsManager.Views.MonitorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views"
             xmlns:monitorControls="clr-namespace:PBE_AssetsManager.Views.Controls.Monitor"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:MaterialIcon Kind="Radar"
                                             Height="54"
                                             Width="54"
                                             Margin="0,0,10,0"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentPurple}"
                                             Grid.Column="0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="MONITOR CENTER" 
                               FontSize="26" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentPurple}"
                               Margin="0,2,0,0"/>
                    <TextBlock Text="Monitor remote files and asset updates."
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <TabControl Style="{StaticResource CustomTabControlStyle}">
                <TabItem Header="File Watcher" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:FileWatcherControl x:Name="FileWatcherControl"/>
                </TabItem>
                <TabItem Header="History" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:HistoryViewControl x:Name="HistoryViewControl"/>
                </TabItem>
                <TabItem Header="Asset Tracker" Style="{StaticResource CustomTabItemStyle}">
                    <Grid Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:MaterialIcon Kind="Tools" FontSize="24" Foreground="{StaticResource TextMuted}" Margin="0,0,10,0"/>
                            <TextBlock Text="Future home for the Asset Tracker feature. Soon..." 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</UserControl>