<Window x:Class="PBE_AssetsManager.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        Title="Help" Height="740" Width="980"
        MinHeight="740" MinWidth="980"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#FF1E1E1E"
        FontFamily="Consolas, Courier New">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{StaticResource SidebarBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource CardBackground}" 
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="20,24">
                    <StackPanel>
                        <TextBlock Text="🔧 HELP" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="{StaticResource AccentBlue}"/>
                        <TextBlock Text="Support and Information" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextMuted}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <StackPanel Margin="0,16,0,0">
                    <RadioButton x:Name="NavAbout" 
                               Content="About" 
                               Tag="ℹ️"
                               GroupName="HelpNavigation" 
                               IsChecked="True" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavChangelogs" 
                               Content="Changelogs" 
                               Tag="📜"
                               GroupName="HelpNavigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavBugsReport" 
                               Content="Bug Reports" 
                               Tag="🐛"
                               GroupName="HelpNavigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                    
                    <RadioButton x:Name="NavUpdates" 
                               Content="Updates" 
                               Tag="🔄"
                               GroupName="HelpNavigation" 
                               Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="0" 
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="32,24">
                <ContentControl x:Name="HelpContentArea"/>
            </ScrollViewer>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="1" 
                  Background="{StaticResource CardBackground}"
                  BorderBrush="{StaticResource BorderColor}"
                  BorderThickness="0,1,0,0"
                  Padding="32,16">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Left">
                        <materialDesign:MaterialIcon Kind="LightbulbOn" 
                                                     FontSize="12" 
                                                     Margin="0,0,8,0" 
                                                     VerticalAlignment="Center"
                                                     Foreground="Gold"/>
                        <TextBlock Text="Need more help?"
                                 Foreground="{StaticResource TextMuted}" 
                                 FontSize="12" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Aun no se implementará nada de esto lo ponemos collapsed -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button x:Name="BtnOpenDocs" 
                              Content="Documentation" 
                              Height="36" 
                              Width="140"
                              Style="{StaticResource SecondaryButton}" 
                              Margin="0,0,12,0"
                              Visibility="Collapsed"/>
                        
                        <Button x:Name="btnClose" 
                              Content="Close" 
                              Height="36" 
                              Width="80"
                              Click="buttonClose_Click"
                              Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>