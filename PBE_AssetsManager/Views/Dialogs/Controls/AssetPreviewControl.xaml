<UserControl x:Class="PBE_AssetsManager.Views.Dialogs.Controls.AssetPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Dialogs.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <Border Style="{StaticResource SettingsCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Preview Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="🖼️" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                <StackPanel>
                    <TextBlock Text="Asset Preview" 
                                 FontSize="16" 
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Preview of the selected asset" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>

            <!-- Preview Content -->
            <Border Grid.Row="1"
                    x:Name="borderMediaPlayer"
                    Background="#FF0D1117"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="6">
                <!-- Menu Context - Save as -->
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="MenuItem_Click_SaveAs">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Left"
                                           Margin="-16,0,0,0">
                                    <TextBlock Text="💾" 
                                              FontSize="18" 
                                              Margin="0,0,12,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="Save as..." 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <!-- No Data Message -->
                    <StackPanel x:Name="noDataPanel"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Visible">
                    <!-- Icono de carpeta amarillo usando Material.Icons.WPF -->
                    <materialIcons:MaterialIcon Kind="Folder"
                                                Width="48"
                                                Height="48"
                                                Foreground="Gold"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,16"
                                                Opacity="0.5"/>
                        <TextBlock x:Name="textBlockNoData"
                                  Text="NO ASSET SELECTED"
                                  FontFamily="Consolas, Courier New"
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextMuted}"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"/>
                        <TextBlock Text="Select an asset from the list to preview"
                                  FontFamily="Consolas, Courier New"
                                  FontSize="14"
                                  Foreground="{StaticResource TextMuted}"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"
                                  Margin="0,8,0,0"
                                  Opacity="0.7"/>
                    </StackPanel>
                    <!-- Media Content will be added here programmatically -->
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>