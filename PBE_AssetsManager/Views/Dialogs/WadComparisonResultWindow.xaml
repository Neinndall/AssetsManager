<Window x:Class="PBE_AssetsManager.Views.Dialogs.WadComparisonResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PBE_AssetsManager.Views.Dialogs"
        xmlns:controls="clr-namespace:PBE_AssetsManager.Views.Dialogs.Controls"
        xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="WAD Comparison Results" Height="800" Width="1400"
        Background="{StaticResource SidebarBackground}"
        FontFamily="Consolas, Courier New"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:MaterialIcon Kind="Compare" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                    <StackPanel>
                        <TextBlock Text="WAD COMPARISON RESULTS" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="summaryTextBlock"
                                   Text="Loading results..." 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="reloadHashesButton"
                            Content="Reload Hashes" 
                            Height="36"
                            Padding="16,0"
                            Style="{StaticResource ModernButton}"
                            Click="ReloadHashesButton_Click"
                            ToolTip="Reloads hashes from the default application path to resolve unknown paths and refresh the tree."/>
                    <Button x:Name="saveButton"
                            Content="Save Results" 
                            Height="36"
                            Padding="16,0"
                            Margin="12,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="SaveButton_Click"
                            ToolTip="Save the full list of differences to a JSON file"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <controls:WadResultsTreeControl x:Name="ResultsTree" Grid.Column="0"
                                              SelectedItemChanged="ResultsTree_SelectedItemChanged"
                                              SearchTextChanged="SearchTextBox_TextChanged"
                                              WadContextMenuOpening="ResultsTree_ContextMenuOpening"
                                              ViewDifferencesClick="ViewDifferences_Click"
                                              DownloadMenuItemClick="DownloadMenuItem_Click"/>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

            <controls:WadDiffDetailsControl x:Name="DiffDetails" Grid.Column="2"/>

        </Grid>
    </Grid>
</Window>