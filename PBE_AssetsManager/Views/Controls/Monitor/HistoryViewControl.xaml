<UserControl x:Class="PBE_AssetsManager.Views.Controls.Monitor.HistoryViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:PBE_AssetsManager.Views.Converters"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header con tÃ­tulo -->
        <Border Grid.Row="0" 
                Style="{StaticResource SettingsCard}"
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <materialDesign:MaterialIcon Kind="History" 
                                           FontSize="20" 
                                           Foreground="{StaticResource AccentBlue}"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="File History" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Review past JSON file comparisons" 
                              FontSize="12" 
                              Foreground="{StaticResource TextMuted}"
                              Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Manual Header -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource FirstModernGridViewColumnHeader}">
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <materialDesign:MaterialIcon Kind="FileDocument" Style="{StaticResource HeaderIconStyle}"/>
                    <TextBlock Text="FileName" Style="{StaticResource HeaderTextStyle}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource LastModernGridViewColumnHeader}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:MaterialIcon Kind="Clock" Style="{StaticResource HeaderIconStyle}"/>
                    <TextBlock Text="Date" Style="{StaticResource HeaderTextStyle}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ListView sin GridView -->
        <ListView x:Name="DiffHistoryListView" 
                  Grid.Row="2"
                  Margin="0,-1,0,0"
                  Style="{StaticResource ModernListView}"
                  ItemContainerStyle="{StaticResource ModernListViewItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65*"/>
                            <ColumnDefinition Width="35*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="{Binding FileName}" 
                                   Style="{StaticResource CellTextStyle}"
                                   FontWeight="Medium"
                                   FontSize="11"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding Timestamp, StringFormat='dd/MM/yyyy HH:mm:ss'}" 
                                   Style="{StaticResource CellTextStyle}"
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding FilePath}" 
                                   Style="{StaticResource CellTextStyle}"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="9"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Panel de botones -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0">
            <Button x:Name="btnViewDiff" 
                    Content="View Differences" 
                    Style="{StaticResource SecondaryButton}" 
                    Width="140" 
                    Margin="0,0,8,0" 
                    Click="btnViewDiff_Click"/>
            <Button x:Name="btnRemoveSelected" 
                    Content="Remove" 
                    Style="{StaticResource DestructiveButton}" 
                    Width="100" 
                    Click="btnRemoveSelected_Click"/>
        </StackPanel>
    </Grid>
</UserControl>