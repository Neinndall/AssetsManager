
<UserControl x:Class="PBE_AssetsManager.Views.Controls.Monitor.UpdateVersionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Monitor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="League of Legends Version Fetcher" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Click the button below to fetch the latest version information from Riot's servers." TextWrapping="Wrap" Margin="0,0,0,20"/>
            <Button Content="Fetch Versions" Click="FetchVersions_Click" Style="{StaticResource ModernButton}" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
