<UserControl x:Class="PBE_AssetsManager.Views.Controls.JsonDiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Background="#AA000000" CornerRadius="6">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:MaterialIcon x:Name="ProgressIcon" Kind="Loading" Width="32" Height="32" Foreground="White"/>
                <TextBlock Text="Comparing files..." Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Diff Grid -->
        <Grid x:Name="DiffGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="OldFileNameLabel" Grid.Column="0" Text="Old File" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="PreviousDiffButton" Content="Previous" Click="PreviousDiffButton_Click" Style="{StaticResource SecondaryButton}" Margin="4,0"/>
                        <Button x:Name="NextDiffButton" Content="Next" Click="NextDiffButton_Click" Style="{StaticResource SecondaryButton}" Margin="4,0"/>
                        <CheckBox x:Name="WordLevelDiffButton" Content="Word-level diff" IsChecked="False" Click="WordLevelDiffButton_Click" VerticalAlignment="Center" Margin="12,0,4,0" Style="{StaticResource ModernCheckBox}"/>
                        <CheckBox x:Name="HideUnchangedButton" Content="Show only differences" IsChecked="False" Click="HideUnchangedButton_Click" VerticalAlignment="Center" Margin="4,0" Style="{StaticResource ModernCheckBox}"/>
                    </StackPanel>
                    <TextBlock x:Name="NewFileNameLabel" Grid.Column="2" Text="New File" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <avalonedit:TextEditor x:Name="OldJsonContent" Grid.Column="0"/>
                <Canvas x:Name="OldNavigationPanel" Grid.Column="1" Width="12" Background="{StaticResource DarkBackground}"/>
                <avalonedit:TextEditor x:Name="NewJsonContent" Grid.Column="2"/>
                <Canvas x:Name="NewNavigationPanel" Grid.Column="3" Width="12" Background="{StaticResource DarkBackground}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>