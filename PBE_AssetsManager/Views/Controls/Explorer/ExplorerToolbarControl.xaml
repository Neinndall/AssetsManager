<UserControl x:Class="PBE_AssetsManager.Views.Controls.Explorer.ExplorerToolbarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Style for the search ToggleButton, specific to this control as it sets the icon content -->
            <Style x:Key="SearchToggleStyle" TargetType="ToggleButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="Transparent" Padding="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Content">
                    <Setter.Value>
                        <materialIcons:MaterialIcon Kind="Magnify" Width="18" Height="18"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    </Trigger>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Content">
                            <Setter.Value>
                                <materialIcons:MaterialIcon Kind="Close" Width="18" Height="18"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Action Buttons on the left -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="CollapseAllButton" Style="{StaticResource TransparentIconButton}" ToolTip="Collapse All" Margin="5,0" Click="CollapseAllButton_Click">
                <materialIcons:MaterialIcon Kind="ArrowCollapseAll" Width="18" Height="18"/>
            </Button>
        </StackPanel>

        <!-- Search controls on the right -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <ToggleButton x:Name="SearchToggleButton" Style="{StaticResource SearchToggleStyle}" Margin="5,0"/>
            <Grid>
                <TextBox x:Name="SearchTextBox" 
                         Style="{StaticResource AnimatedSearchBoxStyle}" 
                         Tag="{Binding IsChecked, ElementName=SearchToggleButton}"
                         TextChanged="SearchTextBox_TextChanged"/>
                <TextBlock Text="Filter..." 
                           Foreground="{StaticResource TextMuted}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Text, ElementName=SearchTextBox}" Value=""/>
                                        <Condition Binding="{Binding IsChecked, ElementName=SearchToggleButton}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>