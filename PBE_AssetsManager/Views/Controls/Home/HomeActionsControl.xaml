<UserControl x:Class="PBE_AssetsManager.Views.Controls.Home.HomeActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Actions -->
        <Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:MaterialIcon Grid.Column="0" Kind="Flash" 
                                         FontSize="20" 
                                         Margin="0,0,12,0" 
                                         VerticalAlignment="Top"
                                         Foreground="{StaticResource AccentOrange}"/>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Actions" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Start the asset download process" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,12"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="startButton" 
                                        Content="▶️ Start Download" 
                                        Height="36"
                                        Width="150"
                                        Style="{StaticResource ModernButton}"
                                        Click="startButton_Click"
                                        ToolTip="Start the download process"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
