<UserControl x:Class="PBE_AssetsManager.Views.Controls.Home.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- New Hash Directory -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Icono -->
            <materialDesign:MaterialIcon Grid.Column="0" Kind="FolderPlus" 
                                         FontSize="20" 
                                         Margin="0,0,12,0" 
                                         VerticalAlignment="Top"
                                         Foreground="{StaticResource AccentGreen}"/>
            <!-- Textos -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock Text="New Hash Directory" 
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Select the directory containing new hash files" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
            </StackPanel>
            <!-- Cuadro alineado -->
            <Grid Grid.Column="1" Margin="0,42,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="newHashesTextBox" 
                                         Grid.Column="0"
                                         Height="36"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Select the directory containing new hash files"/>
                <Button Grid.Column="2"
                                        Content="Browse"
                                        Width="80" 
                                        Height="36"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="btnSelectNewHashesDirectory_Click"
                                        ToolTip="Browse for directory"/>
            </Grid>
        </Grid>

        <!-- Old Hash Directory -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Icono -->
            <materialDesign:MaterialIcon Grid.Column="0" Kind="FolderMinus" 
                                                         FontSize="20" 
                                                         Margin="0,0,12,0" 
                                                         VerticalAlignment="Top"
                                                         Foreground="{StaticResource AccentOrange}"/>
            <!-- Textos -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock Text="Old Hashes Directory" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Select the directory containing old hash files" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}"
                                           Margin="0,2,0,0"/>
            </StackPanel>
            <!-- Cuadro alineado -->
            <Grid Grid.Column="1" Margin="0,42,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="oldHashesTextBox" 
                                         Grid.Column="0"
                                         Height="36"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         ToolTip="Select the directory containing old hash files"/>
                <Button Grid.Column="2"
                                        Content="Browse"
                                        Width="80" 
                                        Height="36"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="btnSelectOldHashesDirectory_Click"
                                        ToolTip="Browse for directory"/>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>