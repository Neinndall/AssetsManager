<UserControl x:Class="PBE_AssetsManager.Views.Controls.Comparator.JsonComparisonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Comparator"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Consolas, Courier New">
    <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
        <StackPanel>
            <!-- Header con icono y tÃ­tulo -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                <materialDesign:MaterialIcon Kind="FileCompare"
                                             FontSize="20"
                                             Margin="0,0,12,0"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBlue}"/>
                <StackPanel>
                    <TextBlock Text="Manual JSON Comparison" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Select two JSON files to compare" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>

            <!-- New File -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:MaterialIcon Grid.Column="0" Kind="FilePlusOutline" 
                                             FontSize="20" 
                                             Margin="0,0,12,0" 
                                             VerticalAlignment="Top"
                                             Foreground="{StaticResource AccentGreen}"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="New File" 
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Select the new JSON file to compare" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="0,42,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="newFileTextBox" 
                             Grid.Column="0"
                             Height="36"
                             IsReadOnly="True"
                             Style="{StaticResource ModernTextBox}"/>
                    <Button Grid.Column="2"
                            Content="Browse"
                            Padding="16,0"
                            Height="36"
                            Style="{StaticResource SecondaryButton}"
                            Click="btnSelectNew_Click"/>
                </Grid>
            </Grid>

            <!-- Original File -->
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:MaterialIcon Grid.Column="0" Kind="FileDocumentOutline" 
                                             FontSize="20" 
                                             Margin="0,0,12,0" 
                                             VerticalAlignment="Top"
                                             Foreground="{StaticResource AccentOrange}"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="Old File" 
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Select the old JSON file to compare" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="0,42,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="originalFileTextBox" 
                             Grid.Column="0"
                             Height="36"
                             IsReadOnly="True"
                             Style="{StaticResource ModernTextBox}"/>
                    <Button Grid.Column="2"
                            Content="Browse"
                            Padding="16,0"
                            Height="36"
                            Style="{StaticResource SecondaryButton}"
                            Click="btnSelectOriginal_Click"/>
                </Grid>
            </Grid>

            <!-- Actions -->
            <Grid Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:MaterialIcon Grid.Column="0" Kind="Flash" 
                                             FontSize="20" 
                                             Margin="0,0,12,0" 
                                             VerticalAlignment="Top"
                                             Foreground="{StaticResource AccentOrange}"/>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Actions" 
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Compare the two selected files" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,2,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="compareButton" 
                            Content="Compare" 
                            Height="36"
                            Padding="36,0"
                            Style="{StaticResource ModernButton}"
                            Click="btnCompare_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>