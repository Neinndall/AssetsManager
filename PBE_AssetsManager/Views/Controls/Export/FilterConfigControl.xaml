<UserControl x:Class="PBE_AssetsManager.Views.Controls.Export.FilterConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Export"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Consolas, Courier New">
    <Border Style="{StaticResource SettingsCard}">
        <StackPanel>
            <!-- Header con icono y tÃ­tulo -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                <materialDesign:MaterialIcon Kind="FilterVariant"
                                             FontSize="20"
                                             Margin="0,0,12,0"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBrush}"/>
                <StackPanel>
                    <TextBlock Text="Filter Configuration" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Choose which asset types to include" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>

            <!-- Lista de CheckBoxes en horizontal -->
            <WrapPanel Margin="32,0,25,0">
                <CheckBox x:Name="chkAll"
                          Content="All"
                          IsChecked="True"
                          FontSize="14"
                          FontWeight="Medium"
                          Style="{StaticResource ModernCheckBox}"
                          Margin="0,0,15,0"/>
                <CheckBox x:Name="chkImages"
                          Content="Images"
                          Tag="Images"
                          FontSize="14"
                          Style="{StaticResource ModernCheckBox}"
                          Margin="0,0,15,0"/>
                <CheckBox x:Name="chkAudios"
                          Content="Audios"
                          Tag="Audios"
                          FontSize="14"
                          Style="{StaticResource ModernCheckBox}"
                          Margin="0,0,15,0"/>
                <CheckBox x:Name="chkPlugins"
                          Content="Plugins"
                          Tag="Plugins"
                          FontSize="14"
                          Style="{StaticResource ModernCheckBox}"
                          Margin="0,0,15,0"/>
                <CheckBox x:Name="chkGame"
                          Content="Game"
                          Tag="Game"
                          FontSize="14"
                          Style="{StaticResource ModernCheckBox}"
                          Margin="0,0,15,0"/>
            </WrapPanel>
        </StackPanel>
    </Border>
</UserControl>