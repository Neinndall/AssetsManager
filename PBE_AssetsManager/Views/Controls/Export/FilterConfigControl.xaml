<UserControl x:Class="PBE_AssetsManager.Views.Controls.Export.FilterConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBE_AssetsManager.Views.Controls.Export"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Consolas, Courier New">
    <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,24">
        <StackPanel>
            <!-- Header con icono y título -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                <materialDesign:MaterialIcon Kind="FilterVariant"
                                             FontSize="20"
                                             Margin="0,0,12,0"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBlue}"/>
                <StackPanel>
                    <TextBlock Text="Filter Configuration" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Choose which asset types to include" 
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>

            <!-- Asset Types Selection -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono alineado -->
                <materialDesign:MaterialIcon Grid.Column="0" Kind="Target"
                                             FontSize="20"
                                             Margin="0,2,12,0"
                                             VerticalAlignment="Top"
                                             Foreground="{StaticResource AccentGreen}"/>

                <!-- Contenido alineado -->
                <StackPanel Grid.Column="1">
                    <!-- Título y subtítulo -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Select Asset Types"
                                   FontWeight="Medium"
                                   FontSize="14"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Choose which asset types should be included in the export"
                                   FontSize="12"
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Lista de CheckBoxes dentro de un borde -->
                    <Border Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="15"
                            Margin="0,0,25,0">
                        <StackPanel>
                            <CheckBox x:Name="chkAll"
                                      Content="All"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Style="{StaticResource ModernCheckBox}"
                                      Margin="0,0,0,8"
                                      IsChecked="True"/>
                            <CheckBox x:Name="chkImages"
                                      Content="Images"
                                      Tag="Images"
                                      FontSize="14"
                                      Style="{StaticResource ModernCheckBox}"
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="chkAudios"
                                      Content="Audios"
                                      Tag="Audios"
                                      FontSize="14"
                                      Style="{StaticResource ModernCheckBox}"
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="chkPlugins"
                                      Content="Plugins"
                                      Tag="Plugins"
                                      FontSize="14"
                                      Style="{StaticResource ModernCheckBox}"
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="chkGame"
                                      Content="Game"
                                      Tag="Game"
                                      FontSize="14"
                                      Style="{StaticResource ModernCheckBox}"
                                      Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>