<UserControl x:Class="PBE_AssetsManager.UI.Views.Help.BugReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="Bug Reports" 
                         FontSize="28" 
                         FontWeight="Light" 
                         Foreground="{StaticResource TextPrimary}"
                         Margin="0,4,0,0"/>
            <TextBlock Text="Report issues and help improve the application" 
                         FontSize="14" 
                         Foreground="{StaticResource TextMuted}"
                         Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Bug Report Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Bug"
                                               Foreground="{StaticResource AccentOrange}"
                                               FontSize="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Report Issues" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource AccentOrange}"/>
                        <TextBlock Text="Help us improve by reporting bugs and issues" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                
                <TextBlock Text="Found a bug or experiencing unexpected behavior? Your feedback helps us improve the application for everyone."
                           Foreground="{StaticResource TextPrimary}" 
                           FontSize="13" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <Button x:Name="buttonReportBug" 
                        Content="Report Bug"
                        Height="36"
                        Width="140"
                        HorizontalAlignment="Left"
                        Click="buttonReportBug_Click"
                        Style="{StaticResource ModernButton}"/>
            </StackPanel>
        </Border>

        <!-- Tips Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="LightbulbOn"
                                               Foreground="Gold"
                                               FontSize="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Reporting Tips" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="How to write effective bug reports" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"
                           LineHeight="20">
                    When you click 'Report Bug', you will be taken to a GitHub form. Please be ready to provide the following details:
                    <LineBreak/><LineBreak/>
                    • <Run FontWeight="SemiBold">A clear description of the bug</Run> and the exact <Run FontWeight="SemiBold">steps to reproduce it</Run>.
                    <LineBreak/>
                    • What you <Run FontWeight="SemiBold">expected to happen</Run> versus what <Run FontWeight="SemiBold">actually occurred</Run>.
                    <LineBreak/>
                    • The <Run FontWeight="SemiBold">application version</Run> and your <Run FontWeight="SemiBold">operating system</Run>.
                    <LineBreak/>
                    • Relevant entries from the <Run FontWeight="SemiBold">log files</Run> (`logs` folder), especially if the application crashed.
                    <LineBreak/><LineBreak/>
                    Providing as much detail as possible will help us resolve the issue much faster.
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>