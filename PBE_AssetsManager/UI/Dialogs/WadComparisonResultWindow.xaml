<Window x:Class="PBE_AssetsManager.UI.Dialogs.WadComparisonResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PBE_AssetsManager.UI.Dialogs"
        xmlns:converters="clr-namespace:PBE_AssetsManager.UI.Converters"
        xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="WAD Comparison Results" Height="800" Width="1400"
        Background="{StaticResource SidebarBackground}"
        FontFamily="Consolas, Courier New"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:ChunkDiffTypeToIconConverter x:Key="DiffTypeToIconConverter"/>
        <converters:ChunkDiffTypeToBrushConverter x:Key="DiffTypeToBrushConverter"/>

        <HierarchicalDataTemplate x:Key="DiffItemTemplate" ItemsSource="{Binding Files}">
            <TextBlock Text="{Binding FileName}" />
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DiffTypeTemplate" ItemsSource="{Binding Diffs}" ItemTemplate="{StaticResource DiffItemTemplate}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:MaterialIcon Kind="{Binding Type, Converter={StaticResource DiffTypeToIconConverter}}" 
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0" 
                                             Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
                <TextBlock Text="{Binding TypeNameWithCount}" VerticalAlignment="Center" Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="WadGroupTemplate" ItemsSource="{Binding Types}" ItemTemplate="{StaticResource DiffTypeTemplate}">
            <TextBlock Text="{Binding WadNameWithCount}" FontWeight="Bold"/>
        </HierarchicalDataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:MaterialIcon Kind="Compare" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource AccentBlue}"/>
                    <StackPanel>
                        <TextBlock Text="WAD COMPARISON RESULTS" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"/>
                        <TextBlock x:Name="summaryTextBlock"
                                   Text="Loading results..." 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                <Button x:Name="saveButton"
                        Grid.Column="1"
                        Content="Save Results" 
                        Height="36"
                        Width="150"
                        Style="{StaticResource ModernButton}"
                        Click="SaveButton_Click"
                        ToolTip="Save the full list of differences to a JSON file"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Results TreeView Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:MaterialIcon Kind="FormatListGroup" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Differences" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>

                    <!-- Search Box -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Border Background="{StaticResource DarkBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="6"
                                SnapsToDevicePixels="True"/>
                        <TextBox x:Name="searchTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,8"
                                 Margin="2"
                                 Foreground="{StaticResource TextPrimary}"
                                 FontSize="14"
                                 CaretBrush="Transparent"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        <TextBlock Text="🔍 Search files..."
                                   x:Name="searchPlaceholder"
                                   IsHitTestVisible="False"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="14,0,0,0">
                        </TextBlock>
                    </Grid>

                    <Border Grid.Row="2"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <TreeView x:Name="resultsTreeView" 
                                  Style="{StaticResource ModernTreeView}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ItemTemplate="{StaticResource WadGroupTemplate}"
                                  SelectedItemChanged="ResultsTreeView_SelectedItemChanged">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}">
                                    <Setter Property="ContextMenu" Value="{x:Null}" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>
                    </Border>
                </Grid>
            </Border>

            <!-- Details Panel Card -->
            <Border Grid.Column="2" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <materialDesign:MaterialIcon Kind="FileDocumentOutline" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Difference Details" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>
                    
                    <Border Grid.Row="1" x:Name="detailsPanel"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            MinHeight="400">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- No Selection Message -->
                            <StackPanel x:Name="noSelectionPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0">
                                <materialDesign:MaterialIcon Kind="FileSearchOutline" Foreground="{StaticResource TextMuted}" Height="36" Width="36" HorizontalAlignment="Center"/>
                                <TextBlock Text="Select a difference from the list to view its details." Foreground="{StaticResource TextMuted}" Margin="0,10,0,0"/>
                            </StackPanel>
                            
                            <!-- Details Content -->
                            <StackPanel x:Name="detailsContentPanel" Visibility="Collapsed" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0">
                                
                                <!-- COMMON DETAILS -->
                                <StackPanel x:Name="pathPanel" Margin="0,0,0,12">
                                    <TextBlock Text="Path" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="pathTextBlock" 
                                               Foreground="{StaticResource TextPrimary}"
                                               FontSize="14"
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- RENAME-SPECIFIC -->
                                <StackPanel x:Name="renamedOldNamePanel" Visibility="Collapsed" Margin="0,0,0,12">
                                    <TextBlock Text="Old Name" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="renamedOldNameTextBlock" 
                                               Foreground="{StaticResource TextPrimary}"
                                               FontSize="14"
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel x:Name="renamedNewNamePanel" Visibility="Collapsed" Margin="0,0,0,12">
                                    <TextBlock Text="New Name" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="renamedNewNameTextBlock" 
                                               Foreground="{StaticResource TextPrimary}"
                                               FontSize="14"
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- GENERIC FILENAME -->
                                <StackPanel x:Name="genericFileNamePanel" Margin="0,0,0,12">
                                    <TextBlock Text="File Name" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="genericFileNameTextBlock" 
                                           Foreground="{StaticResource TextPrimary}"
                                           FontSize="14"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Change Type" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="changeTypeTextBlock" Foreground="{StaticResource TextPrimary}" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel x:Name="oldSizePanel" Margin="0,0,0,12">
                                    <TextBlock Text="Old Size" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="oldSizeTextBlock" Foreground="{StaticResource TextPrimary}" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel x:Name="newSizePanel" Margin="0,0,0,12">
                                    <TextBlock Text="New Size" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="newSizeTextBlock" Foreground="{StaticResource TextPrimary}" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="Source WAD" Foreground="{StaticResource TextMuted}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="sourceWadTextBlock" Foreground="{StaticResource TextPrimary}" FontSize="14" Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>