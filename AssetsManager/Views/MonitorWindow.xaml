<UserControl x:Class="AssetsManager.Views.MonitorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views"
             xmlns:monitorControls="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialIcons:MaterialIcon x:Name="MainIcon"
                                             Kind="Radar"
                                             Height="48"
                                             Width="48"
                                             VerticalAlignment="Center"
                                             Foreground="{DynamicResource AccentBrush}"
                                             Grid.Column="0">
                    <materialIcons:MaterialIcon.Effect>
                        <DropShadowEffect Color="{Binding Foreground.Color, ElementName=MainIcon}" 
                                          BlurRadius="15" 
                                          ShadowDepth="0" 
                                          Opacity="0.4"/>
                    </materialIcons:MaterialIcon.Effect>
                </materialIcons:MaterialIcon>

                <Rectangle Grid.Column="1" Width="1" Fill="{StaticResource BorderColor}" Margin="12,8" VerticalAlignment="Stretch"/>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="MONITOR CENTER" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Track PBE status, remote data changes and live asset updates" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Layout with side margins -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Navigation Selector -->
                    <RowDefinition Height="*"/>    <!-- Content Area -->
                </Grid.RowDefinitions>

                <!-- 1. NAVIGATION SELECTOR (Segmented) -->
                <Border Grid.Row="0" Margin="0,18,0,8" Background="{DynamicResource SidebarBackground}" CornerRadius="8" Padding="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                    <UniformGrid Columns="7">
                        <RadioButton x:Name="TabDashboard" Content="Dashboard" IsChecked="True" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="TabFileWatcher" Content="Watcher" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="TabHistory" Content="History" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="TabAssetTracker" Content="Tracker" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="TabVersions" Content="Versions" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="TabBackups" Content="Backups" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="TabApi" Content="API Center" GroupName="MonitorTabs" Style="{DynamicResource SegmentedRadioButtonStyle}"/>
                    </UniformGrid>
                </Border>

                <!-- 2. CONTENT AREA (Direct Grid, no ScrollViewer) -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <monitorControls:MonitorDashboardControl x:Name="MonitorDashboardControl">
                        <monitorControls:MonitorDashboardControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabDashboard}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:MonitorDashboardControl.Style>
                    </monitorControls:MonitorDashboardControl>

                    <monitorControls:FileWatcherControl x:Name="FileWatcherControl">
                        <monitorControls:FileWatcherControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabFileWatcher}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:FileWatcherControl.Style>
                    </monitorControls:FileWatcherControl>

                    <monitorControls:HistoryViewControl x:Name="HistoryViewControl">
                        <monitorControls:HistoryViewControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabHistory}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:HistoryViewControl.Style>
                    </monitorControls:HistoryViewControl>

                    <monitorControls:AssetTrackerControl x:Name="AssetTrackerControl">
                        <monitorControls:AssetTrackerControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabAssetTracker}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:AssetTrackerControl.Style>
                    </monitorControls:AssetTrackerControl>

                    <monitorControls:ManageVersionsControl x:Name="ManageVersionsControl">
                        <monitorControls:ManageVersionsControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabVersions}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:ManageVersionsControl.Style>
                    </monitorControls:ManageVersionsControl>

                    <monitorControls:BackupsControl x:Name="BackupsControl">
                        <monitorControls:BackupsControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabBackups}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:BackupsControl.Style>
                    </monitorControls:BackupsControl>

                    <monitorControls:ApiControl x:Name="ApiControl">
                        <monitorControls:ApiControl.Style>
                            <Style TargetType="UserControl">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers><DataTrigger Binding="{Binding IsChecked, ElementName=TabApi}" Value="True"><Setter Property="Visibility" Value="Visible"/></DataTrigger></Style.Triggers>
                            </Style>
                        </monitorControls:ApiControl.Style>
                    </monitorControls:ApiControl>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>