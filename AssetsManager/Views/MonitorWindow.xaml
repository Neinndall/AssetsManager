<UserControl x:Class="AssetsManager.Views.MonitorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views"
             xmlns:monitorControls="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono con Brillo -->
                <materialIcons:MaterialIcon Kind="Radar"
                                             Height="48"
                                             Width="48"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBrush}"
                                             Grid.Column="0">
                    <materialIcons:MaterialIcon.Effect>
                        <DropShadowEffect Color="{Binding Color, Source={StaticResource AccentBrush}}" 
                                          BlurRadius="15" 
                                          ShadowDepth="0" 
                                          Opacity="0.4"/>
                    </materialIcons:MaterialIcon.Effect>
                </materialIcons:MaterialIcon>

                <!-- Separador Vertical -->
                <Rectangle Grid.Column="1" 
                           Width="1" 
                           Fill="{StaticResource BorderColor}" 
                           Margin="12,8" 
                           VerticalAlignment="Stretch"/>

                <!-- Textos -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="MONITOR CENTER" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Track PBE status, remote data changes and live asset updates"
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" 
                      Padding="32,18,32,0">
            <TabControl Style="{StaticResource CustomTabControlStyle}">
                <TabItem Header="Dashboard" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:MonitorDashboardControl x:Name="MonitorDashboardControl"/>
                </TabItem>
                <TabItem Header="File Watcher" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:FileWatcherControl x:Name="FileWatcherControl"/>
                </TabItem>
                <TabItem Header="History" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:HistoryViewControl x:Name="HistoryViewControl"/>
                </TabItem>
                <TabItem Header="Asset Tracker" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:AssetTrackerControl x:Name="AssetTrackerControl"/>
                </TabItem>
                <TabItem Header="Manage Versions" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:ManageVersionsControl x:Name="ManageVersionsControl"/>
                </TabItem>
                <TabItem Header="Backups" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:BackupsControl x:Name="BackupsControl"/>
                </TabItem>
                <TabItem Header="API" Style="{StaticResource CustomTabItemStyle}">
                    <monitorControls:ApiControl x:Name="ApiControl"/>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</UserControl>