<UserControl x:Class="AssetsManager.Views.Controls.Comparator.WadComparisonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Comparator"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Consolas, Courier New">
    <StackPanel>
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <!-- Header con icono y tÃ­tulo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Compare"
                                                 FontSize="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBrush}"/>
                    <StackPanel>
                        <TextBlock Text="Wad Comparator" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Compare wad files to identify differences" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <TabControl x:Name="wadComparatorTabControl" Margin="0,-5,0,0" Style="{StaticResource CustomTabControlStyle}">
                    <!-- Tab: By Directory -->
                    <TabItem Header="By Directory" Style="{StaticResource CustomTabItemStyle}">
                        <StackPanel Margin="0,20,0,0">
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderRefreshOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,12,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentGreen}"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="New Directory" 
                                               FontWeight="SemiBold"
                                               FontSize="15"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the new directory or folder" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="0,42,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="newLolDirectoryTextBox" 
                                                 Grid.Column="0"
                                                 Height="36"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource ModernTextBox}"
                                                 ToolTip="Select the new directory"/>
                                    <Button Grid.Column="2"
                                                Content="Browse"
                                                Padding="16,0"
                                                Height="36"
                                                Style="{StaticResource SecondaryButton}"
                                                Click="btnSelectNewLolDirectory_Click"
                                                ToolTip="Browse for directory"/>
                                </Grid>
                            </Grid>

                            <!-- Old PBE Directory -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderClockOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,12,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentOrange}"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="Old Directory" 
                                               FontWeight="SemiBold"
                                               FontSize="15"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the old directory or folder" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="0,42,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="oldLolDirectoryTextBox" 
                                                 Grid.Column="0"
                                                 Height="36"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource ModernTextBox}"
                                                 ToolTip="Select the old directory"/>
                                    <Button Grid.Column="2"
                                                Content="Browse"
                                                Padding="16,0"
                                                Height="36"
                                                Style="{StaticResource SecondaryButton}"
                                                Click="btnSelectOldLolDirectory_Click"
                                                ToolTip="Browse for directory"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </TabItem>

                    <!-- Tab: By File -->
                    <TabItem Header="By File" Style="{StaticResource CustomTabItemStyle}">
                        <StackPanel Margin="0,20,0,0">
                            <!-- New WAD File -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FilePlusOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,12,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentGreen}"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="New Wad File" 
                                               FontWeight="SemiBold"
                                               FontSize="15"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the new wad file to compare" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="0,42,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="newWadFileTextBox" 
                                                 Grid.Column="0"
                                                 Height="36"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource ModernTextBox}"
                                                 ToolTip="Select the new wad file"/>
                                    <Button Grid.Column="2"
                                                Content="Browse"
                                                Padding="16,0"
                                                Height="36"
                                                Style="{StaticResource SecondaryButton}"
                                                Click="btnSelectNewWadFile_Click"
                                                ToolTip="Browse for file"/>
                                </Grid>
                            </Grid>

                            <!-- Old WAD File -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FileDocumentOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,12,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentOrange}"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                    <TextBlock Text="Old Wad File" 
                                               FontWeight="SemiBold"
                                               FontSize="15"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the old wad file to compare" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="0,42,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="oldWadFileTextBox" 
                                                 Grid.Column="0"
                                                 Height="36"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource ModernTextBox}"
                                                 ToolTip="Select the old WAD file"/>
                                    <Button Grid.Column="2"
                                                Content="Browse"
                                                Padding="16,0"
                                                Height="36"
                                                Style="{StaticResource SecondaryButton}"
                                                Click="btnSelectOldWadFile_Click"
                                                ToolTip="Browse for file"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
                
                <!-- Actions -->
                <Grid Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialIcons:MaterialIcon Grid.Column="0" Kind="Flash" 
                                                 FontSize="20" 
                                                 Margin="0,0,12,0" 
                                                 VerticalAlignment="Top"
                                                 Foreground="{StaticResource AccentBrush}"/>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Actions" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Create a backup or compare wad files" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,12"/>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="createLolBackupButton" 
                                Content="Create LoL Backup"
                                Style="{StaticResource SecondaryButton}"
                                Click="createLolBackupButton_Click"
                                ToolTip="Create a backup of the current LoL directory"
                                Margin="0,0,12,0"/>
                            <Button x:Name="compareWadButton" 
                                Content="Comparison" 
                                Style="{StaticResource ModernButton}"
                                Click="compareWadButton_Click"
                                ToolTip="Compare the wad files selected"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>