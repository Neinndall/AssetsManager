<UserControl x:Class="AssetsManager.Views.Controls.Comparator.WadComparisonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Comparator"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
    <StackPanel>
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <TabControl x:Name="wadComparatorTabControl" 
                            Style="{StaticResource CustomTabControlStyle}"
                            Margin="0,-9,0,0">
                    
                    <!-- Tab: By Directory -->
                    <TabItem Header="By Directory" Style="{StaticResource CustomTabItemStyle}">
                        <StackPanel Margin="0,20,0,0">
                            <!-- Old Directory -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderClockOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,16,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentOrange}"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Old Directory" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the old directory or folder" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,8"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="oldLolPbeDirectoryTextBox" 
                                                 Style="{StaticResource ModernTextBox}"
                                                 IsReadOnly="True"
                                                 Height="32"
                                                 VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Style="{StaticResource SecondaryButton}"
                                                Margin="8,0,0,0"
                                                Height="32"
                                                Padding="12,0"
                                                Click="btnSelectOldLolPbeDirectory_Click"
                                                ToolTip="Browse">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialIcons:MaterialIcon Kind="FolderOpenOutline" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Browse" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- New Directory -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderStarOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,16,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentGreen}"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="New Directory" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the new directory or folder" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,8"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="newLolPbeDirectoryTextBox" 
                                                 Style="{StaticResource ModernTextBox}"
                                                 IsReadOnly="True"
                                                 Height="32"
                                                 VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Style="{StaticResource SecondaryButton}"
                                                Margin="8,0,0,0"
                                                Height="32"
                                                Padding="12,0"
                                                Click="btnSelectNewLolPbeDirectory_Click"
                                                ToolTip="Browse">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialIcons:MaterialIcon Kind="FolderOpenOutline" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Browse" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </TabItem>

                    <!-- Tab: By File -->
                    <TabItem Header="By File" Style="{StaticResource CustomTabItemStyle}">
                         <StackPanel Margin="0,20,0,0">
                            <!-- Old File -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FileDocumentOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,16,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentOrange}"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Old Wad File" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the old wad file to compare" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,8"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="oldWadFileTextBox" 
                                                 Style="{StaticResource ModernTextBox}"
                                                 IsReadOnly="True"
                                                 Height="32"
                                                 VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Style="{StaticResource SecondaryButton}"
                                                Margin="8,0,0,0"
                                                Height="32"
                                                Padding="12,0"
                                                Click="btnSelectOldWadFile_Click"
                                                ToolTip="Browse">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialIcons:MaterialIcon Kind="FileFindOutline" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Browse" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- New File -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FilePlusOutline" 
                                                             FontSize="20" 
                                                             Margin="0,0,16,0" 
                                                             VerticalAlignment="Top"
                                                             Foreground="{StaticResource AccentGreen}"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="New Wad File" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Select the new wad file to compare" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,2,0,8"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="newWadFileTextBox" 
                                                 Style="{StaticResource ModernTextBox}"
                                                 IsReadOnly="True"
                                                 Height="32"
                                                 VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Style="{StaticResource SecondaryButton}"
                                                Margin="8,0,0,0"
                                                Height="32"
                                                Padding="12,0"
                                                Click="btnSelectNewWadFile_Click"
                                                ToolTip="Browse">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialIcons:MaterialIcon Kind="FileFindOutline" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Browse" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <!-- Actions Section -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialIcons:MaterialIcon Grid.Column="0" Kind="Flash" 
                                                 FontSize="20" 
                                                 Margin="0,0,16,0" 
                                                 VerticalAlignment="Top"
                                                 Foreground="{StaticResource AccentBrush}"/>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Actions" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Create a backup or compare wad files" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,12"/>

                        <Button x:Name="compareWadButton" 
                                Style="{StaticResource ModernButton}"
                                Height="36"
                                HorizontalAlignment="Left"
                                Padding="16,0"
                                Click="compareWadButton_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialIcons:MaterialIcon Kind="FileCompare" Margin="0,0,8,0" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="COMPARISON" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>