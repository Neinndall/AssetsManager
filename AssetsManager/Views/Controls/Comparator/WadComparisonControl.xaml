<UserControl x:Class="AssetsManager.Views.Controls.Comparator.WadComparisonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Comparator"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Configuration Card -->
            <RowDefinition Height="Auto"/> <!-- Inputs (The Arena - Unified) -->
            <RowDefinition Height="Auto"/> <!-- Footer Action (Ready for Compare) -->
        </Grid.RowDefinitions>

        <!-- 1. CONFIGURATION CARD -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="12" 
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Icon -->
                    <ColumnDefinition Width="*"/>    <!-- Texts -->
                    <ColumnDefinition Width="Auto"/> <!-- Mode Selector -->
                </Grid.ColumnDefinitions>

                <!-- Icon Box -->
                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="42" Height="42" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="SettingsOutline" 
                                               Foreground="{StaticResource AccentBrush}"
                                               Width="22" Height="22"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Titles -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Configuration Select" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Choose the analysis mode and paths below" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Mode Switcher -->
                <Border Grid.Column="2" 
                        Background="{StaticResource SidebarBackground}" 
                        CornerRadius="8" 
                        Padding="3" 
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ModeDirectory" 
                                     Content="Directory Mode" 
                                     GroupName="ComparisonMode"
                                     IsChecked="True" 
                                     Style="{StaticResource SegmentedRadioButtonStyle}"/>
                        <RadioButton x:Name="ModeFile" 
                                     Content="Single File" 
                                     GroupName="ComparisonMode"
                                     Style="{StaticResource SegmentedRadioButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 2. INPUT ARENA (Unified Card) -->
        <Border Grid.Row="1" 
                Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
            <StackPanel>
                
                <!-- === A. NEW VERSION (TARGET) === -->
                <StackPanel Margin="0,0,0,12">
                    <!-- Label Header -->
                    <StackPanel Orientation="Horizontal" Margin="4,0,0,12">
                        <Border Background="#1A00E676" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                            <materialIcons:MaterialIcon Kind="StarThreePointsOutline" Foreground="{StaticResource AccentGreen}" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="TARGET VERSION" FontWeight="Bold" FontSize="11" Foreground="{StaticResource AccentGreen}" Opacity="0.9"/>
                            <TextBlock Text="New / Updated" FontSize="13" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Inputs: Directory Mode -->
                    <StackPanel Visibility="{Binding IsChecked, ElementName=ModeDirectory, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Select the updated League of Legends directory to detect new assets." FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="4,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="newLolPbeDirectoryTextBox" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Height="38"
                                     IsReadOnly="True" 
                                     Padding="10,0" 
                                     VerticalContentAlignment="Center"
                                     Grid.Column="0"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1" 
                                    Click="btnSelectNewLolPbeDirectory_Click" 
                                    Style="{StaticResource BrowseButtonStyle}" 
                                    ToolTip="Browse Directory">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FolderOpen" Margin="0,0,8,0" Width="14" Height="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Inputs: File Mode -->
                    <StackPanel Visibility="{Binding IsChecked, ElementName=ModeFile, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Select the updated .wad file you want to inspect for changes." FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="4,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="newWadFileTextBox" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Height="38"
                                     IsReadOnly="True" 
                                     Padding="10,0" 
                                     VerticalContentAlignment="Center"
                                     Grid.Column="0"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1" 
                                    Click="btnSelectNewWadFile_Click" 
                                    Style="{StaticResource BrowseButtonStyle}" 
                                    ToolTip="Browse File">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileFind" Margin="0,0,8,0" Width="14" Height="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Separator Line -->
                <Border Height="1" Background="{StaticResource BorderColor}" Margin="0,0,0,12" Opacity="0.5"/>

                <!-- === B. BASE VERSION (OLD) === -->
                <StackPanel>
                    <!-- Label Header -->
                    <StackPanel Orientation="Horizontal" Margin="4,0,0,12">
                        <Border Background="#1AFF9100" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                            <materialIcons:MaterialIcon Kind="ClockTimeFourOutline" Foreground="{StaticResource AccentOrange}" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="BASE VERSION" FontWeight="Bold" FontSize="11" Foreground="{StaticResource AccentOrange}" Opacity="0.9"/>
                            <TextBlock Text="Old / Original" FontSize="13" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Inputs: Directory Mode -->
                    <StackPanel Visibility="{Binding IsChecked, ElementName=ModeDirectory, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Select the base/original League of Legends directory to use as reference." FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="4,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="oldLolPbeDirectoryTextBox" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Height="38"
                                     IsReadOnly="True" 
                                     Padding="10,0" 
                                     VerticalContentAlignment="Center"
                                     Grid.Column="0"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1" 
                                    Click="btnSelectOldLolPbeDirectory_Click" 
                                    Style="{StaticResource BrowseButtonStyle}" 
                                    ToolTip="Browse Directory">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FolderOpen" Margin="0,0,8,0" Width="14" Height="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Inputs: File Mode -->
                    <StackPanel Visibility="{Binding IsChecked, ElementName=ModeFile, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Select the base/original .wad file to compare against." FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="4,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="oldWadFileTextBox" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Height="38"
                                     IsReadOnly="True" 
                                     Padding="10,0" 
                                     VerticalContentAlignment="Center"
                                     Grid.Column="0"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1" 
                                    Click="btnSelectOldWadFile_Click" 
                                    Style="{StaticResource BrowseButtonStyle}" 
                                    ToolTip="Browse File">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileFind" Margin="0,0,8,0" Width="14" Height="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- 3. ACTION CARD (Ready for Compare?) -->
        <Border Grid.Row="2"
                Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="12" 
                Padding="16"
                Margin="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon/Decoration -->
                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                    <materialIcons:MaterialIcon Kind="CheckAll" Foreground="{StaticResource AccentBrush}" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Texts -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Ready for Compare?" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Review your paths above and start the analysis." FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Button -->
                <Button Grid.Column="2" 
                        x:Name="compareWadButton" 
                        Click="compareWadButton_Click"
                        Style="{StaticResource SecondaryButton}"
                        Background="{StaticResource SidebarBackground}"
                        MinWidth="140"
                        Margin="16,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="Flash" Margin="0,0,8,0" Width="16" Height="16" VerticalAlignment="Center"/>
                        <TextBlock Text="Start Comparison" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>