<UserControl x:Class="AssetsManager.Views.Controls.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="1000">

    <Border Background="{StaticResource SidebarBackground}" 
            BorderBrush="{StaticResource BorderColor}" 
            Height="32"
            Padding="16,0">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Visibility" Value="Visible"/>
                <Setter Property="BorderThickness" Value="0,1,0,0"/>
                <Style.Triggers>
                    <!-- Hide if no Status Text is present -->
                    <DataTrigger Binding="{Binding StatusText}" Value="">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: Ready, Status Text & Notifications -->
            <Grid Grid.Column="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 1. Status Icon (First) -->
                <materialIcons:MaterialIcon Grid.Column="0" x:Name="ReadyIcon" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon.Style>
                        <Style TargetType="materialIcons:MaterialIcon">
                            <!-- Default: Info (Blue) -->
                            <Setter Property="Kind" Value="InformationOutline"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                            <Setter Property="Visibility" Value="Visible"/>
                            
                            <Style.Triggers>
                                <!-- No Text -> Hide Icon -->
                                <DataTrigger Binding="{Binding StatusText}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>

                                <!-- Success States -->
                                <DataTrigger Binding="{Binding StatusText}" Value="Ready">
                                    <Setter Property="Kind" Value="CheckCircleOutline"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusText}" Value="Comparison Completed">
                                    <Setter Property="Kind" Value="CheckCircleOutline"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusText}" Value="Success">
                                    <Setter Property="Kind" Value="CheckCircleOutline"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                </DataTrigger>

                                <!-- Processing State (When Progress Spinner is Visible) -->
                                <DataTrigger Binding="{Binding Visibility, ElementName=ProgressSummaryButton}" Value="Visible">
                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                                </DataTrigger>

                                <!-- Warning/Cancelling States -->
                                <DataTrigger Binding="{Binding StatusText}" Value="Cancelling Task...">
                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusText}" Value="Cancelling tree building...">
                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </materialIcons:MaterialIcon.Style>
                </materialIcons:MaterialIcon>

                <!-- 2. Status Text (Right margin of 50px ensures spacing from progress indicators) -->
                <TextBlock Grid.Column="1" x:Name="StatusTextBlock" 
                           Text="{Binding StatusText}" 
                           FontSize="11" 
                           Foreground="{StaticResource TextSecondary}" 
                           Margin="0,0,50,0" 
                           VerticalAlignment="Center" 
                           TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusText}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Right Side: Progress Indicator -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="ProgressSummaryButton"
                        Style="{StaticResource TransparentIconButton}"
                        Visibility="{Binding ProgressPercentage, Converter={StaticResource NullToVisibilityConverter}}"
                        Padding="4,0"
                        VerticalAlignment="Center"
                        Click="ProgressSummaryButton_Click">
                    <Button.ToolTip>
                        <ToolTip Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}">
                            <TextBlock Text="Click to see more details" Foreground="{StaticResource TextPrimary}" FontSize="12"/>
                        </ToolTip>
                    </Button.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="ProgressPercentageTextBlock" 
                                   Text="{Binding ProgressPercentage}" 
                                   FontSize="11" 
                                   Foreground="{StaticResource AccentBrush}" 
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                        
                        <materialIcons:MaterialIcon x:Name="ProgressIcon" Kind="Sync"
                                                    Width="16" Height="16"
                                                    Foreground="{StaticResource AccentBrush}"
                                                    VerticalAlignment="Center">
                            <materialIcons:MaterialIcon.Style>
                                <Style TargetType="materialIcons:MaterialIcon">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Visibility, ElementName=ProgressSummaryButton}" Value="Visible">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="SpinAnimation" Storyboard="{StaticResource SpinningIconAnimation}"/>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <StopStoryboard BeginStoryboardName="SpinAnimation"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialIcons:MaterialIcon.Style>
                            <materialIcons:MaterialIcon.RenderTransform>
                                <RotateTransform CenterX="8" CenterY="8"/>
                            </materialIcons:MaterialIcon.RenderTransform>
                        </materialIcons:MaterialIcon>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
