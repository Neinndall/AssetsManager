<UserControl x:Class="AssetsManager.Views.Controls.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="1000">

    <Border Background="{StaticResource SidebarBackground}" 
            BorderBrush="{StaticResource BorderColor}" 
            Height="32"
            Padding="16,0">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Visibility" Value="Visible"/>
                <Setter Property="BorderThickness" Value="0,1,0,0"/>
                <Style.Triggers>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding Text, ElementName=StatusTextBlock}" Value=""/>
                            <Condition Binding="{Binding Visibility, ElementName=NotificationButton}" Value="Collapsed"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: Ready, Status Text & Notifications -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">

                <!-- 1. Ready Icon (First) -->
                <materialIcons:MaterialIcon x:Name="ReadyIcon" Width="14" Height="14" Margin="0,0,8,0" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon.Style>
                        <Style TargetType="materialIcons:MaterialIcon">
                            <Setter Property="Kind" Value="CheckCircleOutline"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=StatusTextBlock}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=StatusTextBlock}" Value="Cancelling Task...">
                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=StatusTextBlock}" Value="Cancelling tree building...">
                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </materialIcons:MaterialIcon.Style>
                </materialIcons:MaterialIcon>

                <!-- 2. Status Text -->
                <TextBlock x:Name="StatusTextBlock" Text="" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,12,0" VerticalAlignment="Center" MaxWidth="350" TextTrimming="CharacterEllipsis">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=StatusTextBlock}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- 3. Notifications -->
                <Button x:Name="NotificationButton"
                        Style="{StaticResource TransparentIconButton}"
                        Visibility="{Binding NotificationCount, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CountToVisibilityConverter}}"
                        Cursor="Hand"
                        Margin="0"
                        Padding="0"
                        VerticalAlignment="Center"
                        Click="NotificationButton_Click">
                    <Button.ToolTip>
                        <ToolTip Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}">
                            <TextBlock x:Name="NotificationToolTipText" TextWrapping="Wrap" MaxWidth="400" Foreground="{StaticResource TextPrimary}" FontSize="12"/>
                        </ToolTip>
                    </Button.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="BellRingOutline" Width="14" Height="14" Foreground="LightSkyBlue" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="NotificationMessageText" Text="" FontSize="11" Foreground="LightSkyBlue" FontWeight="Medium" VerticalAlignment="Center" MaxWidth="400" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Right Side: Progress Indicator -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="ProgressSummaryButton"
                        Style="{StaticResource TransparentIconButton}"
                        Visibility="Collapsed"
                        Padding="4,0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="ProgressPercentageTextBlock" Text="0%" FontSize="11" Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <materialIcons:MaterialIcon x:Name="ProgressIcon" Kind="Sync"
                                                    Width="16" Height="16"
                                                    Foreground="{StaticResource AccentBrush}"
                                                    VerticalAlignment="Center">
                            <materialIcons:MaterialIcon.Style>
                                <Style TargetType="materialIcons:MaterialIcon">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Visibility, ElementName=ProgressSummaryButton}" Value="Visible">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="SpinAnimation" Storyboard="{StaticResource SpinningIconAnimation}"/>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <StopStoryboard BeginStoryboardName="SpinAnimation"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialIcons:MaterialIcon.Style>
                            <materialIcons:MaterialIcon.RenderTransform>
                                <RotateTransform CenterX="8" CenterY="8"/>
                            </materialIcons:MaterialIcon.RenderTransform>
                        </materialIcons:MaterialIcon>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>