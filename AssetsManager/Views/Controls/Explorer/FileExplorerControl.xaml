<UserControl x:Class="AssetsManager.Views.Controls.Explorer.FileExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:models="clr-namespace:AssetsManager.Views.Models.Explorer"
             xmlns:converters="clr-namespace:AssetsManager.Views.Converters"
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Explorer"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:PathToIconConverter x:Key="PathToIconConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <ContextMenu x:Key="ExplorerContextMenu" Opened="ContextMenu_Opened">
            <MenuItem Header="Extract Selected" x:Name="ExtractMenuItem" Click="ExtractSelected_Click">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="FileDownload"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Save Selected" x:Name="SaveMenuItem" Click="SaveSelected_Click">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="ContentSave"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="View Changes" x:Name="ViewChangesMenuItem" Click="ViewChanges_Click">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="CompareHorizontal"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Pin" x:Name="PinMenuItem" Click="PinSelected_Click">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="Pin"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar area -->
        <local:ExplorerToolbarControl x:Name="Toolbar" 
                                      Grid.Row="0" 
                                      Margin="10,10,10,5" 
                                      Visibility="Collapsed"/>
        <Grid Grid.Row="1">
            <TreeView x:Name="FileTreeView" 
                      Margin="6,0,0,0" 
                      ItemsSource="{Binding RootNodes}"
                      SelectedItemChanged="FileTreeView_SelectedItemChanged"
                      Style="{StaticResource ModernTreeView}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type models:FileSystemNodeModel}" ItemsSource="{Binding Children}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                                
                            <!-- Icon -->
                            <materialIcons:MaterialIcon Grid.Column="0" 
                                                        Width="16" Height="16" 
                                                        VerticalAlignment="Center" 
                                                        Margin="0,0,6,0" 
                                                        RenderTransformOrigin="0.5, 0.5"
                                                        Kind="{Binding Converter={StaticResource PathToIconConverter}}">
                                <materialIcons:MaterialIcon.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </materialIcons:MaterialIcon.RenderTransform>
                                <materialIcons:MaterialIcon.Style>
                                        <Style TargetType="materialIcons:MaterialIcon">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Style.Triggers>
                                            <!-- Loading State Spinner -->
                                            <DataTrigger Binding="{Binding Name}" Value="Loading...">
                                                <Setter Property="Kind" Value="Loading"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                                                             From="0" To="360" Duration="0:0:1" 
                                                                             RepeatBehavior="Forever"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>

                                            <!-- Status Colors ONLY for Grouping Folders (e.g. [+] New) -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Status}" Value="New"/>
                                                    <Condition Binding="{Binding IsGroupingFolder}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Status}" Value="Modified"/>
                                                    <Condition Binding="{Binding IsGroupingFolder}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Status}" Value="Deleted"/>
                                                    <Condition Binding="{Binding IsGroupingFolder}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Status}" Value="Renamed"/>
                                                    <Condition Binding="{Binding IsGroupingFolder}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="{StaticResource AccentOrange}"/>
                                            </MultiDataTrigger>
                                            
                                            <!-- Selection Override -->
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialIcons:MaterialIcon.Style>
                            </materialIcons:MaterialIcon>
                            
                            <!-- Standard Text -->
                            <TextBlock Grid.Column="1" 
                                       VerticalAlignment="Center" 
                                       FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasMatch}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            
                                            <!-- Status Colors for Text -->
                                            <DataTrigger Binding="{Binding Status}" Value="New">
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Modified">
                                                <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Deleted">
                                                <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Renamed">
                                                <Setter Property="Foreground" Value="{StaticResource AccentOrange}"/>
                                            </DataTrigger>

                                            <!-- Selection and Loading overrides -->
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Name}" Value="Loading...">
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Text>
                                    <Binding Path="Name"/>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Search Match Text -->
                            <TextBlock Grid.Column="1" 
                                       VerticalAlignment="Center" 
                                       FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasMatch}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="{Binding PreMatch, Mode=OneWay}" Foreground="{StaticResource TextMuted}" /><Run Text="{Binding Match, Mode=OneWay}" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" /><Run Text="{Binding PostMatch, Mode=OneWay}" Foreground="{StaticResource TextMuted}" />
                            </TextBlock>
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource ExplorerContextMenu}"/>
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <!-- Empty State -->
            <StackPanel x:Name="NoDirectoryMessage"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="10"
                        Visibility="Collapsed">
                <materialIcons:MaterialIcon Kind="FolderSearchOutline"
                                            Width="64" Height="64"
                                            HorizontalAlignment="Center"
                                            Foreground="{StaticResource TextMuted}"
                                            Opacity="0.5"/>
                <TextBlock x:Name="PlaceholderTitle"
                           Text="No Directory Selected"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,16,0,0"/>
                <TextBlock x:Name="PlaceholderDescription"
                           Text="Please select your League of Legends installation folder to start exploring."
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondary}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="20,8,20,0"/>
                <Button x:Name="SelectLolDirButton"
                        Content="Open Folder"
                        Style="{StaticResource SecondaryButton}"
                        Click="SelectLolDirButton_Click"
                        Padding="24,8"
                        HorizontalAlignment="Center"
                        Margin="0,24,0,0"/>
            </StackPanel>
            
            <!-- Loading Indicator -->
            <Grid x:Name="LoadingIndicator" 
                  Visibility="Collapsed" 
                  Background="{StaticResource SidebarBackground}">
                 <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Modern Spinner Animation -->
                    <materialIcons:MaterialIcon Kind="Loading" 
                                                Width="38" 
                                                Height="38" 
                                                Foreground="{StaticResource AccentBrush}"
                                                HorizontalAlignment="Center"
                                                RenderTransformOrigin="0.5, 0.5">
                        <materialIcons:MaterialIcon.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </materialIcons:MaterialIcon.RenderTransform>
                        <materialIcons:MaterialIcon.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                                         From="0" To="360" Duration="0:0:1" 
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </materialIcons:MaterialIcon.Triggers>
                    </materialIcons:MaterialIcon>
                    
                    <TextBlock Text="Loading assets..."
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center" 
                               Margin="0,12,0,0"/>
                    <TextBlock Text="Preparing the file explorer"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondary}"
                               HorizontalAlignment="Center" 
                               Margin="0,6,0,0"/>
                 </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>