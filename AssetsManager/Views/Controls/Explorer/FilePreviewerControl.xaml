<UserControl x:Class="AssetsManager.Views.Controls.Explorer.FilePreviewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Explorer"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:converters="clr-namespace:AssetsManager.Views.Converters"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:shared="clr-namespace:AssetsManager.Views.Controls.Shared"
             mc:Ignorable="d" 
             PreviewKeyDown="FilePreviewerControl_PreviewKeyDown">
             
    <UserControl.Resources>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="{StaticResource CardBackground}" FalseBrush="Transparent"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:PathToIconConverter x:Key="PathToIconConverter"/>
    </UserControl.Resources>
    
    <DockPanel>
        <!-- Pinned Tabs Area -->
        <Grid DockPanel.Dock="Top" 
              Background="{StaticResource SidebarBackground}" 
              Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ScrollLeftButton" 
                    Grid.Column="0" 
                    Style="{StaticResource TransparentIconButton}" 
                    Click="ScrollLeftButton_Click" 
                    Visibility="Collapsed" 
                    VerticalAlignment="Center" 
                    Padding="4,2">
                <materialIcons:MaterialIcon Kind="ChevronLeft" Width="16" Height="16" />
            </Button>

            <ScrollViewer Grid.Column="1" 
                          x:Name="TabsScrollViewer" 
                          HorizontalScrollBarVisibility="Hidden" 
                          VerticalScrollBarVisibility="Disabled" 
                          ScrollChanged="TabsScrollViewer_ScrollChanged">
                <ItemsControl ItemsSource="{Binding PinnedFiles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}}" 
                                    CornerRadius="5,5,0,0" 
                                    Margin="2,0,2,0" 
                                    MouseDown="Tab_MouseDown">
                                <StackPanel Orientation="Horizontal" Margin="8,2,8,2">
                                    <TextBlock Text="{Binding Header}" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Button Click="CloseTabButton_Click" Margin="5,0,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource TransparentIconButton}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <materialIcons:MaterialIcon Kind="Close" Width="12" Height="12"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button x:Name="ScrollRightButton" 
                    Grid.Column="2" 
                    Style="{StaticResource TransparentIconButton}" 
                    Click="ScrollRightButton_Click" 
                    Visibility="Collapsed" 
                    VerticalAlignment="Center" 
                    Padding="4,2">
                <materialIcons:MaterialIcon Kind="ChevronRight" Width="16" Height="16" />
            </Button>
        </Grid>

        <Border x:Name="PinnedTabsSeparator" 
                DockPanel.Dock="Top" 
                Height="1" 
                Background="{StaticResource BorderColor}" 
                Margin="0,5,5,5" 
                Visibility="{Binding PinnedFiles.Count, Converter={StaticResource CountToVisibilityConverter}}"/>

        <!-- Breadcrumbs Area -->
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <local:BreadcrumbControl x:Name="Breadcrumbs" 
                                     Grid.Row="0" 
                                     Margin="5,2,5,0" 
                                     VerticalAlignment="Center" 
                                     Visibility="Collapsed"/>
            <Border x:Name="BreadcrumbSeparator" 
                    Grid.Row="1" 
                    Height="1" 
                    Background="{StaticResource BorderColor}" 
                    Margin="0,5,5,5" 
                    Visibility="Collapsed"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="5">
            <local:FileGridView x:Name="FileGridView" Visibility="Collapsed"/>
            
            <Grid x:Name="PreviewContainer" Visibility="Visible">
                <local:DetailsTabView x:Name="DetailsPreview" Visibility="Collapsed"/>
                
                <!-- Placeholders -->
                <StackPanel x:Name="PreviewPlaceholder"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="20"
                            Visibility="Visible">
                    <!-- Default State -->
                    <StackPanel x:Name="SelectFileMessagePanel"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="FileSearchOutline"
                                                    Width="64" Height="64"
                                                    HorizontalAlignment="Center"
                                                    Foreground="{StaticResource TextMuted}"
                                                    Opacity="0.4"/>
                        <TextBlock x:Name="SelectFileMessage"
                                   Text="No file selected"
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,16,0,0"/>
                        <TextBlock x:Name="SelectFileSubMessage"
                                   Text="Select a file from the explorer to preview its content"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="20,8,20,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Unsupported State -->
                    <StackPanel x:Name="UnsupportedFileMessagePanel"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <materialIcons:MaterialIcon Kind="FileRemoveOutline" 
                                                    Width="64" Height="64"
                                                    HorizontalAlignment="Center"
                                                    Foreground="{StaticResource TextMuted}"
                                                    Opacity="0.4"/>
                        <TextBlock x:Name="UnsupportedFileMessage"
                                   Text="Preview Unavailable"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,16,0,0"/>
                         <TextBlock Text="This file format is not supported for internal preview."
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="20,8,20,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Previews -->
                <Image x:Name="ImagePreview" Visibility="Collapsed" Stretch="Uniform"/>
                <avalonedit:TextEditor x:Name="TextEditorPreview"
                                       Style="{StaticResource BaseTextEditorStyle}"
                                       Visibility="Collapsed"
                                       Margin="-4,0,0,0"/>
                <Grid x:Name="WebViewContainer"/>

                <!-- Search inside document -->
                <shared:FindInDocumentControl x:Name="FindInDocumentControl"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Top"
                                              Margin="0,0,15,0"
                                              Visibility="Collapsed"
                                              TargetTextEditor="{Binding ElementName=TextEditorPreview}"
                                              Close="FindInDocumentControl_Close"/>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>