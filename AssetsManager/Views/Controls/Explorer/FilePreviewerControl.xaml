<UserControl x:Class="AssetsManager.Views.Controls.Explorer.FilePreviewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Explorer"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:shared="clr-namespace:AssetsManager.Views.Controls.Shared"
             mc:Ignorable="d" 
             PreviewKeyDown="FilePreviewerControl_PreviewKeyDown">
    
    <DockPanel>
        <!-- Pinned Tabs Area -->
        <Grid DockPanel.Dock="Top" 
              Background="{StaticResource SidebarBackground}" 
              Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ScrollLeftButton" 
                    Grid.Column="0" 
                    Style="{StaticResource TransparentIconButton}" 
                    Click="ScrollLeftButton_Click" 
                    Visibility="{Binding CanScrollLeft, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    VerticalAlignment="Center" 
                    Padding="4,2">
                <materialIcons:MaterialIcon Kind="ChevronLeft" Width="16" Height="16" />
            </Button>

            <ScrollViewer Grid.Column="1" 
                          x:Name="TabsScrollViewer" 
                          HorizontalScrollBarVisibility="Hidden" 
                          VerticalScrollBarVisibility="Disabled" 
                          ScrollChanged="TabsScrollViewer_ScrollChanged">
                <StackPanel Orientation="Horizontal">
                    <ItemsControl ItemsSource="{Binding PinnedFilesManager.PinnedFiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="TabBorder"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,2,0,0"
                                    CornerRadius="4,4,0,0" 
                                    Margin="2,0,2,0" 
                                    MouseDown="Tab_MouseDown"
                                    MinHeight="28">
                                    <StackPanel Orientation="Horizontal" Margin="8,4,4,4" VerticalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="{Binding Node, Converter={StaticResource PathToIconConverter}}" 
                                                                Width="14" Height="14"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,6,0"
                                                                Foreground="White"/>
                                        <TextBlock Text="{Binding Header}" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                    <Setter Property="FontWeight" Value="Normal"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button x:Name="CloseButton" 
                                            Click="CloseTabButton_Click" 
                                            Margin="8,0,0,0"
                                            Visibility="Hidden">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource TransparentIconButton}">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <materialIcons:MaterialIcon Kind="Close" Width="12" Height="12"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <!-- Active Tab Style -->
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource CardBackground}"/>
                                        <Setter TargetName="TabBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="TabBorder" Property="TextElement.Foreground" Value="White"/>
                                        <Setter TargetName="TabBorder" Property="TextElement.FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                    <!-- Hover on Inactive Tab -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                            <Condition Binding="{Binding IsSelected}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="TabBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                                        <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <Button x:Name="ScrollRightButton" 
                    Grid.Column="2" 
                    Style="{StaticResource TransparentIconButton}" 
                    Click="ScrollRightButton_Click" 
                    Visibility="{Binding CanScrollRight, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    VerticalAlignment="Center" 
                    Padding="4,2">
                <materialIcons:MaterialIcon Kind="ChevronRight" Width="16" Height="16" />
            </Button>
        </Grid>

        <Border x:Name="PinnedTabsSeparator" 
                DockPanel.Dock="Top" 
                Height="1" 
                Background="{StaticResource BorderColor}" 
                Margin="0,5,5,5" 
                Visibility="{Binding AreTabsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Breadcrumbs Area -->
        <Grid DockPanel.Dock="Top" 
              Visibility="{Binding AreBreadcrumbsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <local:BreadcrumbControl x:Name="Breadcrumbs" 
                                     Grid.Row="0" 
                                     Margin="5,2,5,0" 
                                     VerticalAlignment="Center"/>
            <Border x:Name="BreadcrumbSeparator" 
                    Grid.Row="1" 
                    Height="1" 
                    Background="{StaticResource BorderColor}" 
                    Margin="0,5,5,5"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="0">
            <!-- 1. GRID VIEW (Folders) -->
            <local:FileGridControl x:Name="FileGridControl" 
                                Visibility="{Binding IsGridVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- 2. CONTENT PREVIEWS (Files) -->
            <Grid x:Name="PreviewArea">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Metadata Section -->
                    <RowDefinition Height="*"/>    <!-- Content Area -->
                </Grid.RowDefinitions>

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsGridVisible}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <!-- Integrated Metadata Component -->
                <local:DetailsTabControl Grid.Row="0"
                                         Visibility="{Binding IsRenamedInfoVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Welcome Panel -->
                <Border x:Name="WelcomePanel"
                        Grid.Row="0" Grid.RowSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsWelcomeVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                        MaxWidth="400">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="FileSearchOutline"
                                                Width="64" Height="64"
                                                HorizontalAlignment="Center"
                                                Foreground="{StaticResource TextMuted}"
                                                Opacity="0.5"
                                                Margin="0,0,0,16"/>
                        <TextBlock Text="Select a file" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="Select a file from the explorer to preview its content" FontSize="14" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,8,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Files Area -->
                <Grid Grid.Row="1" x:Name="FilesGrid">
                    <Grid.ColumnDefinitions>
                        <!-- Content -->
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="*"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsContentVisible}" Value="False">
                                            <Setter Property="Width" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <!-- Splitter -->
                        <ColumnDefinition Width="Auto">
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="0"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsContentVisible}" Value="True"/>
                                                <Condition Binding="{Binding IsImageVisible}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Width" Value="Auto"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                        <!-- Image -->
                        <ColumnDefinition>
                            <ColumnDefinition.Style>
                                <Style TargetType="ColumnDefinition">
                                    <Setter Property="Width" Value="*"/>
                                    <Setter Property="MinWidth" Value="150"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsImageVisible}" Value="False">
                                            <Setter Property="Width" Value="0"/>
                                            <Setter Property="MinWidth" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ColumnDefinition.Style>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Content Panel -->
                    <Grid x:Name="ContentPanel" Grid.Column="0" Visibility="{Binding IsContentVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        
                        <avalonedit:TextEditor x:Name="TextEditorPreview" Style="{StaticResource BaseTextEditorStyle}" Visibility="{Binding IsTextVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <Grid x:Name="WebViewContainer" Visibility="{Binding IsWebVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Error Message inside Content area -->
                        <Border x:Name="UnsupportedFilePanel" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                Visibility="{Binding IsUnsupportedVisible, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                MaxWidth="400">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <materialIcons:MaterialIcon Kind="FileRemoveOutline" Width="64" Height="64" Foreground="{StaticResource TextMuted}" Opacity="0.5" Margin="0,0,0,16"/>
                                <TextBlock Text="Preview not available" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                <TextBlock x:Name="UnsupportedFileSubMessage" 
                                           Text="{Binding UnsupportedMessage, FallbackValue='The file format is not supported to preview it'}"
                                           FontSize="14" Foreground="{StaticResource TextSecondary}" 
                                           HorizontalAlignment="Center" Margin="0,8,0,0" 
                                           TextAlignment="Center" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Search inside document -->
                        <shared:FindInDocumentControl x:Name="FindInDocumentControl" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,15,0" Visibility="{Binding IsFindVisible, Converter={StaticResource BooleanToVisibilityConverter}}" TargetTextEditor="{Binding ElementName=TextEditorPreview}" Close="FindInDocumentControl_Close"/>
                    </Grid>
                    
                    <!-- Middle: Splitter -->
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent">
                        <GridSplitter.Style>
                            <Style TargetType="GridSplitter">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsContentVisible}" Value="True"/>
                                            <Condition Binding="{Binding IsImageVisible}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </GridSplitter.Style>
                    </GridSplitter>

                    <!-- Right: Image Panel -->
                    <Border x:Name="ImagePanel" Grid.Column="2" Visibility="{Binding IsImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}" BorderBrush="{StaticResource BorderColor}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsContentVisible}" Value="True">
                                        <Setter Property="BorderThickness" Value="1,0,0,0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Image x:Name="ImagePreview" Stretch="Uniform" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>