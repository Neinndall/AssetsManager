<UserControl x:Class="AssetsManager.Views.Controls.Explorer.FileGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Explorer"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:converters="clr-namespace:AssetsManager.Views.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:PathToIconConverter x:Key="PathToIconConverter"/>
        <DataTemplate x:Key="FileGridItemTemplate">
            <Border Margin="5" Width="140" Height="130" Padding="6,0,6,0"
                    MouseLeftButtonUp="FileGridView_Item_MouseLeftButtonUp" Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource SettingsCard}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Icon/Preview -->
                        <Grid Width="64" Height="64">
                            <materialIcons:MaterialIcon Kind="{Binding Node, Converter={StaticResource PathToIconConverter}}" Width="64" Height="64" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}">
                                <materialIcons:MaterialIcon.Style>
                                    <Style TargetType="materialIcons:MaterialIcon">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImagePreview}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialIcons:MaterialIcon.Style>
                            </materialIcons:MaterialIcon>
                            <Image Source="{Binding ImagePreview}" Stretch="Uniform">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImagePreview}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Grid>

                        <!-- Name -->
                        <TextBlock Text="{Binding Node.DisplayName}" 
                                   TextAlignment="Center" 
                                   TextWrapping="Wrap" 
                                   Margin="0,3,0,0" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   MaxHeight="34"/>

                        <!-- Metadata (Only for Folders) -->
                        <StackPanel Margin="0,3,0,0" Opacity="0.7">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Subfolders: " FontSize="9" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding SubfolderCount}" FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="Medium"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Assets: " FontSize="9" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding AssetCount}" FontSize="9" Foreground="{StaticResource TextSecondary}" FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <ItemsControl x:Name="FileGridViewItemsControl"
                      ItemTemplate="{StaticResource FileGridItemTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
