<UserControl x:Class="AssetsManager.Views.Controls.Explorer.ExplorerToolbarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,6,0,0">
            <!-- Action Buttons on the left -->
            <Button x:Name="CollapseToContainerButton" Style="{StaticResource TransparentIconButton}" ToolTip="Collapse to container" Margin="5,0" Click="CollapseToContainerButton_Click">
                <materialIcons:MaterialIcon Kind="ArrowCollapseAll" Width="18" Height="18"/>
            </Button>
            <ToggleButton x:Name="SearchToggleButton" Style="{StaticResource SearchToggleStyle}" Margin="0,0,5,0"/>

            <!-- Search controls now appear next to the toggle button -->
            <Grid>
                <TextBox x:Name="SearchTextBox" 
                         Style="{StaticResource AnimatedSearchBoxStyle}" 
                         Tag="{Binding IsChecked, ElementName=SearchToggleButton}"
                         TextChanged="SearchTextBox_TextChanged"/>
                <Button x:Name="GoToButton" 
                        Style="{StaticResource TransparentIconButton}" 
                        ToolTip="Go to path"
                        Click="GoToButton_Click"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        Visibility="Collapsed">
                    <materialIcons:MaterialIcon Kind="SubdirectoryArrowRight" Width="18" Height="18"/>
                </Button>
                <TextBlock Text="Filter..." 
                           Foreground="{StaticResource TextMuted}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Text, ElementName=SearchTextBox}" Value=""/>
                                        <Condition Binding="{Binding IsChecked, ElementName=SearchToggleButton}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>