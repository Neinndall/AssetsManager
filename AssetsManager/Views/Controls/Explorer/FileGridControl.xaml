<UserControl x:Class="AssetsManager.Views.Controls.Explorer.FileGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Explorer"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <!-- Modern Grid Item Template -->
        <DataTemplate x:Key="FileGridItemTemplate">
            <Border Margin="6" Width="130" Height="160" CornerRadius="10"
                    Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                    MouseLeftButtonDown="FileGridControl_Item_MouseLeftButtonDown">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>   <!-- Thumbnail -->
                        <RowDefinition Height="Auto"/> <!-- Label -->
                    </Grid.RowDefinitions>

                    <!-- Thumbnail Area -->
                    <Border Grid.Row="0" CornerRadius="9,9,0,0" Background="{StaticResource SidebarBackground}" Opacity="0.5">
                        <Grid>
                            <!-- Thumbnail Area -->
                            <materialIcons:MaterialIcon Kind="{Binding Node, Converter={StaticResource PathToIconConverter}}" 
                                                        Width="48" Height="48" Foreground="{StaticResource TextMuted}"
                                                        RenderTransformOrigin="0.5,0.5"
                                                        Visibility="{Binding ImagePreview, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                <materialIcons:MaterialIcon.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </materialIcons:MaterialIcon.RenderTransform>
                                <materialIcons:MaterialIcon.Style>
                                    <Style TargetType="materialIcons:MaterialIcon">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Node.Name}" Value="Loading...">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource SpinningIconAnimation}"/>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialIcons:MaterialIcon.Style>
                            </materialIcons:MaterialIcon>
                            
                            <!-- Real Image Preview using ImageBrush (Perfect Clipping) -->
                            <Border CornerRadius="9,9,0,0" Visibility="{Binding ImagePreview, Converter={StaticResource NullToVisibilityConverter}}">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding ImagePreview}" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>

                            <!-- Top Type Badge -->
                            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="6" 
                                    Background="#CC000000" CornerRadius="3" Padding="4,1">
                                <TextBlock Text="{Binding FileExtensionDisplay}" FontSize="8" FontWeight="Black" Foreground="White"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Label Area -->
                    <Border Grid.Row="1" Padding="8,4,8,8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding DisplayNameShort}" FontSize="11" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis" 
                                       TextWrapping="Wrap" Height="36" LineHeight="14"
                                       TextAlignment="Center" HorizontalAlignment="Center"/>
                            
                            <!-- Small indicators for folders -->
                            <StackPanel Orientation="Horizontal" Visibility="{Binding IsFolder, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,4,0,0" HorizontalAlignment="Center">
                                <!-- Folders Count -->
                                <StackPanel Orientation="Horizontal" Visibility="{Binding FolderCount, Converter={StaticResource CountToVisibilityConverter}}" Margin="0,0,8,0">
                                    <materialIcons:MaterialIcon Kind="FolderOutline" Width="10" Height="10" Foreground="{StaticResource AccentOrange}" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FolderCount}" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Files Count -->
                                <StackPanel Orientation="Horizontal" Visibility="{Binding AssetCount, Converter={StaticResource CountToVisibilityConverter}}">
                                    <materialIcons:MaterialIcon Kind="CubeOutline" Width="10" Height="10" Foreground="{StaticResource AccentGreen}" Margin="0,0,3,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding AssetCount}" FontSize="9" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- ListBox Item Container Style -->
        <Style x:Key="FileGridItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <ContentPresenter />
                            <!-- Selection Overlay -->
                            <Border x:Name="SelectionBorder" BorderThickness="2" CornerRadius="10" Margin="6" 
                                    BorderBrush="{StaticResource AccentBrush}" Visibility="Collapsed"/>
                            <materialIcons:MaterialIcon x:Name="CheckIcon" Kind="CheckCircle" Foreground="{StaticResource AccentBrush}" 
                                                        Width="18" Height="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                        Margin="0,0,12,12" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelectionBorder" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Folder Insights & Filters -->
            <RowDefinition Height="*"/>    <!-- Main Grid -->
        </Grid.RowDefinitions>

        <!-- 1. Header: Quick Filters ONLY -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="16,12" Margin="0,0,5,0">
            <Grid>
                <!-- Quick Filters (Now the main element) -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="FILTER BY" Style="{StaticResource ToolSectionLabel}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="2" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Style="{StaticResource SegmentedRadioButtonStyle}" IsChecked="True" Tag="All" Click="FilterButton_Click" ToolTip="Show All Assets" Padding="10,4">
                                <materialIcons:MaterialIcon Kind="BorderAll" Width="16" Height="16"/>
                            </RadioButton>
                            <RadioButton Style="{StaticResource SegmentedRadioButtonStyle}" Tag="Images" Click="FilterButton_Click" ToolTip="Images &amp; Textures" Padding="10,4">
                                <materialIcons:MaterialIcon Kind="TextureBox" Width="16" Height="16"/>
                            </RadioButton>
                            <RadioButton Style="{StaticResource SegmentedRadioButtonStyle}" Tag="Audio" Click="FilterButton_Click" ToolTip="Audio Banks &amp; Media" Padding="10,4">
                                <materialIcons:MaterialIcon Kind="VolumeHigh" Width="16" Height="16"/>
                            </RadioButton>
                            <RadioButton Style="{StaticResource SegmentedRadioButtonStyle}" Tag="3D" Click="FilterButton_Click" ToolTip="3D Models &amp; Animations" Padding="10,4">
                                <materialIcons:MaterialIcon Kind="CubeOutline" Width="16" Height="16"/>
                            </RadioButton>
                            <RadioButton Style="{StaticResource SegmentedRadioButtonStyle}" Tag="Data" Click="FilterButton_Click" ToolTip="Text &amp; Data" Padding="10,4">
                                <materialIcons:MaterialIcon Kind="FileDocumentOutline" Width="16" Height="16"/>
                            </RadioButton>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. Main Grid: ListBox with WrapPanel -->
        <ListBox Grid.Row="1" x:Name="FileGridListBox"
                 Background="Transparent" BorderThickness="0"
                 SelectionMode="Extended"
                 Padding="10"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemTemplate="{StaticResource FileGridItemTemplate}"
                 SelectionChanged="FileGridListBox_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource FileGridItemStyle}">
                    <Setter Property="Visibility" Value="{Binding Node.IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <!-- 3. Floating Action Bar (Visible on Multi-selection) -->
        <Border x:Name="ActionBarBorder" Grid.Row="1" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,30" Visibility="Collapsed"
                Background="{StaticResource CardBackground}" 
                CornerRadius="22" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1.5"
                Padding="15,8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.4"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialIcons:MaterialIcon Kind="CheckCircleOutline" Width="16" Height="16" Foreground="{StaticResource AccentBrush}" Margin="5,0,12,0"/>
                <TextBlock x:Name="SelectedCountText" Text="0 items" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                
                <Border Background="{StaticResource BorderColor}" Width="1" Height="16" Margin="0,0,15,0"/>

                <!-- Extract (Raw) -->
                <Button Style="{StaticResource TransparentIconButton}" Tag="Extract" Click="ActionBar_Action_Click" ToolTip="Extract Raw Assets" Width="32" Height="32">
                    <materialIcons:MaterialIcon Kind="FileDownloadOutline" Width="20" Height="20"/>
                </Button>

                <!-- Save (Smart) -->
                <Button Style="{StaticResource TransparentIconButton}" Tag="Save" Click="ActionBar_Action_Click" ToolTip="Save (conversion)" Width="32" Height="32">
                    <materialIcons:MaterialIcon Kind="ContentSaveOutline" Width="20" Height="20"/>
                </Button>

                <!-- Merger -->
                <Button Style="{StaticResource TransparentIconButton}" Tag="Merge" Click="ActionBar_Action_Click" ToolTip="Add to Image Merger" Width="32" Height="32">
                    <materialIcons:MaterialIcon Kind="ViewGridPlusOutline" Width="20" Height="20"/>
                </Button>

                <Border Background="{StaticResource BorderColor}" Width="1" Height="16" Margin="10,0,10,0"/>

                <!-- Close -->
                <Button Style="{StaticResource TransparentIconButton}" Tag="Close" Click="ActionBar_Action_Click" ToolTip="Clear Selection" Width="32" Height="32">
                    <materialIcons:MaterialIcon Kind="Close" Width="18" Height="18" Foreground="{StaticResource TextMuted}"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
