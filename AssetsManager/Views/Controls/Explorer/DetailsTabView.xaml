<UserControl x:Class="AssetsManager.Views.Controls.Explorer.DetailsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
             
    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Status Card -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
            <Border Background="{StaticResource HoverColor}" CornerRadius="8" Width="40" Height="40" Margin="0,0,16,0">
                <materialIcons:MaterialIcon Kind="FileEditOutline" Width="20" Height="20" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="File Details" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Metadata information for renamed items" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>
        </StackPanel>

        <!-- Status Badge Card (Refined & Compact) -->
        <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="10" Padding="16,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Change Type Badge -->
                <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8" Margin="0,0,16,0" VerticalAlignment="Center" Background="{StaticResource HoverColor}">
                    <materialIcons:MaterialIcon Kind="CompareHorizontal" Width="18" Height="18" 
                                                Foreground="{StaticResource AccentOrange}" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="CHANGE TYPE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                    <TextBlock Text="RENAMED" 
                               Foreground="{StaticResource AccentOrange}" 
                               FontSize="16" FontWeight="Bold" Margin="0,-1,0,0"
                               Typography.Capitals="AllSmallCaps"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="PATH HISTORY" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,0,0,12"/>

            <!-- Old Path -->
            <StackPanel Margin="0,0,0,16">
                <TextBlock Text="Original Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="12,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <TextBlock Text="{Binding RenamedDiffDetails.OldPath, FallbackValue='N/A'}" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- New Path -->
            <StackPanel>
                <TextBlock Text="New Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="12,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <TextBlock Text="{Binding RenamedDiffDetails.NewPath, FallbackValue='N/A'}" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
