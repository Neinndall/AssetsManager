<UserControl x:Class="AssetsManager.Views.Controls.Explorer.DetailsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" d:DesignWidth="800">
             
    <Border Background="{StaticResource SidebarBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="0,0,0,1"
            Padding="16,12">
        <StackPanel>
            <!-- Badge Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <materialIcons:MaterialIcon Kind="FileEditOutline" Width="16" Height="16" Foreground="{StaticResource AccentOrange}" Margin="0,0,8,0"/>
                <TextBlock Text="RENAMED FILE METADATA" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Typography.Capitals="AllSmallCaps"/>
            </StackPanel>

            <StackPanel>
                <!-- Original Path -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Original Path" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <Border Background="{StaticResource HoverColor}" CornerRadius="4" Padding="8,6" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <TextBlock Text="{Binding RenamedDiffDetails.OldPath}" Foreground="{StaticResource TextSecondary}" FontSize="12" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>

                <!-- New Path -->
                <StackPanel>
                    <TextBlock Text="New Path" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <Border Background="{StaticResource HoverColor}" CornerRadius="4" Padding="8,6" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <TextBlock Text="{Binding RenamedDiffDetails.NewPath}" Foreground="{StaticResource TextPrimary}" FontSize="12" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>