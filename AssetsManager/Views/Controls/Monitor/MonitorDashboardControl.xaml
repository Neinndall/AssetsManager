<UserControl x:Class="AssetsManager.Views.Controls.Monitor.MonitorDashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Hero Header -->
            <RowDefinition Height="*"/>    <!-- Service Grid -->
        </Grid.RowDefinitions>

        <!-- 1. MODULE IDENTIFIER: Minimalist Tech Label -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,8">
                <TextBlock Text="[ MODULE: 01 ]" FontSize="10" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Opacity="0.8" Margin="0,0,12,0"/>
                <TextBlock Text="OPERATIONS DASHBOARD" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Opacity="0.5"/>
            </StackPanel>
            
            <!-- Technical Separator -->
            <Rectangle Height="1" Fill="{StaticResource BorderColor}" VerticalAlignment="Bottom" Opacity="0.3"/>
        </Grid>

        <!-- 2. SERVICE GRID: Reorganized Layout (Status Top, Data Bottom) -->
        <UniformGrid Grid.Row="1" Columns="2">
            
            <!-- CARD 1 (Top-Left): PBE SERVER -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="0,0,12,12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Minimal Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="ServerNetwork" Width="18" Height="18" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="PBE SERVER" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Main Content: Status Hero -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,16">
                        <Border HorizontalAlignment="Left" Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="8,4" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{Binding PbeStatusColor}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ENVIRONMENT STATUS" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <TextBlock Text="{Binding PbeStatusText}" Foreground="{StaticResource TextPrimary}" FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                    
                    <!-- Footer -->
                    <Grid Grid.Row="2">
                        <Rectangle Height="1" Fill="{StaticResource BorderColor}" VerticalAlignment="Top" Opacity="0.5" Margin="0,8,0,0"/>
                        <Border HorizontalAlignment="Left" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="8,2" Margin="0,22,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="LAST CHECKED:" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding PbeLastCheck}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- CARD 2 (Top-Right): SYSTEM HEALTH -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="12,0,0,12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Minimal Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="Pulse" Width="18" Height="18" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="SYSTEM HEALTH" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Main Content: Clean List (Icons on the Left) -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="{StaticResource SidebarBackground}" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                                <materialIcons:MaterialIcon Kind="{Binding AppVersionIconKind}" Width="18" Foreground="{Binding AppVersionColor}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Core Version" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding AppVersionText}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="{StaticResource SidebarBackground}" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                                <materialIcons:MaterialIcon Kind="DatabaseCheckOutline" Width="18" Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Hash Database" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,0,0,4"/>
                                <Border HorizontalAlignment="Left" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="{Binding HashesStatus}" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Footer -->
                    <Grid Grid.Row="2">
                        <Rectangle Height="1" Fill="{StaticResource BorderColor}" VerticalAlignment="Top" Opacity="0.5" Margin="0,8,0,0"/>
                        <Border HorizontalAlignment="Left" Background="#1A00E676" CornerRadius="4" Padding="8,2" Margin="0,22,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialIcons:MaterialIcon Kind="{Binding SystemHealthFooterIconKind}" Foreground="{Binding SystemHealthFooterColor}" Width="12" Height="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SystemHealthFooterText}" FontSize="10" FontWeight="Bold" Foreground="{Binding SystemHealthFooterColor}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- CARD 3 (Bottom-Left): FILE WATCHER -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="0,12,12,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Minimal Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="EyeSettingsOutline" Width="18" Height="18" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="FILE WATCHER" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Main Content: Big Metrics -->
                    <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Active Files" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding MonitoredFilesCount}" FontSize="32" FontWeight="Light" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Pending" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding MonitoredFilesChangedCount}" FontSize="32" FontWeight="Light" Foreground="{StaticResource AccentRed}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Footer -->
                    <Grid Grid.Row="2">
                        <Rectangle Height="1" Fill="{StaticResource BorderColor}" VerticalAlignment="Top" Opacity="0.5" Margin="0,8,0,0"/>
                        <Border HorizontalAlignment="Left" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="8,2" Margin="0,22,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ACTIVITY:" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding WatcherLastUpdate}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- CARD 4 (Bottom-Right): ASSET TRACKER -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="12,12,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Minimal Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="ImageSearchOutline" Width="18" Height="18" Foreground="{StaticResource TextSecondary}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="ASSET TRACKER" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Main Content: Big Metrics -->
                    <Grid Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,16">
                         <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Library Size" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding AssetTrackerTotalFound}" FontSize="32" FontWeight="Light" Foreground="{StaticResource AccentGreen}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Categories" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding AssetTrackerCategoriesCount}" FontSize="32" FontWeight="Light" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Footer -->
                    <Grid Grid.Row="2">
                        <Rectangle Height="1" Fill="{StaticResource BorderColor}" VerticalAlignment="Top" Opacity="0.5" Margin="0,8,0,0"/>
                        <Border HorizontalAlignment="Left" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="8,2" Margin="0,22,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="STATUS:" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding AssetTrackerStatus}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

        </UniformGrid>
    </Grid>
</UserControl>