<UserControl x:Class="AssetsManager.Views.Controls.Monitor.MonitorDashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">

    <Grid Margin="0,10,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Bento Grid -->
        </Grid.RowDefinitions>

        <!-- HEADER: DASHBOARD HUD -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="16" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,0,24" Padding="24,18">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Module Icon Spanning both lines -->
                    <Border Grid.Column="0" Background="{StaticResource SidebarBackground}" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                        <materialIcons:MaterialIcon Kind="MonitorDashboard" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Titles Stacked to the right of the icon -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="DASHBOARD" FontSize="10" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,2"/>
                        <TextBlock Text="OPERATIONS CENTER" FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>
                </Grid>

                <!-- HUD Indicators -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Telemetry Strip -->
                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="10" Padding="16,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="PBE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Ellipse Fill="{Binding PbeStatusColor}" Style="{StaticResource PulsingLedTestStyle}" Margin="0,0,16,0"/>
                            <TextBlock Text="DATA" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Ellipse Fill="{Binding DataStatusColor}" Style="{StaticResource PulsingLedTestStyle}" Margin="0,0,16,0"/>
                            <TextBlock Text="CORE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Ellipse Fill="{Binding AppVersionColor}" Style="{StaticResource PulsingLedTestStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- BENTO GRID -->
        <UniformGrid Grid.Row="1" Columns="4">
            
            <!-- CARD 1: PBE SERVER -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="16" Margin="0,0,8,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="10" Background="#1A3498DB">
                            <materialIcons:MaterialIcon Kind="ServerNetwork" Width="18" Height="18" Foreground="{StaticResource AccentBlue}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="Environment" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="PBE SERVER" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PbeStatusText}" Foreground="{StaticResource TextPrimary}" FontSize="12" FontWeight="SemiBold" TextWrapping="Wrap" LineHeight="14" TextAlignment="Center"/>
                    </StackPanel>
                    
                    <Border Grid.Row="2" Background="#1A3498DB" BorderBrush="#333498DB" BorderThickness="1" CornerRadius="8" Padding="10,6" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="ClockOutline" Width="12" Foreground="{StaticResource AccentBlue}" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding PbeLastCheck}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- CARD 2: SYSTEM HEALTH -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="16" Margin="8,0,8,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="10" Background="#1A9B59B6">
                            <materialIcons:MaterialIcon Kind="Pulse" Width="18" Height="18" Foreground="{StaticResource AccentPurple}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="Diagnostics" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="SYSTEM HEALTH" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Version Item -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icon Box -->
                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="8" Background="{Binding AppVersionColor, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=0.1}">
                                <materialIcons:MaterialIcon Kind="{Binding AppVersionIconKind}" Width="16" Height="16" Foreground="{Binding AppVersionColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Core Build" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding AppVersionText}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Grid>

                        <!-- DB Item -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icon Box -->
                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="8" Background="{Binding DataStatusColor, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=0.1}">
                                <materialIcons:MaterialIcon Kind="DatabaseCheckOutline" Width="16" Height="16" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Hash Database" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding HashesStatus}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Border Grid.Row="2" Background="{Binding SystemHealthFooterColor, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=0.1}" 
                            BorderBrush="{Binding SystemHealthFooterColor}" BorderThickness="1" CornerRadius="8" Padding="10,6" Margin="0,16,0,0">
                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding SystemHealthFooterIconKind}" Foreground="{Binding SystemHealthFooterColor}" Width="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding SystemHealthFooterText}" FontSize="9" FontWeight="Bold" Foreground="{Binding SystemHealthFooterColor}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- CARD 3: FILE WATCHER -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="16" Margin="8,0,8,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="10" Background="#1A2ECC71">
                            <materialIcons:MaterialIcon Kind="EyeSettingsOutline" Width="18" Height="18" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="Surveillance" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="FILE WATCHER" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="WATCHING" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding MonitoredFilesCount}" FontSize="30" FontWeight="Light" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="UPDATED" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding MonitoredFilesChangedCount}" FontSize="30" FontWeight="Light" Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2" Background="#1A2ECC71" BorderBrush="#332ECC71" BorderThickness="1" CornerRadius="8" Padding="10,6" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="History" Width="12" Foreground="{StaticResource AccentGreen}" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding WatcherLastUpdate}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" MaxWidth="140" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- CARD 4: ASSET TRACKER -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="16" Margin="8,0,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="10" Background="#1AE67E22">
                            <materialIcons:MaterialIcon Kind="ImageSearchOutline" Width="18" Height="18" Foreground="{StaticResource AccentOrange}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="Discovery" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="ASSET TRACKER" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="TOTAL FOUND" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AssetTrackerTotalFound}" FontSize="30" FontWeight="Light" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="CATEGORIES" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AssetTrackerCategoriesCount}" FontSize="30" FontWeight="Light" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2" Background="#1AE67E22" BorderBrush="#33E67E22" BorderThickness="1" CornerRadius="8" Padding="10,6" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="NavigationVariantOutline" Width="12" Foreground="{StaticResource AccentOrange}" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding AssetTrackerStatus}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" MaxWidth="140" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

        </UniformGrid>
    </Grid>
</UserControl>