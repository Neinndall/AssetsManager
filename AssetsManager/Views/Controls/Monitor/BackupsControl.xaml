<UserControl x:Class="AssetsManager.Views.Controls.Monitor.BackupsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 1. Header -->
            <RowDefinition Height="Auto"/> <!-- 2. Action Buttons -->
            <RowDefinition Height="*"/>    <!-- 3. Backups List -->
        </Grid.RowDefinitions>

        <!-- 1. MODULE IDENTIFIER: Minimalist Tech Label -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,8">
                <TextBlock Text="[ MODULE: 06 ]" FontSize="10" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" Opacity="0.8" Margin="0,0,12,0"/>
                <TextBlock Text="SNAPSHOTS" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Opacity="0.5"/>
            </StackPanel>
            
            <!-- Technical Separator -->
            <Rectangle Height="1" Fill="{StaticResource BorderColor}" VerticalAlignment="Bottom" Opacity="0.3"/>
        </Grid>

        <!-- 2. ACTION BUTTONS (Simplified to 2 Columns) -->
        <UniformGrid Grid.Row="1" Columns="2" Margin="0,0,0,24">
            <!-- Create Backup -->
            <Button Click="createLolBackupButton_Click" Style="{StaticResource SelectionCardButtonStyle}" Margin="0,0,8,0" Height="90" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Plus" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Create Backup" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Generate a new game snapshot" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>

            <!-- Delete Selected -->
            <Button Click="DeleteSelectedBackups_Click" Style="{StaticResource DestructiveSelectionCardButtonStyle}" Margin="8,0,0,0" Height="90" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid>
                    <Border Background="{StaticResource AccentRed}" Opacity="0.05" CornerRadius="12"/>
                    <StackPanel VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="24" Height="24" Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Delete Selected" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource AccentRed}"/>
                        <TextBlock Text="Remove from storage" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Button>
        </UniformGrid>

        <!-- 3. BACKUPS LIST -->
        <ListView Grid.Row="2" x:Name="BackupsListView" ItemsSource="{Binding AllBackups}" Style="{StaticResource ModernListView}" Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Grid>
                                    <!-- 1. Background Layer -->
                                    <Border x:Name="SelectionBorder" Background="{StaticResource CardBackground}" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"/>
                                    
                                    <!-- 2. Accent Indicator -->
                                    <Border x:Name="AccentIndicator" BorderThickness="2,0,0,0" BorderBrush="{StaticResource AccentPurple}" CornerRadius="8"/>

                                    <!-- 3. Content -->
                                    <Grid Margin="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                            <ColumnDefinition Width="*"/>    <!-- Info -->
                                            <ColumnDefinition Width="Auto"/> <!-- Status -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Folder Icon Box -->
                                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="{StaticResource HoverColor}" Margin="0,0,16,0">
                                            <materialIcons:MaterialIcon Kind="FolderZipOutline" Width="22" Height="22" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <!-- Title Row -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                                
                                                <!-- Path Info Icon as Superscript -->
                                                <materialIcons:MaterialIcon Kind="InformationOutline" Width="11" Height="11" Foreground="{StaticResource TextSecondary}" Margin="2,0,0,8" VerticalAlignment="Top" ToolTip="{Binding Path}" Background="Transparent"/>

                                                <!-- NEW Badge -->
                                                <Border Background="{StaticResource AccentPurple}" CornerRadius="4" Padding="6,1" Margin="8,0,0,0" VerticalAlignment="Center"
                                                        Visibility="{Binding IsCurrentSessionBackup, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Metadata Row -->
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <!-- Date -->
                                                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                                    <materialIcons:MaterialIcon Kind="CalendarClock" Width="12" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding CreationDate, StringFormat='{}{0:dd MMM yyyy, HH:mm}'}" FontSize="11" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Size -->
                                                <StackPanel Orientation="Horizontal">
                                                    <materialIcons:MaterialIcon Kind="DatabaseOutline" Width="12" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Size}" FontSize="11" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Selection Check -->
                                        <materialIcons:MaterialIcon x:Name="CheckIcon" Grid.Column="2" Kind="CheckCircle" Foreground="{StaticResource AccentPurple}" Width="24" Height="24" 
                                                                    Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="SelectionBorder" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                        <Setter TargetName="SelectionBorder" Property="BorderThickness" Value="1.5"/>
                                        <Setter TargetName="SelectionBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="SelectionBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</UserControl>
