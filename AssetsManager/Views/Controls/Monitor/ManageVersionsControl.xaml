<UserControl x:Class="AssetsManager.Views.Controls.Monitor.ManageVersionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="15">
        <!-- Header -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="CloudDownloadOutline" 
                                           FontSize="20" 
                                           Foreground="{StaticResource AccentBrush}"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="Manage Versions" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Fetch and save version information from Riot's servers."
                               FontSize="12" 
                               Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Action Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <materialIcons:MaterialIcon Kind="PackageDown"
                                                   Foreground="{StaticResource AccentOrange}"
                                                   FontSize="20"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Fetch Versions"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Fetch manifests and download specific client versions."
                                     TextWrapping="Wrap"
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="34,0,0,0">
                    <Button Content="Get Versions"
                            Click="FetchVersions_Click"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Left"/>
                    <Button Content="Get League-Client"
                            Click="GetLeagueClient_Click"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Left"
                            Margin="10,0,0,0"/>
                    <Button Content="Get LoL-Game-Client"
                            Click="GetLoLGameClient_Click" 
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Left"
                            Margin="10,0,0,0"/>
                    <Button Content="Remove"
                            Click="DeleteSelectedVersions_Click"
                            Style="{StaticResource DestructiveButton}"
                            HorizontalAlignment="Left"
                            Margin="10,0,0,0"
                            ToolTip="Delete Selected"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Locales Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <materialIcons:MaterialIcon Kind="Translate"
                                                   Foreground="{StaticResource AccentOrange}"
                                                   FontSize="20"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Locales"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Select the locales for both 'Get League-Client' and 'Get LoL-Game-Client' actions."
                                     TextWrapping="Wrap"
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                <ItemsControl ItemsSource="{Binding AvailableLocales}" Margin="34,0,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Code}" IsChecked="{Binding IsSelected}" Style="{StaticResource ModernCheckBox}" Margin="0,0,15,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- League Client Versions List -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialIcons:MaterialIcon Kind="DesktopClassic" 
                                                       Foreground="{StaticResource AccentBrush}"
                                                       FontSize="20" 
                                                       Margin="0,0,12,0" 
                                                       VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="League Client Versions" 
                                         FontSize="15" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Versions of the League of Legends client" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24*"/>
                                    <ColumnDefinition Width="22*"/>
                                    <ColumnDefinition Width="54*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Style="{StaticResource FirstModernGridViewColumnHeader}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="FileDocument" Style="{StaticResource HeaderIconStyle}"/>
                                        <TextBlock Text="File Name" Style="{StaticResource HeaderTextStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Style="{StaticResource HalfModernGridViewColumnHeader}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="DateRange" Style="{StaticResource HeaderIconStyle}"/>
                                        <TextBlock Text="Date" Style="{StaticResource HeaderTextStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="2" Style="{StaticResource LastModernGridViewColumnHeader}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="LinkVariant" Style="{StaticResource HeaderIconStyle}"/>
                                        <TextBlock Text="Manifest URL" Style="{StaticResource HeaderTextStyle}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <ListView Grid.Row="1" x:Name="LeagueClientVersionsListView"
                                      ItemsSource="{Binding LeagueClientVersions}"
                                      Style="{StaticResource ModernListView}"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource ModernListViewItem}">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24*"/>
                                                <ColumnDefinition Width="22*"/>
                                                <ColumnDefinition Width="54*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding FileName}"
                                                           Style="{StaticResource CellTextStyle}"
                                                           FontWeight="Medium"
                                                           TextAlignment="Center" />
                                            </Border>
                                            <Border Grid.Column="1" Margin="5,0,10,0">
                                                <TextBlock Text="{Binding Date}" 
                                                           Style="{StaticResource CellTextStyle}"
                                                           FontWeight="Medium"
                                                           TextAlignment="Center" />
                                            </Border>
                                            <Grid Grid.Column="2">
                                                <TextBlock Text="{Binding Content}" 
                                                           Style="{StaticResource CellTextStyle}"
                                                           FontWeight="Medium"
                                                           TextAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </StackPanel>

                <!-- Pagination Controls for League Client Versions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,-15">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LeagueClientTotalPages}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="PrevLeagueClientPage_Click"
                            IsEnabled="{Binding CanGoToPrevLeagueClientPage}">
                        <materialIcons:MaterialIcon Kind="ChevronLeft" />
                    </Button>

                    <TextBlock VerticalAlignment="Center" Margin="0" Foreground="{StaticResource TextPrimary}">
                        <Run Text="{Binding LeagueClientCurrentPage, Mode=OneWay}" />
                        <Run Text="/" />
                        <Run Text="{Binding LeagueClientTotalPages, Mode=OneWay}" />
                    </TextBlock>

                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="NextLeagueClientPage_Click"
                            IsEnabled="{Binding CanGoToNextLeagueClientPage}">
                        <materialIcons:MaterialIcon Kind="ChevronRight" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- LoL Game Client Versions List -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialIcons:MaterialIcon Kind="FolderMultipleOutline" 
                                                       Foreground="{StaticResource AccentBrush}"
                                                       FontSize="20" 
                                                       Margin="0,0,12,0" 
                                                       VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Game Client Versions" 
                                         FontSize="15" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Versions of the Game Client" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24*"/>
                                    <ColumnDefinition Width="22*"/>
                                    <ColumnDefinition Width="54*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Style="{StaticResource FirstModernGridViewColumnHeader}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="FileDocument" Style="{StaticResource HeaderIconStyle}"/>
                                        <TextBlock Text="File Name" Style="{StaticResource HeaderTextStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Style="{StaticResource HalfModernGridViewColumnHeader}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="DateRange" Style="{StaticResource HeaderIconStyle}"/>
                                        <TextBlock Text="Date" Style="{StaticResource HeaderTextStyle}"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="2" Style="{StaticResource LastModernGridViewColumnHeader}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialIcons:MaterialIcon Kind="LinkVariant" Style="{StaticResource HeaderIconStyle}"/>
                                        <TextBlock Text="Manifest URL" Style="{StaticResource HeaderTextStyle}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            <ListView Grid.Row="1" x:Name="LoLGameClientVersionsListView" 
                                      ItemsSource="{Binding LoLGameClientVersions}"
                                      Style="{StaticResource ModernListView}"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource ModernListViewItem}">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24*"/>
                                                <ColumnDefinition Width="22*"/>
                                                <ColumnDefinition Width="54*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding FileName}"
                                                           Style="{StaticResource CellTextStyle}"
                                                           FontWeight="Medium"
                                                           TextAlignment="Center" />
                                            </Border>
                                            <Border Grid.Column="1" Margin="5,0,10,0">
                                                <TextBlock Text="{Binding Date}"
                                                           Style="{StaticResource CellTextStyle}"
                                                           FontWeight="Medium"
                                                           TextAlignment="Center" />
                                            </Border>
                                            <Grid Grid.Column="2">
                                                <TextBlock Text="{Binding Content}" 
                                                           Style="{StaticResource CellTextStyle}"
                                                           FontWeight="Medium"
                                                           TextAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </StackPanel>

                <!-- Pagination Controls for LoL Game Client Versions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,-15">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LoLGameClientTotalPages}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="PrevLoLGameClientPage_Click"
                            IsEnabled="{Binding CanGoToPrevLoLGameClientPage}">
                        <materialIcons:MaterialIcon Kind="ChevronLeft" />
                    </Button>

                    <TextBlock VerticalAlignment="Center" Margin="0" Foreground="{StaticResource TextPrimary}">
                        <Run Text="{Binding LoLGameClientCurrentPage, Mode=OneWay}" />
                        <Run Text="/" />
                        <Run Text="{Binding LoLGameClientTotalPages, Mode=OneWay}" />
                    </TextBlock>

                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="NextLoLGameClientPage_Click"
                            IsEnabled="{Binding CanGoToNextLoLGameClientPage}">
                        <materialIcons:MaterialIcon Kind="ChevronRight" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>