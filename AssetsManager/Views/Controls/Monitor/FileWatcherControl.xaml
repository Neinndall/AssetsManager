<UserControl x:Class="AssetsManager.Views.Controls.Monitor.FileWatcherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- List -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER -->
        <Border Grid.Row="0" Margin="0,0,0,24" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="24,20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="50" Height="50" Margin="0,0,20,0">
                    <materialIcons:MaterialIcon Kind="EyeSettingsOutline" Width="26" Height="26" Foreground="{StaticResource AccentBlue}"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="File Watcher" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Live monitoring of remote data files for instant change detection" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. TOOLBAR -->
        <Border Grid.Row="1" Margin="0,0,0,16" Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Actions & Search -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Add Action -->
                    <Button Click="AddUrl_Click" Style="{StaticResource ModernButton}" HorizontalContentAlignment="Left" Padding="12,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="Plus" Width="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Add File" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Separator -->
                    <Rectangle Width="1" Height="24" Fill="{StaticResource BorderColor}" Margin="16,0,16,0" VerticalAlignment="Center"/>

                    <!-- Search (Compact) -->
                    <TextBox x:Name="txtSearch" Style="{StaticResource StandardSearchBoxStyle}" Width="180" Height="36" TextChanged="TxtSearch_TextChanged" Tag="Search monitors..."/>
                </StackPanel>

                <!-- Right: Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    
                </StackPanel>
            </Grid>
        </Border>

        <!-- 3. MONITORS LIST -->
        <ListView x:Name="MonitoredItemsListView" 
                  Grid.Row="2" 
                  Style="{StaticResource ModernListView}"
                  Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- 1. Background -->
                        <Border x:Name="CardBorder" Background="{StaticResource CardBackground}" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"/>
                        
                        <!-- 2. Status Indicator (Pixel-Perfect Layer) -->
                        <Border x:Name="StatusIndicator" BorderThickness="2,0,0,0" CornerRadius="8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Updated">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentGreen}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Error">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!-- 3. Content -->
                        <Grid Margin="12,8,12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <!-- Status Icon -->
                                <ColumnDefinition Width="*"/>    <!-- Info -->
                                <ColumnDefinition Width="Auto"/> <!-- Actions -->
                            </Grid.ColumnDefinitions>

                            <!-- Status Indicator Box -->
                            <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8" Background="{StaticResource HoverColor}" Margin="0,0,12,0">
                                <materialIcons:MaterialIcon Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <materialIcons:MaterialIcon.Style>
                                        <Style TargetType="materialIcons:MaterialIcon">
                                            <Setter Property="Kind" Value="HelpCircleOutline" />
                                            <Setter Property="Foreground" Value="{StaticResource TextMuted}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date">
                                                    <Setter Property="Kind" Value="CheckCircleOutline" />
                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Updated">
                                                    <Setter Property="Kind" Value="BellRingOutline" />
                                                    <Setter Property="Foreground" Value="{StaticResource AccentBlue}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Checking...">
                                                    <Setter Property="Kind" Value="Sync" />
                                                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Error">
                                                    <Setter Property="Kind" Value="AlertCircleOutline" />
                                                    <Setter Property="Foreground" Value="{StaticResource AccentRed}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialIcons:MaterialIcon.Style>
                                </materialIcons:MaterialIcon>
                            </Border>

                            <!-- Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Alias}" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextPrimary}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="4" Padding="6,1" Margin="0,0,8,0">
                                        <TextBlock Text="{Binding StatusText}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                    </Border>
                                    <TextBlock Text="|" FontSize="10" Foreground="{StaticResource BorderColor}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding LastChecked}" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Compare Action -->
                                <Button Click="ViewChanges_Click" ToolTip="View Differences" Width="28" Height="28" Margin="0,0,8,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource TransparentIconButton}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <materialIcons:MaterialIcon Kind="FileCompare" Width="16" Foreground="{StaticResource AccentBlue}"/>
                                </Button>                                    
                                <!-- Remove Action -->
                                <Button Click="Remove_Click" Style="{StaticResource TransparentIconButton}" Width="28" Height="28" ToolTip="Remove Monitor">
                                    <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="16" Foreground="{StaticResource AccentRed}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>