<UserControl x:Class="AssetsManager.Views.Controls.Monitor.FileWatcherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 1. Header -->
            <RowDefinition Height="Auto"/> <!-- 2. Actions & Search Row -->
            <RowDefinition Height="*"/>    <!-- 3. Content List -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER -->
        <Border Grid.Row="0" Margin="0,0,0,16" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="EyeSettingsOutline" Width="22" Height="22" Foreground="{StaticResource AccentBlue}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="File Watcher" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Live monitoring of remote data files for instant change detection" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>

                <materialIcons:MaterialIcon Grid.Column="1" Kind="FileEye" Width="64" Height="64" Foreground="{StaticResource AccentBlue}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- 2. ACTIONS & SEARCH ROW (Balanced Proportions) -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>    <!-- Search Card (Flexible) -->
                <ColumnDefinition Width="160"/>  <!-- Add Button (Slimmer) -->
                <ColumnDefinition Width="160"/>  <!-- Clear Button (Slimmer) -->
            </Grid.ColumnDefinitions>

            <!-- LEFT: Search Card -->
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,12,0" Height="90">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon Box -->
                    <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" VerticalAlignment="Center" Margin="0,0,16,0">
                        <materialIcons:MaterialIcon Kind="Magnify" Foreground="{StaticResource AccentOrange}" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Text -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Search monitors" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Filter by alias or URL." FontSize="10" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Input (Fixed Clipping) -->
                    <TextBox x:Name="txtSearch" 
                             Grid.Column="2"
                             Style="{StaticResource StandardSearchBoxStyle}" 
                             Width="180" 
                             MinHeight="34"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             TextChanged="TxtSearch_TextChanged" 
                             Tag="Filter..."/>
                </Grid>
            </Border>

            <!-- MIDDLE: Add Monitor -->
            <Button Grid.Column="1" 
                    Click="AddUrl_Click" 
                    Style="{StaticResource SelectionCardButtonStyle}" 
                    Margin="0,0,12,0" 
                    Height="90" 
                    Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Plus" Width="22" Height="22" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                    <TextBlock Text="Add Monitor" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Track URL" FontSize="9" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>

            <!-- RIGHT: Clear All -->
            <Button Grid.Column="2" 
                    Click="ClearAll_Click" 
                    Style="{StaticResource DestructiveSelectionCardButtonStyle}" 
                    Margin="0" 
                    Height="90" 
                    Padding="0" 
                    HorizontalContentAlignment="Stretch" 
                    VerticalContentAlignment="Stretch">
                <Grid>
                    <Border Background="{StaticResource AccentRed}" Opacity="0.05" CornerRadius="12"/>
                    <StackPanel VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="22" Height="22" Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBlock Text="Clear All" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource AccentRed}"/>
                        <TextBlock Text="Reset list" FontSize="9" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Button>
        </Grid>

        <!-- 3. MONITORS LIST -->
        <ListView x:Name="MonitoredItemsListView" 
                  Grid.Row="2" 
                  Style="{StaticResource ModernListView}"
                  Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- Card Background -->
                        <Border x:Name="CardBorder" Background="{StaticResource CardBackground}" CornerRadius="10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"/>
                        
                        <!-- Side Status Accent -->
                        <Border x:Name="StatusIndicator" BorderThickness="3,0,0,0" CornerRadius="10">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Updated"><Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/></DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date"><Setter Property="BorderBrush" Value="{StaticResource AccentGreen}"/></DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Error"><Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/></DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!-- Content -->
                        <Grid Margin="16,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                <ColumnDefinition Width="*"/>    <!-- Info -->
                                <ColumnDefinition Width="Auto"/> <!-- Actions -->
                            </Grid.ColumnDefinitions>

                            <!-- Status Box -->
                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{StaticResource HoverColor}" Margin="0,0,16,0">
                                <materialIcons:MaterialIcon Width="20" Height="20">
                                    <materialIcons:MaterialIcon.Style>
                                        <Style TargetType="materialIcons:MaterialIcon">
                                            <Setter Property="Kind" Value="HelpCircleOutline" /><Setter Property="Foreground" Value="{StaticResource TextMuted}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date"><Setter Property="Kind" Value="CheckCircleOutline" /><Setter Property="Foreground" Value="{StaticResource AccentGreen}" /></DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Updated"><Setter Property="Kind" Value="BellRingOutline" /><Setter Property="Foreground" Value="{StaticResource AccentBlue}" /></DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Checking..."><Setter Property="Kind" Value="Sync" /><Setter Property="Foreground" Value="{StaticResource AccentBrush}" /></DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Error"><Setter Property="Kind" Value="AlertCircleOutline" /><Setter Property="Foreground" Value="{StaticResource AccentRed}" /></DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialIcons:MaterialIcon.Style>
                                </materialIcons:MaterialIcon>
                            </Border>

                            <!-- Information -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Alias}" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimary}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="4" Padding="8,2" Margin="0,0,12,0">
                                        <TextBlock Text="{Binding StatusText}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                                    </Border>
                                    <materialIcons:MaterialIcon Kind="ClockOutline" Width="12" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding LastChecked}" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Contextual Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Click="ViewChanges_Click" ToolTip="Show Differences" Style="{StaticResource TransparentIconButton}" Width="32" Height="32" Margin="0,0,8,0" Visibility="{Binding HasChanges, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <materialIcons:MaterialIcon Kind="FileCompare" Width="18" Foreground="{StaticResource AccentBlue}"/>
                                </Button>                                    
                                <Button Click="Remove_Click" Style="{StaticResource TransparentIconButton}" Width="32" Height="32" ToolTip="Remove Monitor">
                                    <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="18" Foreground="{StaticResource AccentRed}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>