<UserControl x:Class="AssetsManager.Views.Controls.Monitor.FileWatcherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:models="clr-namespace:AssetsManager.Views.Models"
             xmlns:services="clr-namespace:AssetsManager.Services"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=services:MonitorService, IsDesignTimeCreatable=True}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con título -->
        <Border Grid.Row="0" 
                Style="{StaticResource SettingsCard}"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <materialDesign:MaterialIcon Kind="FileFind" 
                                           FontSize="20" 
                                           Foreground="{StaticResource AccentBrush}"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="File Watcher" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Monitor remote JSON files for updates" 
                              FontSize="12" 
                              Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="+ Add URL" Style="{StaticResource ModernButton}" Width="120" Click="AddUrl_Click"/>
            <!-- Search Box -->
                <Grid Width="250" Margin="10,0,0,0">
                    <Border Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6"/>
                    <TextBox x:Name="txtSearch"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="12,10"
                             Foreground="{StaticResource TextPrimary}"
                             CaretBrush="White"
                             FontSize="14"
                             TextChanged="TxtSearch_TextChanged"
                             GotFocus="TxtSearch_GotFocus"
                             LostFocus="TxtSearch_LostFocus"/>
                    <TextBlock Text="🔍 Search ..."
                               x:Name="txtSearchPlaceholder"
                               IsHitTestVisible="False"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0">
                    </TextBlock>
                </Grid>
        </StackPanel>

        <!-- Cards List -->
        <ListView x:Name="MonitoredItemsListView" 
                  Grid.Row="2" 
                  ItemsSource="{Binding MonitoredItems}" 
                  Style="{StaticResource ModernListView}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="10,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 1: Status, Alias, Actions -->
                            <materialDesign:MaterialIcon Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" ToolTip="{Binding StatusText}">
                                <materialDesign:MaterialIcon.Style>
                                    <Style TargetType="materialDesign:MaterialIcon" BasedOn="{StaticResource {x:Type materialDesign:MaterialIcon}}">
                                        <Setter Property="FontSize" Value="13" />
                                        <Setter Property="Kind" Value="HelpCircleOutline" />
                                        <Setter Property="Foreground" Value="{StaticResource TextMuted}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date">
                                                <Setter Property="Kind" Value="CheckCircle" />
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreen}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Updated">
                                                <Setter Property="Kind" Value="ArrowUpCircle" />
                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Checking...">
                                                <Setter Property="Kind" Value="Sync" />
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Error">
                                                <Setter Property="Kind" Value="AlertCircle" />
                                                <Setter Property="Foreground" Value="{StaticResource AccentRed}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:MaterialIcon.Style>
                            </materialDesign:MaterialIcon>

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Alias, StringFormat='Name: {0}'}" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />

                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="View" Click="ViewChanges_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,5,0" IsEnabled="{Binding HasChanges}" Padding="8,3" FontSize="11"/>
                                <Button Content="Remove" Style="{StaticResource DestructiveButton}" Click="Remove_Click" Padding="8,3" FontSize="11"/>
                            </StackPanel>

                            <!-- Row 2: URL, Last Checked -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Url}" Foreground="{StaticResource TextMuted}" FontSize="11" Margin="0,4,0,0" TextTrimming="CharacterEllipsis" ToolTip="{Binding Url}" />
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding LastChecked}" Foreground="{StaticResource TextMuted}" FontSize="11" Margin="0,4,0,0" HorizontalAlignment="Right" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>