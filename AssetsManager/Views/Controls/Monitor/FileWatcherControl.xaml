<UserControl x:Class="AssetsManager.Views.Controls.Monitor.FileWatcherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 1. Header -->
            <RowDefinition Height="Auto"/> <!-- 2. Action Buttons -->
            <RowDefinition Height="Auto"/> <!-- 3. Search Configuration -->
            <RowDefinition Height="*"/>    <!-- 4. Content List -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER (Consistent with other screens) -->
        <Border Grid.Row="0" Margin="0,0,0,16" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="EyeSettingsOutline" Width="22" Height="22" Foreground="{StaticResource AccentBlue}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="File Watcher" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Live monitoring of remote data files for instant change detection" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>

                <materialIcons:MaterialIcon Grid.Column="1" Kind="FileEye" Width="64" Height="64" Foreground="{StaticResource AccentBlue}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- 2. ACTION BUTTONS (4 Columns Grid) -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
            <!-- Add File -->
            <Button Click="AddUrl_Click" Style="{StaticResource SelectionCardButtonStyle}" Margin="0,0,6,0" Height="86" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Plus" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Add Monitor" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Track new URL" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>

            <!-- Refresh Status (Placeholder for now, logic can be added) -->
            <Button Style="{StaticResource SelectionCardButtonStyle}" Margin="6,0,6,0" Height="86" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Sync" Width="24" Height="24" Foreground="{StaticResource AccentPurple}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Refresh All" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Check updates now" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>

            <!-- View History folder -->
            <Button Style="{StaticResource SelectionCardButtonStyle}" Margin="6,0,6,0" Height="86" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="History" Width="24" Height="24" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="View History" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Open local records" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>

            <!-- Remove All (Destructive) -->
            <Button Style="{StaticResource DestructiveSelectionCardButtonStyle}" Margin="6,0,0,0" Height="86" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid>
                    <Border Background="{StaticResource AccentRed}" Opacity="0.05" CornerRadius="12"/>
                    <StackPanel VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="24" Height="24" Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Clear All" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource AccentRed}"/>
                        <TextBlock Text="Reset monitor list" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Button>
        </UniformGrid>

        <!-- 3. SEARCH CONFIGURATION (Mirroring Versions alignment) -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" Margin="0,0,0,16" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Box and Icon -->
                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="Magnify" Foreground="{StaticResource AccentOrange}" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Text and Search -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Search monitors" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Filter your monitored files by alias or URL." FontSize="10" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Search Box aligned to the right -->
                        <TextBox x:Name="txtSearch" 
                                 Grid.Column="1"
                                 Style="{StaticResource StandardSearchBoxStyle}" 
                                 Width="250" 
                                 Height="36" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 TextChanged="TxtSearch_TextChanged" 
                                 Tag="Filter monitors..."/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 4. MONITORS LIST -->
        <ListView x:Name="MonitoredItemsListView" 
                  Grid.Row="3" 
                  Style="{StaticResource ModernListView}"
                  Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- Card Background -->
                        <Border x:Name="CardBorder" Background="{StaticResource CardBackground}" CornerRadius="10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"/>
                        
                        <!-- Side Status Accent -->
                        <Border x:Name="StatusIndicator" BorderThickness="3,0,0,0" CornerRadius="10">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Updated"><Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/></DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date"><Setter Property="BorderBrush" Value="{StaticResource AccentGreen}"/></DataTrigger>
                                        <DataTrigger Binding="{Binding StatusText}" Value="Error"><Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/></DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <!-- Content -->
                        <Grid Margin="16,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                <ColumnDefinition Width="*"/>    <!-- Info -->
                                <ColumnDefinition Width="Auto"/> <!-- Actions -->
                            </Grid.ColumnDefinitions>

                            <!-- Status Box -->
                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{StaticResource HoverColor}" Margin="0,0,16,0">
                                <materialIcons:MaterialIcon Width="20" Height="20">
                                    <materialIcons:MaterialIcon.Style>
                                        <Style TargetType="materialIcons:MaterialIcon">
                                            <Setter Property="Kind" Value="HelpCircleOutline" /><Setter Property="Foreground" Value="{StaticResource TextMuted}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Up-to-date"><Setter Property="Kind" Value="CheckCircleOutline" /><Setter Property="Foreground" Value="{StaticResource AccentGreen}" /></DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Updated"><Setter Property="Kind" Value="BellRingOutline" /><Setter Property="Foreground" Value="{StaticResource AccentBlue}" /></DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Checking..."><Setter Property="Kind" Value="Sync" /><Setter Property="Foreground" Value="{StaticResource AccentBrush}" /></DataTrigger>
                                                <DataTrigger Binding="{Binding StatusText}" Value="Error"><Setter Property="Kind" Value="AlertCircleOutline" /><Setter Property="Foreground" Value="{StaticResource AccentRed}" /></DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialIcons:MaterialIcon.Style>
                                </materialIcons:MaterialIcon>
                            </Border>

                            <!-- Information -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Alias}" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimary}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="4" Padding="8,2" Margin="0,0,12,0">
                                        <TextBlock Text="{Binding StatusText}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                                    </Border>
                                    <materialIcons:MaterialIcon Kind="ClockOutline" Width="12" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding LastChecked}" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Contextual Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Click="ViewChanges_Click" 
                                        ToolTip="Show Differences" 
                                        Style="{StaticResource TransparentIconButton}"
                                        Width="32" Height="32" Margin="0,0,8,0"
                                        Visibility="{Binding HasChanges, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <materialIcons:MaterialIcon Kind="FileCompare" Width="18" Foreground="{StaticResource AccentBlue}"/>
                                </Button>                                    
                                <Button Click="Remove_Click" 
                                        Style="{StaticResource TransparentIconButton}" 
                                        Width="32" Height="32" 
                                        ToolTip="Remove Monitor">
                                    <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="18" Foreground="{StaticResource AccentRed}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>