<UserControl x:Class="AssetsManager.Views.Controls.Monitor.HistoryViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header con título -->
        <Border Grid.Row="0" 
                Style="{StaticResource SettingsCard}"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="History" 
                                           FontSize="20" 
                                           Foreground="{StaticResource AccentBrush}"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="File History" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Review past JSON file comparisons" 
                              FontSize="12" 
                              Foreground="{StaticResource TextMuted}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Manual Header -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource FirstModernGridViewColumnHeader}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="FileDocument" Style="{StaticResource HeaderIconStyle}"/>
                    <TextBlock Text="Filename" Style="{StaticResource HeaderTextStyle}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" 
                    Style="{StaticResource LastModernGridViewColumnHeader}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1,1,1,1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Clock" Style="{StaticResource HeaderIconStyle}"/>
                    <TextBlock Text="Date" Style="{StaticResource HeaderTextStyle}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ListView sin GridView -->
        <ListView x:Name="DiffHistoryListView" 
                  Grid.Row="2"
                  ItemsSource="{Binding Paginator.PagedItems}"
                  Margin="0"
                  Style="{StaticResource ModernListView}"
                  ItemContainerStyle="{StaticResource ModernListViewItem}"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition Width="40*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding FileName}"
                                   Style="{StaticResource CellTextStyle}"
                                   FontWeight="Normal"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Timestamp, StringFormat='dd/MM/yyyy HH:mm:ss'}" 
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource CellTextStyle}"
                                   FontWeight="Normal"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Panel de botones y paginación -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Pagination Controls -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Paginator.TotalPages}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <Button Style="{StaticResource TransparentIconButton}"
                        Click="PrevPage_Click"
                        IsEnabled="{Binding Paginator.CanGoToPreviousPage}">
                    <materialIcons:MaterialIcon Kind="ChevronLeft" />
                </Button>

                <TextBlock VerticalAlignment="Center" Margin="5,0" Foreground="{StaticResource TextPrimary}">
                    <Run Text="{Binding Paginator.CurrentPage, Mode=OneWay}" />
                    <Run Text="/"/>
                    <Run Text="{Binding Paginator.TotalPages, Mode=OneWay}" />
                </TextBlock>
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="NextPage_Click"
                            IsEnabled="{Binding Paginator.CanGoToNextPage}">
                        <materialIcons:MaterialIcon Kind="ChevronRight" />                
                    </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <Button x:Name="btnViewDiff" 
                        Content="View Changes" 
                        Style="{StaticResource SecondaryButton}" 
                        Margin="0,0,8,0" 
                        Click="btnViewDiff_Click"/>
                <Button x:Name="btnRemoveSelected" 
                        Content="Remove" 
                        Style="{StaticResource DestructiveButton}" 
                        Click="btnRemoveSelected_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
