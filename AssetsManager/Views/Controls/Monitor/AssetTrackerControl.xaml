<UserControl x:Class="AssetsManager.Views.Controls.Monitor.AssetTrackerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Controls.Monitor"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 1. Header -->
            <RowDefinition Height="Auto"/> <!-- 2. Category Configuration -->
            <RowDefinition Height="Auto"/> <!-- 3. Action Buttons -->
            <RowDefinition Height="*"/>    <!-- 4. Grid Area -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER -->
        <Border Grid.Row="0" Margin="0,0,0,16" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="ImageSearchOutline" Width="22" Height="22" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Asset Tracker" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="-2,0,0,0"/>
                    <TextBlock Text="Discover and catalog remote assets" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="-2,2,0,0"/>
                </StackPanel>

                <materialIcons:MaterialIcon Grid.Column="1" Kind="ImageMultiple" Width="64" Height="64" Foreground="{StaticResource AccentGreen}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- 2. CATEGORY CONFIGURATION (Now above Buttons) -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" Margin="0,0,0,16" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Box and Icon -->
                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="ShapeOutline" Foreground="{StaticResource AccentOrange}" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Text and Combo: Centered vertically -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Tracked Category" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="-2,0,0,0"/>
                            <TextBlock Text="Select the asset category you want to monitor and scan." FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="-2,2,0,0"/>
                        </StackPanel>

                        <ComboBox Grid.Column="1" Name="CategoryComboBox" Style="{StaticResource ModernComboBox}" Width="250" Height="36" HorizontalAlignment="Right" VerticalAlignment="Center" SelectionChanged="CategoryComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="4,0">
                                        <Border Width="8" Height="8" CornerRadius="4" Margin="0,0,10,0" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasNewAssets}" Value="True"><Setter Property="Visibility" Value="Visible"/><Setter Property="Background" Value="{StaticResource AccentBrush}"/></DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Checking"><Setter Property="Visibility" Value="Visible"/><Setter Property="Background" Value="{StaticResource AccentBlue}"/></DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="CompletedSuccess"><Setter Property="Visibility" Value="Visible"/><Setter Property="Background" Value="{StaticResource AccentGreen}"/></DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 3. ACTION BUTTONS (Now below Configuration) -->
        <UniformGrid Grid.Row="2" Columns="4" Margin="0,0,0,24">
            <Button Name="CheckButton" Click="CheckButton_Click" Style="{StaticResource SelectionCardButtonStyle}" Margin="0,0,6,0" Height="86" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Radar" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Scan CDN" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Check for new assets" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>
            <Button Name="LoadMoreButton" Click="LoadMoreButton_Click" Style="{StaticResource SelectionCardButtonStyle}" Margin="6,0,6,0" Height="86" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="PlusBoxMultipleOutline" Width="24" Height="24" Foreground="{StaticResource AccentPurple}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Load More" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Fetch next batch" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>
            <Button Name="DownloadButton" Click="DownloadButton_Click" Style="{StaticResource SelectionCardButtonStyle}" Margin="6,0,6,0" Height="86" Padding="0">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="DownloadOutline" Width="24" Height="24" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Download All" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Save visible assets" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>
            <Button Name="RemoveFoundButton" Click="RemoveFoundButton_Click" Style="{StaticResource DestructiveSelectionCardButtonStyle}" Margin="6,0,0,0" Height="86" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid>
                    <Border Background="{StaticResource AccentRed}" Opacity="0.05" CornerRadius="12"/>
                    <StackPanel VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="Broom" Width="24" Height="24" Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Clean Found" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource AccentRed}"/>
                        <TextBlock Text="Reset found list" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Button>
        </UniformGrid>

        <!-- 4. ASSET GRID -->
        <ItemsControl Grid.Row="3" Name="AssetsItemsControl">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid IsItemsHost="True" Columns="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="8" Padding="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <StackPanel>
                            <Border Margin="12,12,12,0" Height="140">
                                <Grid>
                                    <Border CornerRadius="12" Background="{StaticResource SidebarBackground}">
                                        <Border.Effect><DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.3" Color="Black"/></Border.Effect>
                                        <Border CornerRadius="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" ClipToBounds="True">
                                            <Grid>
                                                <materialIcons:MaterialIcon Kind="ImageOutline" Width="48" Height="48" Foreground="{StaticResource TextMuted}" Opacity="0.1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border CornerRadius="12">
                                                    <Border.Background><ImageBrush ImageSource="{Binding Thumbnail}" Stretch="UniformToFill"/></Border.Background>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </Border>
                                    <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" Padding="8,4" CornerRadius="6" Background="#CC18181B">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon Width="12" Height="12" Margin="0,0,6,0">
                                                <materialIcons:MaterialIcon.Style>
                                                    <Style TargetType="materialIcons:MaterialIcon">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="OK"><Setter Property="Kind" Value="CheckCircle"/><Setter Property="Foreground" Value="{StaticResource AccentGreen}"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Pending"><Setter Property="Kind" Value="ClockOutline"/><Setter Property="Foreground" Value="{StaticResource TextMuted}"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Checking"><Setter Property="Kind" Value="Sync"/><Setter Property="Foreground" Value="{StaticResource AccentBrush}"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Not Found"><Setter Property="Kind" Value="AlertCircleOutline"/><Setter Property="Foreground" Value="{StaticResource AccentRed}"/></DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialIcons:MaterialIcon.Style>
                                            </materialIcons:MaterialIcon>
                                            <TextBlock Text="{Binding Status}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                            <Border Padding="12">
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" TextAlignment="Center" TextTrimming="CharacterEllipsis" Margin="0,0,0,12"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Click="SaveAssetButton_Click" Tag="{Binding}" Style="{StaticResource ModernButton}" Width="32" Height="32" MinWidth="0" Padding="0" Margin="0,0,6,0" ToolTip="Save to Disk"><materialIcons:MaterialIcon Kind="ContentSaveOutline" Width="16" Height="16" Foreground="White"/></Button>
                                        <Button Click="RemoveAssetButton_Click" Tag="{Binding}" Style="{StaticResource DestructiveButton}" Opacity="0.8" Width="32" Height="32" MinWidth="0" Padding="0" Margin="6,0,0,0" ToolTip="Ignore Asset"><materialIcons:MaterialIcon Kind="TrashCanOutline" Width="16" Height="16" Foreground="White"/></Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
