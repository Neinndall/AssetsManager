<UserControl x:Class="AssetsManager.Views.Controls.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource LogHeaderBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icono y texto "Logger" eliminados. Se pueden volver a añadir aquí si es necesario. -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ClearStatusBar_Click"
                            ToolTip="Clear Status Bar"
                            Margin="0,0,4,0">
                        <materialIcons:MaterialIcon Kind="NotificationClearAll" 
                                                    Width="15" 
                                                    Height="15"/>
                    </Button>
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ClearLogs_Click"
                            ToolTip="Clear Logger">
                        <materialIcons:MaterialIcon Kind="TrashCan" 
                                                    Width="15" 
                                                    Height="15"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Logs Content -->
        <RichTextBox Grid.Row="1" 
                     x:Name="richTextBoxLogs" 
                     Style="{StaticResource LogRichTextBoxStyle}"/>
    </Grid>
</UserControl>