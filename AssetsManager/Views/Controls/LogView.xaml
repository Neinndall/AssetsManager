<UserControl x:Class="AssetsManager.Views.Controls.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MINIMALIST TOOLBAR HEADER -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackground}" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="0,0,0,1" 
                Padding="12,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Show/Hide Logger -->
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ToggleLogSize_Click"
                            ToolTip="Show/Hide Logger"
                            Width="28" Height="28"
                            Margin="0,0,4,0">
                        <materialIcons:MaterialIcon x:Name="ToggleIcon" Kind="ChevronDown" Width="14" Height="14"/>
                    </Button>

                    <!-- Reset Status Bar -->
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ClearStatusBar_Click"
                            ToolTip="Clear Status Bar &amp; Notifications"
                            Width="28" Height="28"
                            Margin="0,0,4,0">
                        <materialIcons:MaterialIcon Kind="BellOffOutline" Width="14" Height="14"/>
                    </Button>

                    <!-- Clear Log -->
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ClearLogs_Click"
                            ToolTip="Clear All Logs"
                            Width="28" Height="28">
                        <materialIcons:MaterialIcon Kind="Broom" Width="14" Height="14" Foreground="{DynamicResource AccentRed}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Logs Content -->
        <RichTextBox Grid.Row="1" 
                     x:Name="richTextBoxLogs" 
                     Style="{StaticResource LogRichTextBoxStyle}"/>
    </Grid>
</UserControl>