<UserControl x:Class="AssetsManager.Views.Controls.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" >
             
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MINIMALIST TOOLBAR HEADER -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,0,0,1" 
                Padding="12,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Show/Hide Logger -->
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ToggleLogSize_Click"
                            ToolTip="Show/Hide Logger"
                            Width="28" Height="28"
                            Margin="0,0,4,0">
                        <materialIcons:MaterialIcon x:Name="ToggleIcon" Kind="{Binding ToggleIconKind}" Width="14" Height="14"/>
                    </Button>

                    <!-- Reset Status Bar -->
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ClearStatusBar_Click"
                            ToolTip="Clear Status Bar"
                            Width="28" Height="28"
                            Margin="0,0,4,0">
                        <Grid>
                            <!-- Main Icon (Dynamic) -->
                            <materialIcons:MaterialIcon Width="14" Height="14">
                                <materialIcons:MaterialIcon.Style>
                                    <Style TargetType="materialIcons:MaterialIcon">
                                        <!-- Default State (Active/Has Notifications or Status) -->
                                        <Setter Property="Kind" Value="BellRing"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        
                                        <Style.Triggers>
                                            <!-- Empty State (0 Notifications AND No Status Text) -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding NotificationCount}" Value="0"/>
                                                    <Condition Binding="{Binding HasActiveStatus}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Kind" Value="BellOffOutline"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialIcons:MaterialIcon.Style>
                            </materialIcons:MaterialIcon>

                            <!-- Notification Badge -->
                            <Border Background="{StaticResource AccentRed}" 
                                    CornerRadius="5" 
                                    MinWidth="10" Height="10"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Margin="-4,-2,-4,0"
                                    Padding="2,0"
                                    Visibility="{Binding NotificationCount, Converter={StaticResource CountToVisibilityConverter}}">
                                <TextBlock Text="{Binding NotificationCount}" 
                                           FontSize="7" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Margin="0,-1,0,0"/>
                            </Border>
                        </Grid>
                    </Button>

                    <!-- Clear Log -->
                    <Button Style="{StaticResource TransparentIconButton}"
                            Click="ClearLogs_Click"
                            ToolTip="Clear All Logs"
                            Width="28" Height="28">
                        <materialIcons:MaterialIcon Kind="Broom" Width="14" Height="14" Foreground="{StaticResource AccentRed}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Logs Content -->
        <RichTextBox Grid.Row="1" 
                     x:Name="richTextBoxLogs" 
                     Visibility="{Binding LogVisibility}"
                     Style="{StaticResource LogRichTextBoxStyle}"/>
    </Grid>
</UserControl>
