<UserControl x:Class="AssetsManager.Views.Settings.HashPathsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,24">
            <TextBlock Text="Default Paths" 
                         FontSize="28" 
                         FontWeight="Light" 
                         Foreground="{StaticResource TextPrimary}"
                         Margin="0,4,0,0"/>
            <TextBlock Text="Configure default directories for the application" 
                         FontSize="14" 
                         Foreground="{StaticResource TextMuted}"
                         Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Paths Configuration Section -->
        <Border Style="{StaticResource SettingsCard}" Padding="30">
            <StackPanel>

                <!-- New Hash Directory -->
                <StackPanel Margin="0,0,0,30">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderPlus" Foreground="{StaticResource AccentGreen}" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="New Hash Directory" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Location where new hash files will be stored" FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="textBoxNewHashPath" Grid.Column="0" IsReadOnly="True" Style="{StaticResource ModernTextBox}" Margin="0,0,12,0"/>
                        <Button x:Name="btnBrowseNew" Grid.Column="1" Content="Browse" Click="btnBrowseNew_Click" Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </StackPanel>

                <!-- Old Hash Directory -->
                <StackPanel Margin="0,0,0,30">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderMinus" Foreground="{StaticResource AccentOrange}" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Old Hash Directory" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Location where existing hash files are located" FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="textBoxOldHashPath" Grid.Column="0" IsReadOnly="True" Style="{StaticResource ModernTextBox}" Margin="0,0,12,0"/>
                        <Button x:Name="btnBrowseOld" Grid.Column="1" Content="Browse" Click="btnBrowseOld_Click" Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </StackPanel>

                <!-- LoL Directory -->
                <StackPanel Margin="0,0,0,30">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderSearch" Foreground="{StaticResource AccentBrush}" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="LoL Directory" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Directory where League of Legends is installed" FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="textBoxLolPath" Grid.Column="0" IsReadOnly="True" Style="{StaticResource ModernTextBox}" Margin="0,0,12,0"/>
                        <Button x:Name="btnBrowseLol" Grid.Column="1" Content="Browse" Click="btnBrowseLol_Click" Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </StackPanel>

                <!-- Default Extracted Select Directory -->
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialIcons:MaterialIcon Grid.Column="0" Kind="FolderZipOutline" Foreground="{StaticResource AccentPurple}" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Default Extracted Directory" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Default directory for extracted files from Explorer" FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="textBoxDefaultExtractedPath" Grid.Column="0" IsReadOnly="True" Style="{StaticResource ModernTextBox}" Margin="0,0,12,0"/>
                        <Button x:Name="btnBrowseDefaultExtracted" Grid.Column="1" Content="Browse" Click="btnBrowseDefaultExtracted_Click" Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </StackPanel>

            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>