<UserControl x:Class="AssetsManager.Views.Settings.AdvancedSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="850">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="Advanced Settings" 
                         FontSize="28" 
                         FontWeight="Light" 
                         Foreground="{StaticResource TextPrimary}"
                         Margin="0,4,0,0"/>
            <TextBlock Text="Performance and advanced configuration options" 
                         FontSize="14" 
                         Foreground="{StaticResource TextMuted}"
                         Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Unified Settings Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <!-- Asset Tracker Section -->
                <StackPanel Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="TimerCogOutline" 
                                                   Foreground="{StaticResource AccentOrange}"
                                                   FontSize="20" 
                                                   Margin="0,0,12,0" 
                                                   VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Asset Tracker" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Configure background search frequency" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="10,0,0,0">
                        <CheckBox x:Name="EnableAssetTrackerCheckBox"
                                  Content="Enable automatic background check"
                                  Style="{StaticResource ModernCheckBox}"/>
                        <TextBlock Text="When enabled, the application will periodically check for new assets"
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="27,0,0,8" 
                                     TextWrapping="Wrap"/>

                        <!-- Interval Settings Container -->
                        <StackPanel Margin="27,5,0,8">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=EnableAssetTrackerCheckBox}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="Update Interval" 
                                         Foreground="{StaticResource TextSecondary}" 
                                         FontSize="12" 
                                         Margin="0,0,0,4"/>
                            <TextBlock Text="Specify the desired time between background searches"
                                         Foreground="{StaticResource TextMuted}" 
                                         FontSize="12" 
                                         Margin="0,0,0,10"
                                         TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="AssetTrackerIntervalValueTextBox"
                                         Width="75"
                                         Style="{StaticResource ModernTextBox}"/>
                                <ComboBox x:Name="AssetTrackerIntervalUnitComboBox"
                                          Width="120"
                                          Margin="10,0,0,0"
                                          Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- PBE Status Checker Section -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="LanPending"
                                                   Foreground="{StaticResource AccentPurple}"
                                                   FontSize="20"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="PBE Status"
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Get notifications about PBE status"
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="10,0,0,0">
                        <CheckBox x:Name="EnablePbeStatusCheckBox"
                                  Content="PBE status notifications"
                                  Style="{StaticResource ModernCheckBox}"/>
                        <TextBlock Text="When enabled, the application will periodically check for PBE updates"
                                     Foreground="{StaticResource TextMuted}"
                                     FontSize="12"
                                     Margin="27,0,0,8"
                                     TextWrapping="Wrap"/>

                        <!-- Interval Settings Container -->
                        <StackPanel Margin="27,5,0,8">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=EnablePbeStatusCheckBox}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="Update Interval"
                                         Foreground="{StaticResource TextSecondary}"
                                         FontSize="12"
                                         Margin="0,0,0,4"/>
                            <TextBlock Text="Specify the desired time between background searches"
                                         Foreground="{StaticResource TextMuted}"
                                         FontSize="12"
                                         Margin="0,0,0,10"
                                         TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="PbeIntervalValueTextBox"
                                         Width="75"
                                         Style="{StaticResource ModernTextBox}"/>
                                <ComboBox x:Name="PbeIntervalUnitComboBox"
                                          Width="120"
                                          Margin="10,0,0,0"
                                          Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Application Behavior Section -->
                <StackPanel Margin="0,24,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="ApplicationCog" 
                                                   Foreground="{StaticResource AccentBlue}"
                                                   FontSize="20" 
                                                   Margin="0,0,12,0" 
                                                   VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Application Behavior" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Customize how the application opens and closes" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="10,0,0,0">
                        <CheckBox x:Name="checkBoxMinimizeToTray" 
                                  Content="Close to minimize to tray" 
                                  Style="{StaticResource ModernCheckBox}"/>
                        <TextBlock Text="When closing the app, the application will be minimized to the system tray"
                                     Foreground="{StaticResource TextMuted}" 
                                     FontSize="12" 
                                     Margin="27,0,0,0" 
                                     TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>