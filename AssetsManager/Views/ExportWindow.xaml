<UserControl x:Class="AssetsManager.Views.ExportWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetsManager.Views"
             xmlns:export="clr-namespace:AssetsManager.Views.Controls.Export"
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="Consolas, Courier New">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icono grande -->
                    <materialDesign:MaterialIcon Kind="Export"
                                                 Height="54"
                                                 Width="54"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Grid.Column="0"/>

                    <!-- Título + Subtítulo -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="EXPORT" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Filter, preview and download specific assets using the resources folder."
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <StackPanel>
                <!-- Header Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:MaterialIcon Kind="ToolboxOutline" 
                                                   FontSize="20" 
                                                   Foreground="{StaticResource AccentBrush}"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Export Setup" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Define directories and filters for your custom asset export" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <export:FilterConfigControl x:Name="FilterConfig"/>
                <export:DirectoryConfigControl x:Name="DirectoryConfig"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>