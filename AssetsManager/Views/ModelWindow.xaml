<UserControl x:Class="AssetsManager.Views.ModelWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AssetsManager.Views.Controls.Models"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialIcons:MaterialIcon Kind="Cube"
                                                 Height="54"
                                                 Width="54"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Grid.Column="0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="3D Model Viewer" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Visualize 3D Models with their animations and MapGeometry"
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <Grid Grid.Row="1">
            <!-- Empty State Panel -->
            <StackPanel x:Name="EmptyStatePanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Visible">
                <!-- Default Empty State Content -->
                <StackPanel x:Name="DefaultEmptyStateContent" Visibility="Visible">
                    <materialIcons:MaterialIcon Kind="CubeOutline"
                                                Width="64" Height="64"
                                                HorizontalAlignment="Center"
                                                Foreground="{StaticResource TextMuted}"
                                                Opacity="0.5"
                                                Margin="0,0,0,16"/>
                    <TextBlock Text="SELECT A MODEL OR MAPGEOMETRY"
                            FontSize="24" 
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextMuted}"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,8"/>
                    <TextBlock Text="Load a model, chroma or mapgeometry to view it in 3D"
                            FontSize="16"
                            Foreground="{StaticResource TextMuted}"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,24"
                            Opacity="0.7"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource SecondaryButton}"
                                Click="OpenFile_Click"
                                ToolTip="Load Model">
                            <materialIcons:MaterialIcon Kind="CubeOutline" Width="20" Height="20"/>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}"
                                Click="OpenChromaFile_Click"
                                ToolTip="Load Chroma Model"
                                Margin="10,0,0,0">
                            <materialIcons:MaterialIcon Kind="Palette" Width="20" Height="20"/>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}"
                                Click="OpenGeometryFile_Click"
                                ToolTip="Load MapGeometry"
                                Margin="10,0,0,0">
                            <materialIcons:MaterialIcon Kind="Map" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Loading State Content (Initially Collapsed) -->
                <StackPanel x:Name="LoadingStateContent" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border CornerRadius="5"
                            Width="100"
                            Height="5"
                            Margin="-8,0,0,8"
                            Background="{StaticResource DarkBackground}" 
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True"
                            ClipToBounds="True">
                        <ProgressBar IsIndeterminate="True"
                                     Style="{StaticResource ModernProgressBar}"
                                     BorderThickness="0"
                                     Background="{StaticResource TextPrimary}"/>
                    </Border>
                    <TextBlock Text="Loading Map..."
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="{StaticResource TextMuted}"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- Main Content Grid (initially collapsed) -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55*" MinWidth="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="320" MinWidth="320" MaxWidth="400"/>
                </Grid.ColumnDefinitions>

                <models:ModelViewportControl Grid.Column="0" x:Name="ViewportControl" MaximizeClicked="ViewportControl_MaximizeClicked"/>

                <GridSplitter Grid.Column="1"
                              x:Name="MainGridSplitter"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Width="4"
                              Background="Transparent"
                              ResizeBehavior="PreviousAndNext"
                              ResizeDirection="Columns"/>
                <models:ModelPanelControl Grid.Column="2" x:Name="PanelControl"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>