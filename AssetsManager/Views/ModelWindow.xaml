<UserControl x:Class="AssetsManager.Views.ModelWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:AssetsManager.Views.Controls.Models"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}">
    <UserControl.Resources>
        <Style x:Key="SelectionCardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + textos -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialIcons:MaterialIcon Kind="Cube"
                                                 Height="54"
                                                 Width="54"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 Grid.Column="0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="3D Model Viewer" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="Visualize 3D Models with their animations and MapGeometry"
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMuted}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <Grid Grid.Row="1">
            <!-- Empty State Panel -->
            <StackPanel x:Name="EmptyStatePanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Visible">
                <!-- Default Empty State Content -->
                <StackPanel x:Name="DefaultEmptyStateContent" Visibility="Visible">
                    <TextBlock Text="Get Started"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,4"/>
                    
                    <TextBlock Text="Select an option to load your models"
                               FontSize="15"
                               Foreground="{StaticResource TextMuted}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <UniformGrid Columns="3" HorizontalAlignment="Center">
                        <!-- Load Model Card -->
                        <Button Style="{StaticResource SelectionCardButtonStyle}"
                                Click="OpenFile_Click"
                                ToolTip="Load a standard .skn model"
                                Width="160" Height="140">
                            <StackPanel>
                                <materialIcons:MaterialIcon Kind="CubeOutline" 
                                                          Width="40" Height="40" 
                                                          Foreground="{StaticResource AccentBrush}" 
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,12"/>
                                <TextBlock Text="Load Model" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           Foreground="{StaticResource TextPrimary}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Import .skn files" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Load Chroma Card -->
                        <Button Style="{StaticResource SelectionCardButtonStyle}"
                                Click="OpenChromaFile_Click"
                                ToolTip="Load a model with custom textures"
                                Width="160" Height="140">
                            <StackPanel>
                                <materialIcons:MaterialIcon Kind="Palette" 
                                                          Width="40" Height="40" 
                                                          Foreground="{StaticResource AccentPurple}" 
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,12"/>
                                <TextBlock Text="Load Chroma" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           Foreground="{StaticResource TextPrimary}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Model + Textures" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Load Map Card -->
                        <Button Style="{StaticResource SelectionCardButtonStyle}"
                                Click="OpenGeometryFile_Click"
                                ToolTip="Load map geometry"
                                Width="160" Height="140">
                            <StackPanel>
                                <materialIcons:MaterialIcon Kind="Map" 
                                                          Width="40" Height="40" 
                                                          Foreground="{StaticResource AccentOrange}" 
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,12"/>
                                <TextBlock Text="Load Map" 
                                           FontWeight="SemiBold" 
                                           FontSize="15" 
                                           Foreground="{StaticResource TextPrimary}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Import .mapgeo" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMuted}" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>

                <!-- Loading State Content (Initially Collapsed) -->
                <StackPanel x:Name="LoadingStateContent" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border CornerRadius="5"
                            Width="100"
                            Height="5"
                            Margin="-8,0,0,8"
                            Background="{StaticResource DarkBackground}" 
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True"
                            ClipToBounds="True">
                        <ProgressBar IsIndeterminate="True"
                                     Style="{StaticResource ModernProgressBar}"
                                     BorderThickness="0"
                                     Background="{StaticResource TextPrimary}"/>
                    </Border>
                    <TextBlock Text="Loading Map..."
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="{StaticResource TextMuted}"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- Main Content Grid (initially collapsed) -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55*" MinWidth="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="320" MinWidth="320" MaxWidth="400"/>
                </Grid.ColumnDefinitions>

                <models:ModelViewportControl Grid.Column="0" x:Name="ViewportControl" MaximizeClicked="ViewportControl_MaximizeClicked"/>

                <GridSplitter Grid.Column="1"
                              x:Name="MainGridSplitter"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Width="4"
                              Background="Transparent"
                              ResizeBehavior="PreviousAndNext"
                              ResizeDirection="Columns"/>
                <models:ModelPanelControl Grid.Column="2" x:Name="PanelControl"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>