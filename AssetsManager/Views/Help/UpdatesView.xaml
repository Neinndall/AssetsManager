<UserControl x:Class="AssetsManager.Views.Help.UpdatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
             
    <StackPanel>
        <!-- MODERN INTEGRATED HEADER (Compact) -->
        <Border Margin="0,0,0,20" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="Update" Width="22" Height="22" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Application Updates" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Keep your application up to date with the latest features" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,1,0,0"/>
                </StackPanel>
                <materialIcons:MaterialIcon Grid.Column="1" Kind="CloudSyncOutline" Width="64" Height="64" Foreground="{StaticResource AccentBrush}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- VERSION HUB CARD -->
        <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="16" Padding="24" Margin="0,0,0,20">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                    <Style.Triggers>
                        <!-- Style for when an update is available -->
                        <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <StackPanel>
                    <!-- Up to Date State -->
                    <StackPanel Visibility="{Binding IsUpdateAvailable, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <materialIcons:MaterialIcon Kind="CheckCircleOutline" Foreground="{StaticResource AccentGreen}" Width="40" Height="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="You are up to date!" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="{StaticResource TextSecondary}">
                            <Run Text="AssetsManager"/>
                            <Run Text="{Binding CurrentVersion}"/>
                            <Run Text="is the latest version."/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Update Available State -->
                    <StackPanel Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BoolToVisibilityConverter}}">
                        <materialIcons:MaterialIcon Kind="RocketLaunchOutline" Foreground="White" Width="40" Height="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="New Version Available!" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,4,0,24" Foreground="White" Opacity="0.8">
                            <Run Text="Version"/>
                            <Run Text="{Binding AvailableVersion}" FontWeight="Bold"/>
                            <Run Text="is ready to be installed."/>
                        </TextBlock>
                        
                        <Button x:Name="buttonInstallUpdate" 
                                Content="Download &amp; Install" 
                                Click="buttonInstallUpdate_Click"
                                Style="{StaticResource PrimaryButton}" 
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- INFORMATION SECTION -->
        <TextBlock Text="UPDATE POLICY" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="4,8,0,16"/>
        <UniformGrid Columns="2">
            <!-- Point 1 -->
            <Border Style="{StaticResource SettingsCard}" Margin="0,0,8,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="History" Foreground="{StaticResource AccentBlue}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Regular Releases" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="We deploy frequent updates delivering performance optimizations, new features, and security patches." FontSize="12" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" LineHeight="20"/>
                </StackPanel>
            </Border>

            <!-- Point 2 -->
            <Border Style="{StaticResource SettingsCard}" Margin="8,0,0,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="BellOutline" Foreground="{StaticResource AccentOrange}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Automatic Notifications" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Silent background checks ensure you are always notified of the latest version immediately upon launch." FontSize="12" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" LineHeight="20"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </StackPanel>
</UserControl>
