<UserControl x:Class="AssetsManager.Views.Help.ChangelogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="Changelogs"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="Version history and feature updates"
                       FontSize="14"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <ItemsControl x:Name="ChangelogItemsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="{Binding Version}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Groups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <materialDesign:MaterialIcon Kind="{Binding Icon}" 
                                                                       Foreground="{Binding IconColor}"
                                                                       FontSize="16" 
                                                                       Margin="0,0,8,0" 
                                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Title}"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontSize" Value="14" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <ItemsControl ItemsSource="{Binding Changes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <!-- Subheading -->
                                                        <TextBlock FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextPrimary}" Margin="10,8,0,4">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="{Binding Text}"/>
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSubheading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <!-- Description -->
                                                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}" Margin="10,2,0,2">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="{Binding Text}"/>
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDescription}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <!-- Item with Bullet -->
                                                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="{StaticResource TextSecondary}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Margin" Value="20,2,0,2"/>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSubheading}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsDescription}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IndentationLevel}" Value="2">
                                                                            <Setter Property="Margin" Value="35,2,0,2"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IndentationLevel}" Value="3">
                                                                            <Setter Property="Margin" Value="50,2,0,2"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <Run Text="â€¢ "/><Run Text="{Binding Text}"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>