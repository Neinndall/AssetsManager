<UserControl x:Class="AssetsManager.Views.Help.ChangelogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="Changelogs"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="Version history and feature updates"
                       FontSize="14"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <ItemsControl x:Name="ChangelogItemsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="{Binding Version}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Groups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <materialDesign:MaterialIcon Kind="{Binding Icon}" 
                                                                       Foreground="{Binding IconColor}"
                                                                       FontSize="16" 
                                                                       Margin="0,0,8,0" 
                                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="14" 
                                                       FontWeight="Medium" 
                                                       Foreground="{StaticResource TextPrimary}" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ItemsControl ItemsSource="{Binding Changes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                               FontSize="12" 
                                                               Foreground="{StaticResource TextSecondary}" 
                                                               TextWrapping="Wrap" 
                                                               Margin="12,2,0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>