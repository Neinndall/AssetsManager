<UserControl x:Class="AssetsManager.Views.Help.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header -->
        <StackPanel Margin="0,0,0,32">
            <TextBlock Text="About"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="Information about the application"
                       FontSize="14"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Description Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Information" 
                                               Foreground="{StaticResource AccentBrush}"
                                               FontSize="20" 
                                               Margin="0,0,12,0" 
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Description"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="General information about the application" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="AssetsManager is a tool for League of Legends enthusiasts who need to analyze, manage, and track changes to game assets from PBE server updates. It goes beyond simple downloading, offering a powerful suite of features for deep asset analysis, a 3D model viewer, exploration, and monitoring for changes."
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Key Features Card -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:MaterialIcon Kind="Star"
                                               Foreground="Gold"
                                               FontSize="20" 
                                               Margin="0,0,12,0" 
                                               VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Key Features"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Discover the main functionalities of the application" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• Download automatically new assets"/>
                    </TextBlock>
                    <TextBlock Text="Automatically detects and downloads new assets from PBE updates."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• Advanced WAD Comparator"/>
                    </TextBlock>
                    <TextBlock Text="Compares WAD files between different versions to identify new, modified, or deleted assets."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• Powerful File Explorer"/>
                    </TextBlock>
                    <TextBlock Text="Explore WAD with powerful tools with archives with a file tree interface and previews dozens of formats."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• 3D Model Viewer"/>
                    </TextBlock>
                    <TextBlock Text="Inspects 3D champion models with their animations and MapGeometry Environments with a built-in viewer."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• Asset Monitoring"/>
                    </TextBlock>
                    <TextBlock Text="Tracks remote assets, JSON files, and the PBE server status for real-time updates."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• Version Management"/>
                    </TextBlock>
                    <TextBlock Text="Manages and downloads diferentes versiones de LoL Game Client or Plugins."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
                <StackPanel Margin="0,4">
                    <TextBlock Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="6,0,0,0">
                        <Run Text="• Audio Bank"/>
                    </TextBlock>
                    <TextBlock Text="Explores audio banks (.wpk, .bnk) and displays audio events with their names and plays them."
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="20,2,0,8"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>