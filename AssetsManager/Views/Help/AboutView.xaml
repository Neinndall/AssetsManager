<UserControl x:Class="AssetsManager.Views.Help.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <StackPanel>
        <!-- Page Header (Standard) -->
        <StackPanel Margin="0,0,0,24">
            <TextBlock Text="About"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Information about the application"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- HERO SECTION: Branding -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,32">
            <TextBlock Text="AssetsManager" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}"
                       HorizontalAlignment="Center"/>
            
            <Border Background="{StaticResource CardBackground}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="12,4" 
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Version " Foreground="{StaticResource TextMuted}" FontSize="12"/>
                    <TextBlock Text="{Binding ApplicationVersion, FallbackValue='3.0.0.0'}" 
                               Foreground="{StaticResource AccentBrush}" 
                               FontWeight="SemiBold" 
                               FontSize="12"/>
                </StackPanel>
            </Border>
            
            <TextBlock Text="The ultimate tool for League of Legends PBE analysis and asset management."
                       Foreground="{StaticResource TextSecondary}"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"
                       TextAlignment="Center"
                       MaxWidth="500"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- FEATURES GRID -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="RocketLaunch" 
                                               Foreground="{StaticResource AccentBrush}"
                                               Width="24" Height="24"
                                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               Text="Core Capabilities" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>

                <UniformGrid Columns="2" Rows="4">
                    <!-- Feature 1: Download -->
                    <Grid Margin="0,0,16,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="CloudDownload" Foreground="{StaticResource AccentBlue}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Auto Downloads" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Detects and downloads new PBE assets automatically." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Feature 2: Comparator -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="FileCompare" Foreground="{StaticResource AccentOrange}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="WAD Comparator" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Analyze differences between versions to find changes." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Feature 3: Explorer -->
                    <Grid Margin="0,0,16,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="FolderSearch" Foreground="{StaticResource AccentGreen}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="File Explorer" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Explore archives with a tree view and previews." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Feature 4: 3D Viewer -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="CubeOutline" Foreground="{StaticResource AccentPurple}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="3D Viewer" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Inspect models (.skn) and animations in real-time." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Feature 5: Monitor -->
                    <Grid Margin="0,0,16,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="Radar" Foreground="{StaticResource AccentRed}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Live Monitoring" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Track JSON files and PBE server status." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Feature 6: Version Management -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="Layers" Foreground="{StaticResource AccentPurple}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Version Management" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Download different LoL Game Client versions or Plugins." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Feature 7: Audio -->
                    <Grid Margin="0,0,16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="40" Height="40" CornerRadius="8" VerticalAlignment="Top">
                            <materialIcons:MaterialIcon Kind="MusicNote" Foreground="{StaticResource AccentBrush}" Width="20" Height="20"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Audio Banks" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Listen to and inspect .bnk and .wpk audio events." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>