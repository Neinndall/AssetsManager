<UserControl x:Class="AssetsManager.Views.Help.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <StackPanel>
        <!-- MODERN INTEGRATED HEADER (Compact) -->
        <Border Margin="0,0,0,20" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="InformationOutline" Width="22" Height="22" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="About" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Information about the application" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,1,0,0"/>
                </StackPanel>

                <!-- Subtle Decorative Background Icon -->
                <materialIcons:MaterialIcon Grid.Column="1" Kind="RocketLaunch" Width="64" Height="64" Foreground="{StaticResource AccentBrush}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- HERO SECTION: Branding (Integrated and Refined) -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
            <materialIcons:MaterialIcon Kind="DatabaseSearch" Width="64" Height="64" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,16"/>
            
            <TextBlock Text="AssetsManager" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimary}"
                       HorizontalAlignment="Center"/>
            
            <Border Background="{StaticResource SidebarBackground}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="16,6" 
                    Margin="0,12,0,0"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="VERSION " Foreground="{StaticResource TextMuted}" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,2" Margin="8,0,0,0">
                        <TextBlock Text="{Binding ApplicationVersion, FallbackValue='v3.0.0.0'}" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   FontSize="11"/>
                    </Border>
                </StackPanel>
            </Border>
            
            <TextBlock Text="The ultimate tool for League of Legends PBE analysis and asset management."
                       Foreground="{StaticResource TextSecondary}"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       TextAlignment="Center"
                       MaxWidth="550"
                       LineHeight="22"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- FEATURES GRID -->
        <TextBlock Text="CORE CAPABILITIES" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="4,0,0,16"/>
        <UniformGrid Columns="2">
            <!-- Feature 1: Download -->
            <Border Style="{StaticResource SettingsCard}" Margin="0,0,8,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="CloudDownload" Foreground="{StaticResource AccentBlue}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Auto Downloads" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Seamlessly detects and downloads new PBE assets in the background." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Feature 2: Comparator -->
            <Border Style="{StaticResource SettingsCard}" Margin="8,0,0,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="FileCompare" Foreground="{StaticResource AccentOrange}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="WAD Comparator" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Advanced differential analysis to pinpoint modified content." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Feature 3: Explorer -->
            <Border Style="{StaticResource SettingsCard}" Margin="0,8,8,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="FolderSearch" Foreground="{StaticResource AccentGreen}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="File Explorer" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Browse internal archives with integrated instant previews." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Feature 4: 3D Viewer -->
            <Border Style="{StaticResource SettingsCard}" Margin="8,8,0,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="CubeOutline" Foreground="{StaticResource AccentPurple}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="3D Viewer" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="High-performance rendering of models, skeletons, and animations." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Feature 5: Monitor -->
            <Border Style="{StaticResource SettingsCard}" Margin="0,8,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="Radar" Foreground="{StaticResource AccentRed}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Live Monitoring" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Real-time surveillance of remote configs and server health." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Feature 6: Audio -->
            <Border Style="{StaticResource SettingsCard}" Margin="8,8,0,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="MusicNote" Foreground="{StaticResource AccentBrush}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Audio Banks" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Decrypt, inspect, and playback encrypted audio bank events." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- FOOTER -->
        <TextBlock Text="Â© 2026 AssetsManager. All rights reserved." 
                   FontSize="11" 
                   Foreground="{StaticResource TextMuted}" 
                   HorizontalAlignment="Center" 
                   Margin="0,40,0,0"/>
    </StackPanel>
</UserControl>
