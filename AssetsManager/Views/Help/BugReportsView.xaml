<UserControl x:Class="AssetsManager.Views.Help.BugReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <StackPanel>
        <!-- MODERN INTEGRATED HEADER (Compact) -->
        <Border Margin="0,0,0,20" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="BugOutline" Width="22" Height="22" Foreground="{StaticResource AccentOrange}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Bug Reports" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Help us improve the application by providing quality feedback" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,1,0,0"/>
                </StackPanel>

                <materialIcons:MaterialIcon Grid.Column="1" Kind="Bug" Width="64" Height="64" Foreground="{StaticResource AccentOrange}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- HERO ACTION SECTION (Split) -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Found an Issue Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}" Margin="0,0,10,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="12" Width="48" Height="48" VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="Github" Foreground="{StaticResource TextPrimary}" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock Text="Found an Issue?" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Your feedback is essential. Help us by reporting bugs on our official GitHub repository." 
                                   FontSize="12" Foreground="{StaticResource TextSecondary}" Opacity="0.8" TextWrapping="Wrap" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right: Report Button -->
            <Button Grid.Column="1"
                    x:Name="buttonReportBug" 
                    Click="buttonReportBug_Click"
                    Style="{StaticResource SelectionCardButtonStyle}"
                    Margin="0" Width="160" Padding="0"
                    VerticalAlignment="Stretch">
                <StackPanel VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="Github" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                    <TextBlock Text="Report on GitHub" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Open repository" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- REPORTING GUIDE SECTION -->
        <TextBlock Text="QUALITY CHECKLIST" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="4,0,0,16"/>
        <UniformGrid Columns="2">
            <!-- Step 1 -->
            <Border Style="{StaticResource SettingsCard}" Margin="0,0,8,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="Pencil" Foreground="{StaticResource AccentGreen}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Be Descriptive" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Clearly describe the expected behavior versus what actually happened." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Step 2 -->
            <Border Style="{StaticResource SettingsCard}" Margin="8,0,0,8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="FormatListNumbered" Foreground="{StaticResource AccentBlue}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Steps to Reproduce" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="List the specific actions required to trigger the issue reliably." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Step 3 -->
            <Border Style="{StaticResource SettingsCard}" Margin="0,8,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="Monitor" Foreground="{StaticResource AccentPurple}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="System Info" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Include your Operating System and current Application Version." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Step 4 -->
            <Border Style="{StaticResource SettingsCard}" Margin="8,8,0,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8">
                            <materialIcons:MaterialIcon Kind="FileDocumentOutline" Foreground="{StaticResource AccentRed}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Attach Logs" FontSize="15" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Attach the relevant log files found in the application's root 'logs' folder." FontSize="13" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- FOOTER (Professional Info) -->
        <StackPanel Margin="0,48,0,0" HorizontalAlignment="Stretch">
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Margin="40,0,40,24" Opacity="0.5"/>
            <Grid HorizontalAlignment="Left" Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="12" Width="28" Height="28" Margin="0,0,12,0" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="InformationVariant" Foreground="{StaticResource AccentBrush}" Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Grid.Column="1" 
                           Text="Tip: The application logs are located in the 'logs' folder within the root directory." 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondary}" 
                           VerticalAlignment="Center"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           MaxWidth="600"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>