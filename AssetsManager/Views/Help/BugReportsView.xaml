<UserControl x:Class="AssetsManager.Views.Help.BugReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <StackPanel>
        <!-- MODERN INTEGRATED HEADER (Compact) -->
        <Border Margin="0,0,0,20" Background="{StaticResource CardBackground}" CornerRadius="12" Padding="20,14" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource HoverColor}" CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <materialIcons:MaterialIcon Kind="BugOutline" Width="22" Height="22" Foreground="{StaticResource AccentOrange}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Bug Reports" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Report issues and help improve the application" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,1,0,0"/>
                </StackPanel>

                <!-- Subtle Decorative Background Icon -->
                <materialIcons:MaterialIcon Grid.Column="1" Kind="Bug" Width="64" Height="64" Foreground="{StaticResource AccentOrange}" Opacity="0.05" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-8,0"/>
            </Grid>
        </Border>

        <!-- MAIN ACTION CARD -->
        <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="{StaticResource HoverColor}" CornerRadius="12" Width="60" Height="60">
                    <materialIcons:MaterialIcon Kind="Bug" 
                                               Foreground="{StaticResource AccentOrange}"
                                               Width="32" Height="32"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,20,0">
                    <TextBlock Text="Found an issue?" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Your feedback is essential to making AssetsManager better for everyone." 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Button Grid.Column="2"
                        x:Name="buttonReportBug" 
                        Content="Report on GitHub"
                        Click="buttonReportBug_Click"
                        VerticalAlignment="Center"
                        Style="{StaticResource ModernButton}"/>
            </Grid>
        </Border>

        <!-- REPORTING GUIDE SECTION -->
        <Border Style="{StaticResource SettingsCard}">
            <StackPanel>
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="TextBoxCheckOutline" 
                                               Foreground="{StaticResource AccentBrush}"
                                               Width="24" Height="24"
                                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               Text="How to write an effective report" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimary}"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>

                <UniformGrid Columns="2">
                    <!-- Step 1 -->
                    <Grid Margin="0,0,16,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8" VerticalAlignment="Top">
                            <TextBlock Text="1" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Be Descriptive" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Include what happened and what you expected to see instead." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Step 2 -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8" VerticalAlignment="Top">
                            <TextBlock Text="2" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Steps to Reproduce" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Explain exactly how to trigger the bug so we can find it." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Step 3 -->
                    <Grid Margin="0,0,16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8" VerticalAlignment="Top">
                            <TextBlock Text="3" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="System Info" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Mention your OS and application version for context." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- Step 4 -->
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="{StaticResource HoverColor}" Width="36" Height="36" CornerRadius="8" VerticalAlignment="Top">
                            <TextBlock Text="4" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Attach Logs" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                            <TextBlock Text="Add relevant files from the 'logs' folder to your report." FontSize="12" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- FOOTER (Professional Info) -->
        <StackPanel Margin="0,48,0,0">
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Margin="40,0,40,24" Opacity="0.5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="{StaticResource HoverColor}" CornerRadius="12" Width="28" Height="28" Margin="0,0,12,0">
                    <materialIcons:MaterialIcon Kind="InformationVariant" Foreground="{StaticResource AccentBrush}" Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Tip: The application logs are located in the 'logs' folder within the root directory." 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondary}" 
                           VerticalAlignment="Center"
                           FontStyle="Italic"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>