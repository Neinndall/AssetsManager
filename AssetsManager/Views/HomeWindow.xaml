<UserControl x:Class="AssetsManager.Views.HomeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        
        <!-- Modern Dashboard Tile Style (Container Only) -->
        <Style x:Key="DashboardTileStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <!-- Just presents whatever complicated grid we put inside -->
                            <ContentPresenter />
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource ModernButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Inner Content Template (To reuse structure) -->
        <!-- Since we can't easily template the content structure without custom controls, 
             we will define the Grid structure directly inside each button instance. 
             It's a bit more verbose but avoids the "Tag" property conflict. -->

    </UserControl.Resources>

                <Grid Margin="40,60,40,40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Welcome Section -->
                        <RowDefinition Height="20"/>   <!-- Smaller Spacer -->
                        <RowDefinition Height="*"/>    <!-- Content -->
                    </Grid.RowDefinitions>            <!-- Header Section -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="Welcome!" 
                           FontSize="40" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Select a tool to get started" 
                           FontSize="16" 
                           Foreground="{StaticResource TextMuted}" 
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>        <!-- Tools Grid -->
        <ItemsControl Grid.Row="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <!-- Comparator -->
            <Button Style="{StaticResource DashboardTileStyle}" Click="Button_Click" Tag="Comparator">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="10" Background="Transparent" Margin="0,0,20,0">
                         <materialIcons:MaterialIcon Kind="Compare" Width="32" Height="32" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="WAD Comparator" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="Compare game versions and extract new assets." FontSize="13" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                    
                    <materialIcons:MaterialIcon Grid.Column="2" Kind="ChevronRight" Foreground="{StaticResource TextMuted}" Width="24" Height="24" VerticalAlignment="Center" Opacity="0.5"/>
                </Grid>
            </Button>

            <!-- Explorer -->
            <Button Style="{StaticResource DashboardTileStyle}" Click="Button_Click" Tag="Explorer">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="10" Background="Transparent" Margin="0,0,20,0">
                         <materialIcons:MaterialIcon Kind="FolderSearchOutline" Width="32" Height="32" Foreground="{StaticResource AccentBlue}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="File Explorer" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="Browse WAD files and view contents seamlessly." FontSize="13" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                    
                    <materialIcons:MaterialIcon Grid.Column="2" Kind="ChevronRight" Foreground="{StaticResource TextMuted}" Width="24" Height="24" VerticalAlignment="Center" Opacity="0.5"/>
                </Grid>
            </Button>

            <!-- Models -->
            <Button Style="{StaticResource DashboardTileStyle}" Click="Button_Click" Tag="Models">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="10" Background="Transparent" Margin="0,0,20,0">
                         <materialIcons:MaterialIcon Kind="CubeOutline" Width="32" Height="32" Foreground="{StaticResource AccentPurple}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="3D Viewer" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="Visualize champions, skins, and animations." FontSize="13" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                    
                    <materialIcons:MaterialIcon Grid.Column="2" Kind="ChevronRight" Foreground="{StaticResource TextMuted}" Width="24" Height="24" VerticalAlignment="Center" Opacity="0.5"/>
                </Grid>
            </Button>

            <!-- Monitor -->
            <Button Style="{StaticResource DashboardTileStyle}" Click="Button_Click" Tag="Monitor">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="10" Background="Transparent" Margin="0,0,20,0">
                         <materialIcons:MaterialIcon Kind="Radar" Width="32" Height="32" Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Live Monitor" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="Track PBE updates, server status, and changes." FontSize="13" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                    
                    <materialIcons:MaterialIcon Grid.Column="2" Kind="ChevronRight" Foreground="{StaticResource TextMuted}" Width="24" Height="24" VerticalAlignment="Center" Opacity="0.5"/>
                </Grid>
            </Button>

            <!-- Settings -->
            <Button Style="{StaticResource DashboardTileStyle}" Click="Button_Click" Tag="Settings">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="10" Background="Transparent" Margin="0,0,20,0">
                         <materialIcons:MaterialIcon Kind="CogOutline" Width="32" Height="32" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Settings" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="Configure paths, backups, and app preferences." FontSize="13" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                    
                    <materialIcons:MaterialIcon Grid.Column="2" Kind="ChevronRight" Foreground="{StaticResource TextMuted}" Width="24" Height="24" VerticalAlignment="Center" Opacity="0.5"/>
                </Grid>
            </Button>

            <!-- Help -->
            <Button Style="{StaticResource DashboardTileStyle}" Click="Button_Click" Tag="Help">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="10" Background="Transparent" Margin="0,0,20,0">
                         <materialIcons:MaterialIcon Kind="HelpCircleOutline" Width="32" Height="32" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Help &amp; About" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="View changelogs, report bugs, and check version." FontSize="13" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                    
                    <materialIcons:MaterialIcon Grid.Column="2" Kind="ChevronRight" Foreground="{StaticResource TextMuted}" Width="24" Height="24" VerticalAlignment="Center" Opacity="0.5"/>
                </Grid>
            </Button>

        </ItemsControl>
    </Grid>
</UserControl>
