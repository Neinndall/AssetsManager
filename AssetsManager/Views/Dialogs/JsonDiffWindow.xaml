<Window x:Class="AssetsManager.Views.Dialogs.JsonDiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AssetsManager.Views.Dialogs.Controls"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="Difference Viewer" Height="960" Width="1500" MinHeight="960" MinWidth="1500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SidebarBackground}"
        FontFamily="Consolas, Courier New">
    <Grid>
        <controls:JsonDiffControl x:Name="JsonDiffControl"/>
        
        <!-- Loading Overlay MEJORADO -->
        <Grid x:Name="LoadingOverlay" 
              Background="#E61E1E1E" 
              IsHitTestVisible="True"
              Margin="0,117,0,0"
              Panel.ZIndex="999">

            <!-- Fondo que bloquea interacciones -->
            <Rectangle Fill="Transparent" />

            <!-- Contenedor central -->
            <Border Background="{StaticResource CardBackground}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="40,30" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Fila 1: Icono y Texto Principal -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,12">

                        <!-- Icono -->
                        <icons:MaterialIcon x:Name="ProgressIcon" 
                                            Kind="Sync" 
                                            Foreground="{StaticResource AccentBrush}" 
                                            Width="24" 
                                            Height="24" 
                                            RenderTransformOrigin="0.5,0.5"
                                            VerticalAlignment="Center"
                                            Margin="0,0,10,0">
                            <icons:MaterialIcon.RenderTransform>
                                <RotateTransform/>
                            </icons:MaterialIcon.RenderTransform>
                        </icons:MaterialIcon>

                        <!-- Texto principal -->
                        <TextBlock Text="Processing files..." 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Fila 2: Texto Secundario -->
                    <TextBlock Text="Please wait while the comparison is being prepared" 
                               Foreground="{StaticResource TextMuted}" 
                               FontSize="12" 
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
