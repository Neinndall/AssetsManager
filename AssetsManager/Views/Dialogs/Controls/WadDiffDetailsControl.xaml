<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.WadDiffDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
             
    <Border Style="{StaticResource SettingsCard}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="16" Background="{DynamicResource SidebarBackground}" CornerRadius="8,8,0,0">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{DynamicResource HoverColor}" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                        <materialIcons:MaterialIcon Kind="FileDocumentOutline" Width="18" Height="18" Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Difference Details" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" x:Name="detailsPanel"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="0,0,8,8"
                    Padding="20"
                    MinHeight="400">
                <Grid>
                    <!-- No Selection Message -->
                    <StackPanel x:Name="noSelectionPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="{DynamicResource SidebarBackground}" CornerRadius="40" Width="80" Height="80" Margin="0,0,0,16">
                             <materialIcons:MaterialIcon Kind="FileSearchOutline" Foreground="{DynamicResource TextMuted}" Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                        </Border>
                        <TextBlock Text="Select a file to inspect" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click on any item in the tree to view its properties" Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Details Content -->
                    <StackPanel x:Name="detailsContentPanel" Visibility="Collapsed" VerticalAlignment="Top">

                        <!-- Main Info Card -->
                        <Border Background="{DynamicResource SidebarBackground}" CornerRadius="8" Padding="16" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Change Type Badge -->
                                <Border Grid.RowSpan="2" Grid.Column="0" Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource HoverColor}"/>
                                            <!-- Simple fallback, binding colors would be better but requires converter access here -->
                                        </Style>
                                    </Border.Style>
                                    <materialIcons:MaterialIcon Kind="FileEditOutline" Width="24" Height="24" Foreground="{DynamicResource AccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Row="0" Grid.Column="1" Text="CHANGE TYPE" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextMuted}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="changeTypeTextBlock" Foreground="{DynamicResource TextPrimary}" FontSize="20" FontWeight="Bold" Margin="0,-2,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Generic File Name (If applicable) -->
                        <StackPanel x:Name="genericFileNamePanel" Margin="0,0,0,16">
                            <TextBlock Text="File Name" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                            <Border Background="{DynamicResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                                <TextBlock x:Name="genericFileNameTextBlock" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Paths Section -->
                        <TextBlock Text="PATH INFORMATION" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextMuted}" Margin="0,8,0,8"/>
                        
                        <StackPanel x:Name="pathPanel" Margin="0,0,0,12">
                            <TextBlock Text="Full Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                                <TextBlock x:Name="pathTextBlock" Foreground="{DynamicResource TextPrimary}" FontSize="13" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- RENAME-SPECIFIC -->
                        <StackPanel x:Name="renamedOldNamePanel" Visibility="Collapsed" Margin="0,0,0,12">
                            <TextBlock Text="Original Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                                <TextBlock x:Name="renamedOldNameTextBlock" Foreground="{DynamicResource TextPrimary}" FontSize="13" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                        <StackPanel x:Name="renamedNewNamePanel" Visibility="Collapsed" Margin="0,0,0,12">
                            <TextBlock Text="New Path" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                                <TextBlock x:Name="renamedNewNameTextBlock" Foreground="{DynamicResource TextPrimary}" FontSize="13" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Technical Details Grid -->
                         <TextBlock Text="TECHNICAL DETAILS" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextMuted}" Margin="0,16,0,8"/>
                         
                        <UniformGrid Columns="2" Rows="2">
                            <StackPanel x:Name="oldSizePanel" Margin="0,0,8,12">
                                <TextBlock Text="Old Size" Foreground="{DynamicResource TextSecondary}" FontSize="12"/>
                                <TextBlock x:Name="oldSizeTextBlock" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel x:Name="newSizePanel" Margin="8,0,0,12">
                                <TextBlock Text="New Size" Foreground="{DynamicResource TextSecondary}" FontSize="12"/>
                                <TextBlock x:Name="newSizeTextBlock" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.ColumnSpan="2" Margin="0,8,0,0">
                                <TextBlock Text="Source Container" Foreground="{DynamicResource TextSecondary}" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <materialIcons:MaterialIcon Kind="ArchiveOutline" Width="14" Height="14" Foreground="{DynamicResource AccentOrange}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="sourceWadTextBlock" Foreground="{DynamicResource TextPrimary}" FontSize="13" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </StackPanel>
                        </UniformGrid>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>