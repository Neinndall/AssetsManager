<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.WadDiffDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:models="clr-namespace:AssetsManager.Views.Models.Wad"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
             
    <Border Style="{StaticResource SettingsCard}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="16" Background="{StaticResource SidebarBackground}" CornerRadius="12,12,0,0">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource HoverColor}" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                        <materialIcons:MaterialIcon Kind="FileDocumentOutline" Width="18" Height="18" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Difference Details" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" x:Name="detailsPanel"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="0,0,12,12"
                    Padding="20"
                    MinHeight="400">
                <Grid>
                    <!-- No Selection Message -->
                    <StackPanel x:Name="noSelectionPanel" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                        <Border Background="{StaticResource SidebarBackground}" CornerRadius="40" Width="80" Height="80" Margin="0,0,0,16">
                             <materialIcons:MaterialIcon Kind="FileSearchOutline" Foreground="{StaticResource TextMuted}" Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                        </Border>
                        <TextBlock Text="Select a file to inspect" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click on any item in the tree to view its properties" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Details Content -->
                    <StackPanel x:Name="detailsContentPanel" VerticalAlignment="Top"
                                Visibility="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}">

                        <!-- Main Info Card (Refined & Compact) -->
                        <Border Background="{StaticResource SidebarBackground}" CornerRadius="10" Padding="16,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Change Type Badge -->
                                <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8" Margin="0,0,16,0" VerticalAlignment="Center" Background="{StaticResource HoverColor}">
                                    <materialIcons:MaterialIcon Kind="FileEditOutline" Width="18" Height="18" 
                                                                Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}" 
                                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="CHANGE TYPE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                    <TextBlock Text="{Binding Type}" 
                                               Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}" 
                                               FontSize="16" FontWeight="Bold" Margin="0,-1,0,0"
                                               Typography.Capitals="AllSmallCaps"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Generic File Name (If applicable) -->
                        <StackPanel x:Name="genericFileNamePanel" Margin="0,0,0,16" 
                                    Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='!Renamed'}">
                            <TextBlock Text="File Name" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                            <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <TextBlock Text="{Binding FileName}" Foreground="{StaticResource TextPrimary}" FontWeight="Medium" FontSize="14" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Paths Section -->
                        <TextBlock Text="PATH INFORMATION" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,8,0,8"/>
                        
                        <StackPanel x:Name="pathPanel" Margin="0,0,0,12"
                                    Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='!Renamed'}">
                            <TextBlock Text="Full Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <TextBlock Text="{Binding DisplayPath}" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- RENAME-SPECIFIC -->
                        <StackPanel x:Name="renamedOldNamePanel" Margin="0,0,0,12"
                                    Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='Renamed'}">
                            <TextBlock Text="Original Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <TextBlock Text="{Binding OldPath}" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                        <StackPanel x:Name="renamedNewNamePanel" Margin="0,0,0,12"
                                    Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='Renamed'}">
                            <TextBlock Text="New Path" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="12,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <TextBlock Text="{Binding NewPath}" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Technical Details Grid -->
                         <TextBlock Text="TECHNICAL DETAILS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="0,16,0,8"/>
                         
                        <WrapPanel Orientation="Horizontal">
                            <StackPanel x:Name="oldSizePanel" MinWidth="150" Margin="0,0,16,12"
                                        Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='!New'}">
                                <TextBlock Text="Old Size" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                <TextBlock Text="{Binding OldSizeString}" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel x:Name="newSizePanel" MinWidth="150" Margin="0,0,16,12"
                                        Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='!Removed'}">
                                <TextBlock Text="New Size" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                <TextBlock Text="{Binding NewSizeString}" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" FontSize="14" Margin="0,4,0,0"/>
                            </StackPanel>
                        </WrapPanel>

                        <StackPanel Margin="0,4,0,0">
                            <TextBlock Text="Source Container" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <materialIcons:MaterialIcon Kind="ArchiveOutline" Width="14" Height="14" Foreground="{StaticResource AccentOrange}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SourceWadFile}" Foreground="{StaticResource TextPrimary}" FontSize="13" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
