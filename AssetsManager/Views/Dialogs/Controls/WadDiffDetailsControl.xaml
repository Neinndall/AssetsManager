<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.WadDiffDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">

    <Border Style="{StaticResource SettingsCard}" Padding="0" Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. Header -->
            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="20,15" Background="{StaticResource SidebarBackground}" CornerRadius="11,11,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialIcons:MaterialIcon Kind="InformationOutline" Width="18" Height="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Asset Inspector" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- 2. Content -->
            <Grid Grid.Row="1" Margin="25">
                <!-- No Selection State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5"
                            Visibility="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                    <materialIcons:MaterialIcon Kind="TextBoxSearchOutline" Width="60" Height="60" Foreground="{StaticResource TextMuted}" Margin="0,0,0,15"/>
                    <TextBlock Text="SELECT AN ASSET TO INSPECT" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Inspector Data -->
                <Grid Visibility="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Identity -->
                        <RowDefinition Height="Auto"/> <!-- Path -->
                        <RowDefinition Height="*"/>    <!-- Stats -->
                        <RowDefinition Height="Auto"/> <!-- Primary Action -->
                    </Grid.RowDefinitions>

                    <!-- Identity Card -->
                    <Border Grid.Row="0" Background="{StaticResource SidebarBackground}" CornerRadius="12" Padding="20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,0,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,20,0">
                                <materialIcons:MaterialIcon Kind="{Binding Converter={StaticResource PathToIconConverter}}" Width="24" Height="24" Foreground="{StaticResource AccentBrush}"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FileName}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding SourceWadFile}" FontSize="11" Foreground="{StaticResource TextMuted}" Margin="0,2,0,0"/>
                            </StackPanel>

                            <Border Grid.Column="2" Background="{StaticResource HoverColor}" CornerRadius="6" Padding="12,6" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Type}" Foreground="{StaticResource TextPrimary}" FontSize="11" FontWeight="Black"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Path Info (Standard) -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20" 
                                Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='!Renamed'}">
                        <TextBlock Text="VIRTUAL LOCATION" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,8"/>
                        <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <TextBlock Text="{Binding Path}" FontSize="12" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- Path Info (Renamed) -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20"
                                Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter='Renamed'}">
                        <TextBlock Text="RENAMED PATH LOG" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Origin -->
                            <Border Grid.Row="0" Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="ORIGIN" FontSize="9" FontWeight="Black" Foreground="{StaticResource AccentRed}" Opacity="0.7" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding OldPath}" FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Target -->
                            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="TARGET" FontSize="9" FontWeight="Black" Foreground="{StaticResource AccentGreen}" Opacity="0.7" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding NewPath}" FontSize="11" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Technical Stats -->
                    <Grid Grid.Row="2">
                        <StackPanel>
                            <TextBlock Text="TECHNICAL SPECIFICATIONS" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,8"/>
                            <UniformGrid Columns="3">
                                <!-- OLD SIZE -->
                                <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12,10" Margin="0,0,8,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="OLD SIZE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                            <TextBlock Text="{Binding OldSizeString}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                                        </StackPanel>
                                        <materialIcons:MaterialIcon Kind="History" Width="20" Height="20" Foreground="{StaticResource TextMuted}" Opacity="0.15" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- NEW SIZE -->
                                <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12,10" Margin="0,0,8,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="NEW SIZE" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                                            <TextBlock Text="{Binding NewSizeString}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>
                                        <materialIcons:MaterialIcon Kind="FileOutline" Width="20" Height="20" Foreground="{StaticResource TextPrimary}" Opacity="0.15" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- SIZE VARIATION -->
                                <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="12,10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="VARIATION" FontSize="10" FontWeight="Bold" Foreground="{StaticResource AccentOrange}"/>
                                            <TextBlock Text="{Binding SizeDifferenceString}" FontSize="14" FontWeight="Black" Foreground="{StaticResource AccentOrange}"/>
                                        </StackPanel>
                                        <materialIcons:MaterialIcon Kind="TrendingUp" Width="20" Height="20" Foreground="{StaticResource AccentOrange}" Opacity="0.15" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </UniformGrid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>