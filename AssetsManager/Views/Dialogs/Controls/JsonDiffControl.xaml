<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.JsonDiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:jsonDiff="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="960" d:DesignWidth="1500"
             Background="{StaticResource SidebarBackground}"
             FontFamily="Consolas, Courier New">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <icons:MaterialIcon Kind="CompareHorizontal" 
                                        Width="32" Height="32" 
                                        Margin="0,0,12,0" 
                                        VerticalAlignment="Center" 
                                        Foreground="{StaticResource AccentBrush}"/>
                    <StackPanel>
                        <TextBlock Text="TEXT DIFFERENCE"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Compare old and new text file versions"
                                   FontSize="14"
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="2" 
                        Background="{StaticResource SidebarBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12,8"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <icons:MaterialIcon Kind="TuneVariant" Foreground="{StaticResource TextSecondary}" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="VIEW OPTIONS"
                                       Foreground="{StaticResource TextSecondary}"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <!-- Grupo de NavegaciÃ³n -->
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="PreviousDiffButton" 
                                        Click="PreviousDiffButton_Click" 
                                        Style="{StaticResource NavigationButton}"
                                        Content="ArrowUp">
                                    <Button.ToolTip>
                                        <ToolTip Content="Go to previous difference"/>
                                    </Button.ToolTip>
                                </Button>
                                <Button x:Name="NextDiffButton" 
                                        Margin="5,0,0,0"
                                        Click="NextDiffButton_Click" 
                                        Style="{StaticResource NavigationButton}"
                                        Content="ArrowDown">
                                    <Button.ToolTip>
                                        <ToolTip Content="Go to next difference"/>
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>

                            <!-- Separador -->
                            <Border Background="{StaticResource BorderColor}" Width="1" Margin="8,0" CornerRadius="1"/>

                            <!-- Grupo de Opciones -->
                            <StackPanel Orientation="Horizontal">
                                <ToggleButton x:Name="WordLevelDiffButton"
                                              Click="WordLevelDiffButton_Click"
                                              Style="{StaticResource NavigationToggleButton}"
                                              Content="Spellcheck">
                                    <ToggleButton.ToolTip>
                                        <ToolTip Content="Toggle word-level diff"/>
                                    </ToggleButton.ToolTip>
                                </ToggleButton>
                                <ToggleButton x:Name="HideUnchangedButton"
                                              Margin="5,0,0,0"
                                              Click="HideUnchangedButton_Click"
                                              Style="{StaticResource NavigationToggleButton}"
                                              Content="FilterVariant">
                                    <ToggleButton.ToolTip>
                                        <ToolTip Content="Show/Hide unchanged lines"/>
                                    </ToggleButton.ToolTip>
                                </ToggleButton>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <!-- Diff Grid -->
            <Grid x:Name="DiffGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!-- Old JSON Card -->
                <Border Grid.Column="0" Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ“œ" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                            <StackPanel>
                                <TextBlock Text="Old Version"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock x:Name="OldFileNameLabel"
                                         Text=""
                                         FontSize="12"
                                         Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <Border Grid.Row="1"
                                Background="{StaticResource DarkBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <avalonEdit:TextEditor x:Name="OldJsonContent"
                                                 IsReadOnly="True"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="{StaticResource TextPrimary}"
                                                 Padding="0,8"
                                                 ShowLineNumbers="True"
                                                 WordWrap="False"
                                                 HorizontalScrollBarVisibility="Auto"
                                                 VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Grid Splitter -->
                <GridSplitter Grid.Column="1"
                              Width="12"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Background="Transparent"
                              ResizeBehavior="PreviousAndNext"/>

                <!-- New JSON Card -->
                <Border Grid.Column="2" Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="âœ¨" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                            <StackPanel>
                                <TextBlock Text="New Version"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock x:Name="NewFileNameLabel"
                                         Text=""
                                         FontSize="12"
                                         Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <Border Grid.Row="1"
                                Background="{StaticResource DarkBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <avalonEdit:TextEditor x:Name="NewJsonContent"
                                                 IsReadOnly="True"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="{StaticResource TextPrimary}"
                                                 Padding="0,8"
                                                 ShowLineNumbers="True"
                                                 WordWrap="False"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Grid Splitter for Navigation Panel -->
                <GridSplitter Grid.Column="3"
                              Width="12"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Background="Transparent"
                              ResizeBehavior="PreviousAndNext"/>

                <!-- Navigation Panel -->
                <Border Grid.Column="4" Style="{StaticResource SettingsCard}" Padding="8">
                    <jsonDiff:DiffNavigationPanel x:Name="DiffNavigationPanel" />
                </Border>
            </Grid>
        </Grid>

        
    </Grid>
</UserControl>
