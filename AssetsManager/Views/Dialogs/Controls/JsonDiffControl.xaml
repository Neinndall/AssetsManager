<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.JsonDiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:jsonDiff="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:localUtils="clr-namespace:AssetsManager.Utils"
             mc:Ignorable="d" Background="{StaticResource SidebarBackground}">

    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static localUtils:ShortKeys.NextDifference}" Executed="NextDifference_Executed" />
        <CommandBinding Command="{x:Static localUtils:ShortKeys.PreviousDifference}" Executed="PreviousDifference_Executed" />
    </UserControl.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Professional Toolbar Area (Sub-header) -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,0,0,1" 
                Padding="24,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Status (Left) -->
                    <ColumnDefinition Width="*"/>    <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/> <!-- All Tools (Right) -->
                </Grid.ColumnDefinitions>

                <!-- Left: Metadata -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="TEXT ANALYSIS" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,2"/>
                    <TextBlock Text="Structure &amp; Syntax Analysis" FontSize="10" Foreground="{StaticResource TextPrimary}" Opacity="0.8"/>
                </StackPanel>

                <!-- Right: Unified Tools Capsule -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="10,2" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <!-- MODES PART -->
                            <TextBlock Text="MODES" Style="{StaticResource ToolSectionLabel}" Margin="4,0,10,0"/>
                            <RadioButton x:Name="SideBySideBtn" Style="{StaticResource ModernIconRadioButton}"
                                         IsChecked="{Binding IsInlineMode, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}" 
                                         Checked="ComparisonInlineMode_Checked" ToolTip="Side by Side View" Width="30" Height="30">
                                <icons:MaterialIcon Kind="DockWindow" Width="16" Height="16"/>
                            </RadioButton>
                            <RadioButton x:Name="UnifiedBtn" Style="{StaticResource ModernIconRadioButton}"
                                         IsChecked="{Binding IsInlineMode}"
                                         Checked="ComparisonInlineMode_Checked" ToolTip="Unified Inline Mode" Width="30" Height="30">
                                <icons:MaterialIcon Kind="ViewStream" Width="16" Height="16"/>
                            </RadioButton>

                            <!-- SEPARATOR -->
                            <Border Width="1" Height="20" Background="{StaticResource BorderColor}" Margin="12,0" VerticalAlignment="Center"/>

                            <!-- NAV PART -->
                            <TextBlock Text="NAV" Style="{StaticResource ToolSectionLabel}" Margin="0,0,8,0"/>
                            <Button x:Name="PreviousDiffButton" 
                                    Click="PreviousDiffButton_Click" 
                                    Style="{StaticResource TransparentIconButton}"
                                    Width="30" Height="30"
                                    ToolTip="Previous Difference">
                                 <icons:MaterialIcon Kind="ChevronUp" Width="18" Height="18"/>
                            </Button>
                            <Button x:Name="NextDiffButton" 
                                    Click="NextDiffButton_Click" 
                                    Style="{StaticResource TransparentIconButton}"
                                    Width="30" Height="30"
                                    ToolTip="Next Difference">
                                 <icons:MaterialIcon Kind="ChevronDown" Width="18" Height="18"/>
                            </Button>

                            <!-- SEPARATOR -->
                            <Border Width="1" Height="20" Background="{StaticResource BorderColor}" Margin="12,0" VerticalAlignment="Center"/>

                            <!-- TOOLS PART -->
                            <TextBlock Text="TOOLS" Style="{StaticResource ToolSectionLabel}" Margin="0,0,8,0"/>
                            <ToggleButton x:Name="WordWrapButton"
                                          IsChecked="{Binding IsWordWrapEnabled}"
                                          Click="WordWrapButton_Click"
                                          Style="{StaticResource TransparentIconToggleButton}"
                                          Width="30" Height="30"
                                          ToolTip="Toggle Word Wrap">
                                 <icons:MaterialIcon Kind="Wrap" Width="16" Height="16"/>
                            </ToggleButton>
                            <ToggleButton x:Name="WordLevelDiffButton"
                                          IsChecked="{Binding IsWordLevelDiff}"
                                          Click="WordLevelDiffButton_Click"
                                          Style="{StaticResource TransparentIconToggleButton}"
                                          Width="30" Height="30"
                                          ToolTip="Toggle Word-Level Diff">
                                 <icons:MaterialIcon Kind="FormatText" Width="16" Height="16"/>
                            </ToggleButton>
                            <ToggleButton x:Name="HideUnchangedButton"
                                          IsChecked="{Binding HideUnchangedLines}"
                                          Click="HideUnchangedButton_Click"
                                          Style="{StaticResource TransparentIconToggleButton}"
                                          Width="30" Height="30"
                                          ToolTip="Show/Hide Unchanged Lines">
                                 <icons:MaterialIcon Kind="FilterVariant" Width="16" Height="16"/>
                            </ToggleButton>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <!-- Diff Grid -->
            <Grid x:Name="DiffGrid" Visibility="{Binding IsInlineMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="64"/>
                </Grid.ColumnDefinitions>

                <!-- Old JSON Card -->
                <Border Grid.Column="0" Style="{StaticResource SettingsCard}" Padding="0" Background="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Sub-Header: OLD VERSION -->
                        <Border Grid.Row="0" Background="{StaticResource SidebarBackground}" CornerRadius="12,12,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                            <Border Padding="12,12,12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Background="#1AFF9100" CornerRadius="8" Width="34" Height="34" Margin="0,0,12,0">
                                        <icons:MaterialIcon Kind="History" Width="18" Height="18" Foreground="{StaticResource AccentOrange}"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                                    <TextBlock Text="OLD VERSION" FontSize="10" FontWeight="Black" Foreground="{StaticResource AccentOrange}" Opacity="0.8"/>                                        <TextBlock x:Name="OldFileNameLabel" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,1,0,0" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Border>

                        <Border Grid.Row="1" Padding="0" Background="{StaticResource DarkBackground}" CornerRadius="0,0,12,12">
                            <avalonEdit:TextEditor x:Name="OldJsonContent" Style="{StaticResource BaseTextEditorStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1" Width="12" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                <!-- New JSON Card -->
                <Border Grid.Column="2" Style="{StaticResource SettingsCard}" Padding="0" Background="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Sub-Header: NEW VERSION -->
                        <Border Grid.Row="0" Background="{StaticResource SidebarBackground}" CornerRadius="12,12,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                            <Border Padding="12,12,12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Background="#1A00E676" CornerRadius="8" Width="34" Height="34" Margin="0,0,12,0">
                                        <icons:MaterialIcon Kind="FlashOutline" Width="18" Height="18" Foreground="{StaticResource AccentGreen}"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                                    <TextBlock Text="NEW VERSION" FontSize="10" FontWeight="Black" Foreground="{StaticResource AccentGreen}" Opacity="0.8"/>                                        <TextBlock x:Name="NewFileNameLabel" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,1,0,0" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Border>

                        <Border Grid.Row="1" Padding="0" Background="{StaticResource DarkBackground}" CornerRadius="0,0,12,12">
                            <avalonEdit:TextEditor x:Name="NewJsonContent" Style="{StaticResource BaseTextEditorStyle}"/>
                        </Border>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="3" Width="12" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                <!-- Navigation Panel Card -->
                <Border Grid.Column="4" Style="{StaticResource SettingsCard}" Padding="0" Background="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Sub-Header: MAP -->
                        <Border Grid.Row="0" Background="{StaticResource SidebarBackground}" CornerRadius="12,12,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                            <Border Padding="8,10">
                                <icons:MaterialIcon Kind="MapOutline" Width="18" Height="18" Foreground="{StaticResource TextMuted}"/>
                            </Border>
                        </Border>
                        
                        <Border Grid.Row="1" Background="{StaticResource DarkBackground}" CornerRadius="0,0,12,12">
                            <jsonDiff:DiffNavigationPanel x:Name="DiffNavigationPanel" Margin="0,4"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Unified Diff Editor (Inline) -->
            <Border x:Name="UnifiedDiffContainer" Grid.Row="1" Visibility="{Binding IsInlineMode, Converter={StaticResource BooleanToVisibilityConverter}}" Style="{StaticResource SettingsCard}" Padding="0" Background="Transparent">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Unified Header: Simplified Title View -->
                    <Border Grid.Row="0" Background="{StaticResource SidebarBackground}" CornerRadius="12,12,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                        <Border Padding="12,12,12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Background="#1A5C85FF" CornerRadius="8" Width="34" Height="34" Margin="0,0,12,0">
                                    <icons:MaterialIcon Kind="ViewStream" Width="18" Height="18" Foreground="{StaticResource AccentBrush}"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="UNIFIED VIEW" FontSize="10" FontWeight="Black" Foreground="{StaticResource AccentBrush}" Opacity="0.8"/>
                                    <TextBlock x:Name="UnifiedFileNameLabel" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,1,0,0" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>

                    <Border Grid.Row="1" Background="{StaticResource DarkBackground}" CornerRadius="0,0,12,12">
                        <avalonEdit:TextEditor x:Name="UnifiedDiffEditor" Style="{StaticResource BaseTextEditorStyle}" IsReadOnly="True" ShowLineNumbers="True"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>