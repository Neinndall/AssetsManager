<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.LoadingDiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
             
    <Grid Background="Transparent" 
          IsHitTestVisible="True">

        <!-- Fondo que bloquea interacciones -->
        <Rectangle Fill="Transparent" />

        <!-- Contenedor central -->
        <Border Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="16" 
                Padding="48,32" 
                Width="500"
                MinHeight="230"
                Margin="30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="Black"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <!-- Animated Icon Container -->
                <Border Background="{StaticResource HoverColor}" CornerRadius="30" Width="60" Height="60" Margin="0,0,0,20">
                    <icons:MaterialIcon Kind="Sync" 
                                        Style="{StaticResource SpinningIconStyle}"
                                        Foreground="{StaticResource AccentBrush}" 
                                        Width="32" 
                                        Height="32"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                        <icons:MaterialIcon.Effect>
                            <DropShadowEffect Color="{Binding Foreground.Color, RelativeSource={RelativeSource Self}}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                        </icons:MaterialIcon.Effect>
                    </icons:MaterialIcon>
                </Border>

                <!-- Texts -->
                <TextBlock Text="{Binding Title}" 
                           Foreground="{StaticResource TextPrimary}" 
                           FontSize="20" 
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,4"/>
                
                <TextBlock Text="{Binding Description}" 
                           Foreground="{StaticResource TextSecondary}" 
                           FontSize="13" 
                           TextAlignment="Center"
                           Margin="0,0,0,24"/>

                <!-- Professional Progress Bar -->
                <Grid Width="300">
                    <ProgressBar Value="{Binding ProgressValue}"
                                 Minimum="0" 
                                 Maximum="100"
                                 IsIndeterminate="False" 
                                 Height="8" 
                                 Background="{StaticResource SidebarBackground}"
                                 Foreground="{StaticResource AccentBrush}"
                                 BorderThickness="0"
                                 Style="{StaticResource ModernProgressBar}"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
