<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.LoadingDiffControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
             
    <Grid Background="Transparent" 
          IsHitTestVisible="True"
          Panel.ZIndex="999">

        <!-- Fondo que bloquea interacciones -->
        <Rectangle Fill="Transparent" />

        <!-- Contenedor central -->
        <Border Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="12" 
                Padding="40,30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Fila 1: Icono y Texto Principal -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,12">

                    <!-- Icono con animación automática desde Animations.xaml -->
                    <icons:MaterialIcon Kind="Sync" 
                                        Style="{StaticResource SpinningIconStyle}"
                                        Foreground="{StaticResource AccentBrush}" 
                                        Width="24" 
                                        Height="24"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"/>

                    <!-- Texto principal -->
                    <TextBlock Text="Processing files..." 
                               Foreground="{StaticResource TextPrimary}" 
                               FontSize="16" 
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Fila 2: Texto Secundario -->
                <TextBlock Text="Please wait while the comparison is being prepared" 
                           Foreground="{StaticResource TextMuted}" 
                           FontSize="12" 
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
