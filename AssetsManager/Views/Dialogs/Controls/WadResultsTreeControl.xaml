<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.WadResultsTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
             
    <UserControl.Resources>
        <ContextMenu x:Key="WadDiffContextMenu" Opened="ContextMenu_Opened">
            <MenuItem Header="View Differences" x:Name="ViewDifferencesMenuItem" Click="ViewDifferences_Click">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="FileFindOutline"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <HierarchicalDataTemplate x:Key="DiffItemTemplate" ItemsSource="{Binding Files}">
            <Grid Margin="0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource PathToIconConverter}}" 
                                             Width="18" Height="18"
                                             VerticalAlignment="Center" 
                                             Margin="0,0,6,0"
                                             Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Grid.Column="1" Text="{Binding FileName}" VerticalAlignment="Center" FontSize="13"/>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DiffTypeTemplate" ItemsSource="{Binding Diffs}" ItemTemplate="{StaticResource DiffItemTemplate}">
            <Grid Margin="0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource PathToIconConverter}}"
                                            Width="18" Height="18"
                                            VerticalAlignment="Center" 
                                            Margin="0,0,6,0" 
                                            Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
                <TextBlock Grid.Column="1" Text="{Binding TypeNameWithCount}" VerticalAlignment="Center" FontSize="13">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="WadGroupTemplate" ItemsSource="{Binding Types}" ItemTemplate="{StaticResource DiffTypeTemplate}">
            <Grid Margin="0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource PathToIconConverter}}"
                                             Width="18" Height="18"
                                             VerticalAlignment="Center" 
                                             Margin="0,0,6,0"
                                             Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Grid.Column="1" Text="{Binding WadNameWithCount}" VerticalAlignment="Center" FontSize="13"/>
            </Grid>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Border Style="{StaticResource SettingsCard}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="16" Background="{StaticResource SidebarBackground}" CornerRadius="12,12,0,0">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource HoverColor}" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                        <materialIcons:MaterialIcon Kind="FormatListGroup" Width="18" Height="18" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Differences Explorer" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Search Box Area -->
            <Border Grid.Row="1" Padding="16,12" Background="{StaticResource CardBackground}">
                 <TextBox x:Name="searchTextBox"
                     Style="{StaticResource StandardSearchBoxStyle}"
                     TextChanged="SearchTextBox_TextChanged"/>
            </Border>

            <!-- Tree Content -->
            <Border Grid.Row="2" Padding="0" Background="{StaticResource CardBackground}" CornerRadius="0,0,12,12">
                <Grid>
                    <!-- Loading Indicator (HUD Style) -->
                    <StackPanel x:Name="LoadingIndicator" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid Width="100" Height="100">
                            <!-- Background Glow -->
                            <Ellipse Width="60" Height="60" Fill="{StaticResource AccentBrush}" Opacity="0.15">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="30"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <!-- Pulse Rings -->
                            <Ellipse Width="50" Height="50" Stroke="{StaticResource AccentBrush}" StrokeThickness="1" Opacity="0.3" Style="{StaticResource TechnicalGlowStyle}"/>
                            <Ellipse Width="70" Height="70" Stroke="{StaticResource AccentBrush}" StrokeThickness="0.5" Opacity="0.1" Style="{StaticResource TechnicalGlowStyle}"/>

                            <!-- Main Spinner -->
                            <materialIcons:MaterialIcon Kind="Sync" 
                                                        Width="42" Height="42" 
                                                        Foreground="{StaticResource AccentBrush}"
                                                        Style="{StaticResource SpinningIconStyle}"/>

                            <!-- Inner Tech Icon -->
                            <materialIcons:MaterialIcon Kind="Memory" 
                                                        Width="16" Height="16" 
                                                        Foreground="{StaticResource AccentBrush}"
                                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                                        Opacity="0.8"/>
                        </Grid>

                        <TextBlock Text="{Binding LoadingText}" 
                                   HorizontalAlignment="Center" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource AccentBrush}" 
                                   Margin="0,12,0,0"
                                   Opacity="0.9"/>
                        <TextBlock Text="PLEASE WAIT" 
                                   HorizontalAlignment="Center" 
                                   FontSize="9" 
                                   Foreground="{StaticResource TextMuted}" 
                                   Margin="0,4,0,0"
                                   Opacity="0.6"/>
                    </StackPanel>

                    <!-- TreeView -->
                    <TreeView x:Name="resultsTreeView" 
                              Style="{StaticResource ModernTreeView}"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="8"
                              ItemsSource="{Binding WadGroups}"
                              Visibility="{Binding IsBusy, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                              ItemTemplate="{StaticResource WadGroupTemplate}"
                              SelectedItemChanged="ResultsTreeView_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}">
                                <Setter Property="ContextMenu" Value="{StaticResource WadDiffContextMenu}"/>
                                <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>