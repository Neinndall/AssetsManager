<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.WadResultsTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetsManager.Views.Dialogs.Controls"
             xmlns:converters="clr-namespace:AssetsManager.Views.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d">
             
    <UserControl.Resources>
        <converters:PathToIconConverter x:Key="IconConverter"/>
        <converters:ChunkDiffTypeToBrushConverter x:Key="DiffTypeToBrushConverter"/>

        <ContextMenu x:Key="WadDiffContextMenu" Opened="ContextMenu_Opened">
            <MenuItem Header="View Differences" x:Name="ViewDifferencesMenuItem" Click="ViewDifferences_Click">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="FileFindOutline"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <HierarchicalDataTemplate x:Key="DiffItemTemplate" ItemsSource="{Binding Files}">
            <Grid Margin="3,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource IconConverter}}" 
                                             Width="18" Height="18"
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="{Binding FileName}" VerticalAlignment="Center"/>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DiffTypeTemplate" ItemsSource="{Binding Diffs}" ItemTemplate="{StaticResource DiffItemTemplate}">
            <Grid Margin="3,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource IconConverter}}"
                                             Width="18" Height="18"
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0" 
                                             Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
                <TextBlock Grid.Column="1" Text="{Binding TypeNameWithCount}" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="WadGroupTemplate" ItemsSource="{Binding Types}" ItemTemplate="{StaticResource DiffTypeTemplate}">
            <Grid Margin="3,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Grid.Column="0" Kind="{Binding Converter={StaticResource IconConverter}}"
                                             Width="18" Height="18"
                                             VerticalAlignment="Center" 
                                             Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="{Binding WadNameWithCount}" VerticalAlignment="Center"/>
            </Grid>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Border Style="{StaticResource SettingsCard}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="16" Background="{DynamicResource SidebarBackground}" CornerRadius="8,8,0,0">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{DynamicResource HoverColor}" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                        <materialIcons:MaterialIcon Kind="FormatListGroup" Width="18" Height="18" Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Differences Explorer" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Search Box Area -->
            <Border Grid.Row="1" Padding="16,12" Background="{DynamicResource CardBackground}">
                 <TextBox x:Name="searchTextBox"
                     Style="{StaticResource StandardSearchBoxStyle}"
                     TextChanged="SearchTextBox_TextChanged"/>
            </Border>

            <!-- Tree Content -->
            <Border Grid.Row="2" Padding="0" Background="{DynamicResource CardBackground}" CornerRadius="0,0,8,8">
                <TreeView x:Name="resultsTreeView" 
                          Style="{StaticResource ModernTreeView}"
                          Background="Transparent"
                          BorderThickness="0"
                          Padding="8"
                          ItemTemplate="{StaticResource WadGroupTemplate}"
                          SelectedItemChanged="ResultsTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}">
                            <Setter Property="ContextMenu" Value="{StaticResource WadDiffContextMenu}"/>
                            <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Border>
        </Grid>
    </Border>
</UserControl>