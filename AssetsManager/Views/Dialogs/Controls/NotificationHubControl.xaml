<UserControl x:Class="AssetsManager.Views.Dialogs.Controls.NotificationHubControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:AssetsManager.Views.Controls"
             xmlns:models="clr-namespace:AssetsManager.Views.Models.Notifications"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="420">
    
    <UserControl.Resources>
        <!-- DataTemplate: Single Line Professional Layout -->
        <DataTemplate DataType="{x:Type models:NotificationModel}">
            <Border x:Name="NotificationBorder" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="4" 
                    Margin="0,0,0,4" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1"
                    Padding="8,4"
                    Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                        <ColumnDefinition Width="Auto"/> <!-- Time -->
                        <ColumnDefinition Width="Auto"/> <!-- Title -->
                        <ColumnDefinition Width="*"/>    <!-- Message -->
                        <ColumnDefinition Width="Auto"/> <!-- Close -->
                    </Grid.ColumnDefinitions>

                    <!-- 1. Semantic Icon -->
                    <materialIcons:MaterialIcon Grid.Column="0" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,10,0">
                        <materialIcons:MaterialIcon.Style>
                            <Style TargetType="materialIcons:MaterialIcon">
                                <Setter Property="Kind" Value="InformationOutline"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Success">
                                        <Setter Property="Kind" Value="CheckCircleOutline"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="Warning">
                                        <Setter Property="Kind" Value="AlertCircleOutline"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentOrange}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="Error">
                                        <Setter Property="Kind" Value="CloseCircleOutline"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialIcons:MaterialIcon.Style>
                    </materialIcons:MaterialIcon>

                    <!-- 2. Timestamp -->
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                               FontSize="10" 
                               Foreground="{StaticResource TextMuted}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>

                    <!-- 3. Title & Message Column -->
                    <StackPanel Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="0,4,8,4">
                        <TextBlock Text="{Binding Title}" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   Margin="0,0,0,1"/>
                        <TextBlock Text="{Binding Message}" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextSecondary}" 
                                   TextWrapping="Wrap"
                                   LineHeight="14"/>
                    </StackPanel>

                    <!-- 4. Remove Button (Centered Vertically) -->
                    <Button Grid.Column="4" 
                            Style="{StaticResource TransparentIconButton}" 
                            Width="20" Height="20" 
                            VerticalAlignment="Center" 
                            Click="RemoveNotification_Click"
                            Margin="0,0,0,0"
                            Opacity="0.3">
                        <materialIcons:MaterialIcon Kind="Close" Width="10" Height="10" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <!-- Unread State: 1.5pt Accent Border -->
                <DataTrigger Binding="{Binding IsRead}" Value="False">
                    <Setter TargetName="NotificationBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    <Setter TargetName="NotificationBorder" Property="BorderThickness" Value="1.5"/>
                </DataTrigger>
                
                <!-- Hover State (Always change background) -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="NotificationBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="MainRoot" Visibility="{Binding IsOpen, Converter={StaticResource BoolToVisibilityConverter}}">
        <!-- Overlay -->
        <Border Background="Transparent" MouseLeftButtonDown="Overlay_MouseLeftButtonDown"/>
        
        <!-- Main Hub Panel -->
        <Border x:Name="MainPanel"
                Width="420" 
                MaxHeight="500" 
                Background="{StaticResource DarkBackground}"
                CornerRadius="12" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Margin="0,0,24,70">
            <Border.RenderTransform>
                <TranslateTransform x:Name="PanelTranslateTransform"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Actions -->
                    <RowDefinition Height="*"/>    <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Row 0: Header -->
                <Border Grid.Row="0" 
                        Padding="16,8,8,8" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="0,0,0,1"
                        Background="{StaticResource CardBackground}"
                        CornerRadius="12,12,0,0"
                        Cursor="SizeAll"
                        MouseLeftButtonDown="Header_MouseLeftButtonDown"
                        MouseLeftButtonUp="Header_MouseLeftButtonUp"
                        MouseMove="Header_MouseMove">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="BellRingOutline" Width="16" Height="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                            <TextBlock Text="NOTIFICATIONS" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextPrimary}"/>
                            <Border Background="{StaticResource AccentRed}" 
                                    CornerRadius="8" 
                                    Padding="6,1" 
                                    Margin="8,0,0,0" 
                                    VerticalAlignment="Center"
                                    Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <Button HorizontalAlignment="Right" Style="{StaticResource TransparentIconButton}" Click="Close_Click" Width="32" Height="32">
                            <materialIcons:MaterialIcon Kind="Close" Width="18" Height="18" Foreground="{StaticResource TextSecondary}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Actions Strip (Darker contrast) -->
                <Border Grid.Row="1" Padding="12,6" Background="{StaticResource DarkBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                    <Grid>
                        <TextBlock Text="{Binding Notifications.Count, StringFormat='\{0\} total'}" 
                                   FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource TransparentIconButton}" Click="MarkAllRead_Click" Margin="0,0,12,0" Padding="4,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="CheckAll" Width="14" Height="14" Foreground="{StaticResource AccentGreen}" Margin="0,0,6,0"/>
                                    <TextBlock Text="Mark all read" FontSize="11" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource TransparentIconButton}" Click="ClearAll_Click" Padding="4,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="DeleteSweepOutline" Width="14" Height="14" Foreground="{StaticResource AccentRed}" Margin="0,0,6,0"/>
                                    <TextBlock Text="Clear all" FontSize="11" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- List Area -->
                <ScrollViewer Grid.Row="2" Padding="12,12,12,4" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,60"
                                    Visibility="{Binding Notifications.Count, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=0}">
                            <materialIcons:MaterialIcon Kind="BellOffOutline" Width="48" Height="48" Foreground="{StaticResource TextMuted}" Opacity="0.3"/>
                            <TextBlock Text="No notifications" FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding Notifications}"/>
                    </Grid>
                </ScrollViewer>

                <!-- Footer (Sidebar style) -->
                <Border Grid.Row="3" Padding="12,8" Background="{StaticResource CardBackground}" CornerRadius="0,0,12,12" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
                    <TextBlock Text="SYSTEM NOTIFICATIONS HUB" FontSize="9" FontWeight="Black" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>