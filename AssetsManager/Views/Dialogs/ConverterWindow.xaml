<Controls:MetroWindow x:Class="AssetsManager.Views.Dialogs.ConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:converters="clr-namespace:AssetsManager.Views.Converters"
        xmlns:models="clr-namespace:AssetsManager.Views.Models.Home"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Universal Converter" Height="550" Width="750"
        MinWidth="600" MinHeight="500"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="True"
        AllowDrop="True" Drop="Window_Drop"
        
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowTransitionsEnabled="False"
        ShowTitleBar="False"
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
        ShowCloseButton="False"
        GlowBrush="{x:Null}"
        NonActiveGlowBrush="{x:Null}"
        BorderThickness="0"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <converters:ChunkDiffTypeToBrushConverter x:Key="StatusToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Margin="5" CornerRadius="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Background="{StaticResource SidebarBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- 0: Custom Title Bar -->
                <RowDefinition Height="*"/>    <!-- 1: Content -->
                <RowDefinition Height="Auto"/> <!-- 2: Format Selectors -->
                <RowDefinition Height="Auto"/> <!-- 3: Footer -->
            </Grid.RowDefinitions>

            <!-- 1. Custom Title Bar (HUD Style: 40px) -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="40" CornerRadius="11,11,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Panel.ZIndex="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="Black" Opacity="0.15" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icon/Title -->
                        <ColumnDefinition Width="*"/>    <!-- Spacer (Drag Area) -->
                        <ColumnDefinition Width="Auto"/> <!-- Window Controls -->
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <materialIcons:MaterialIcon Kind="AutoFix" Foreground="{StaticResource AccentTeal}" Width="18" Height="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Universal Converter" Foreground="{StaticResource TextPrimary}" FontWeight="Normal" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Drag Area -->
                    <Rectangle Grid.Column="1" Fill="Transparent" IsHitTestVisible="True" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click" Width="34" Height="40">
                            <materialIcons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Close_Click" Width="34" Height="40" Margin="0,0,2,0">
                            <materialIcons:MaterialIcon Kind="WindowClose" Width="15" Height="15"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. Main Content Area -->
            <Grid Grid.Row="1" Margin="20">
                <!-- Empty State: Full Drop Area -->
                <Grid Visibility="{Binding Items, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Invert}">
                    <Rectangle x:Name="DropAreaUI" Stroke="{StaticResource BorderColor}" StrokeThickness="2" 
                               Fill="{StaticResource SidebarBackground}" RadiusX="10" RadiusY="10" 
                               StrokeDashArray="4 2"/>
                    <Border x:Name="DropArea" Background="Transparent" CornerRadius="10"
                            DragEnter="DropArea_DragEnter" DragLeave="DropArea_DragLeave">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="FileImportOutline" Width="60" Height="60" Foreground="{StaticResource TextMuted}" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                            <TextBlock Text="Drag and drop your files here" Foreground="{StaticResource TextPrimary}" FontSize="16" FontWeight="Medium" HorizontalAlignment="Center"/>
                            <TextBlock Text="Supports: .dds, .tex, .wem, .ogg, .wav, .mp3" Foreground="{StaticResource TextMuted}" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Populated State: Files List -->
                <Border Visibility="{Binding Items, Converter={StaticResource CountToVisibilityConverter}}" 
                        Background="{StaticResource SidebarBackground}" CornerRadius="10" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <Grid>
                        <ListView ItemsSource="{Binding Items}" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextPrimary}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Background="Transparent" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="12,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Background="{StaticResource CardBackground}" Width="32" Height="32" CornerRadius="6" Margin="0,0,12,0">
                                                            <materialIcons:MaterialIcon x:Name="TypeIcon" Kind="FileQuestion" Width="18" Height="18" Foreground="{StaticResource AccentTeal}"/>
                                                        </Border>
                                                        
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding FileName}" FontWeight="Medium" Foreground="{StaticResource TextPrimary}"/>
                                                            <TextBlock Text="{Binding FilePath}" FontSize="10" Foreground="{StaticResource TextMuted}" TextTrimming="CharacterEllipsis"/>
                                                        </StackPanel>
                                                        
                                                        <TextBlock Grid.Column="2" Text="{Binding Status}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11" FontWeight="Bold"/>
                                                        
                                                        <Button Grid.Column="3" Style="{StaticResource TransparentIconButton}" Click="RemoveItem_Click" Tag="{Binding}">
                                                            <materialIcons:MaterialIcon Kind="DeleteOutline" Width="16" Foreground="{StaticResource AccentRed}"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding FileType}" Value="{x:Static models:ConverterFileType.Image}">
                                                        <Setter TargetName="TypeIcon" Property="Kind" Value="FileImage"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding FileType}" Value="{x:Static models:ConverterFileType.Audio}">
                                                        <Setter TargetName="TypeIcon" Property="Kind" Value="Music"/>
                                                        <Setter TargetName="TypeIcon" Property="Foreground" Value="{StaticResource AccentOrange}"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

            <!-- 3. Format Selectors Section -->
            <Border Grid.Row="2" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20,12"
                    Visibility="{Binding Items, Converter={StaticResource CountToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <!-- Image Formats -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0"
                                Visibility="{Binding HasImages, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="IMAGE OUTPUT" Style="{StaticResource ToolSectionLabel}" Width="90" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="2">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="PNG" IsChecked="True" Style="{StaticResource SegmentedRadioButtonStyle}" MinWidth="55" Checked="ImageFormat_Checked" Tag="Png"/>
                                <RadioButton Content="JPG" Style="{StaticResource SegmentedRadioButtonStyle}" MinWidth="55" Checked="ImageFormat_Checked" Tag="Jpeg"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Audio Formats -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0"
                                Visibility="{Binding HasAudio, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="AUDIO OUTPUT" Style="{StaticResource ToolSectionLabel}" Width="90" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="2">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="OGG" IsChecked="True" Style="{StaticResource SegmentedRadioButtonStyle}" MinWidth="55" Checked="AudioFormat_Checked" Tag="Ogg"/>
                                <RadioButton Content="WAV" Style="{StaticResource SegmentedRadioButtonStyle}" MinWidth="55" Checked="AudioFormat_Checked" Tag="Wav"/>
                                <RadioButton Content="MP3" Style="{StaticResource SegmentedRadioButtonStyle}" MinWidth="55" Checked="AudioFormat_Checked" Tag="Mp3"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 4. Footer (HUD Style with bottom rounding) -->
            <Border Grid.Row="3" Background="{StaticResource CardBackground}" CornerRadius="0,0,11,11" Padding="20,16" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="InformationOutline" Width="16" Foreground="{StaticResource TextMuted}" Margin="0,0,8,0"/>
                        <TextBlock Text="Files will be converted using their respective engine." Foreground="{StaticResource TextMuted}" FontSize="11"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Clear All" Style="{StaticResource SecondaryButton}" Width="100" Margin="0,0,10,0" Click="ClearAll_Click" IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Convert All" Width="120" Click="Convert_Click" IsEnabled="{Binding Items, Converter={StaticResource CountToVisibilityConverter}}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                            <Setter Property="Content" Value="Processing..."/>
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Controls:MetroWindow>