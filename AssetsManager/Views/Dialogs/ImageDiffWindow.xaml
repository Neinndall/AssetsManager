<Window x:Class="AssetsManager.Views.Dialogs.ImageDiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="Image Comparison" Height="800" Width="1200"
        Background="{StaticResource SidebarBackground}"
        FontFamily="Consolas, Courier New"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <icons:MaterialIcon Kind="ImageMultipleOutline" 
                                        Width="32" Height="32" 
                                        Margin="0,0,12,0" 
                                        VerticalAlignment="Center" 
                                        Foreground="{StaticResource AccentBrush}"/>
                    <StackPanel>
                        <TextBlock Text="IMAGE COMPARISON"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Compare old and new image versions"
                                   FontSize="14"
                                   Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Old Image Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ“œ" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="Old Version"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="OldFileNameLabel"
                                     Text=""
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Image x:Name="OldImage" Stretch="Uniform" Margin="5"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Grid Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="12"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- New Image Card -->
            <Border Grid.Column="2" Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="âœ¨" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        <StackPanel>
                            <TextBlock Text="New Version"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="NewFileNameLabel"
                                     Text=""
                                     FontSize="12"
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Image x:Name="NewImage" Stretch="Uniform" Margin="5"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
