<Window x:Class="AssetsManager.Views.Dialogs.ImageDiffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Image Comparison" Height="850" Width="1200"
        Background="{StaticResource SidebarBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="24,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title & Icon -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource HoverColor}" CornerRadius="10" Width="42" Height="42" Margin="0,0,16,0">
                         <icons:MaterialIcon Kind="ImageMultipleOutline" Width="22" Height="22" Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Image Comparison" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Visual analysis of modified assets" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Tools Section -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <!-- Overlay Slider (Visible only in Slider/Opacity modes) -->
                    <StackPanel x:Name="ToolsContainer" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,24,0">
                        <TextBlock Text="Adjust Effect" FontSize="11" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="OverlaySlider" Width="120" Minimum="0" Maximum="100" Value="50" 
                                VerticalAlignment="Center" Margin="0,0,10,0"
                                ValueChanged="OverlaySlider_ValueChanged"/>
                        <TextBlock Text="{Binding Value, ElementName=OverlaySlider, StringFormat={}{0:0}%}" 
                                   Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="11" Width="30"/>
                    </StackPanel>

                    <!-- Graphic Mode Selector -->
                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="3" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="SideBySideBtn" Style="{StaticResource GraphicToolRadioButton}" 
                                         IsChecked="True" Checked="Mode_Checked"
                                         ToolTip="Side by Side View">
                                <icons:MaterialIcon Kind="DockWindow" Width="18" Height="18"/>
                            </RadioButton>
                            
                            <RadioButton x:Name="SliderBtn" Style="{StaticResource GraphicToolRadioButton}" 
                                         Checked="Mode_Checked"
                                         ToolTip="Slider Overlay Mode">
                                <icons:MaterialIcon Kind="Compare" Width="18" Height="18"/>
                            </RadioButton>
                            
                            <RadioButton x:Name="OnionSkinBtn" Style="{StaticResource GraphicToolRadioButton}" 
                                         Checked="Mode_Checked"
                                         ToolTip="Onion Skin (Opacity) Mode">
                                <icons:MaterialIcon Kind="Opacity" Width="18" Height="18"/>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="24">
            
            <!-- MODE 1: Side by Side (Default) -->
            <Grid x:Name="SideBySidePanel" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Old Image Card -->
                <Border Grid.Column="0" Style="{StaticResource SettingsCard}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="12,10" Background="{DynamicResource SidebarBackground}" CornerRadius="8,8,0,0">
                            <StackPanel Orientation="Horizontal">
                                <icons:MaterialIcon Kind="History" Width="14" Height="14" Foreground="{DynamicResource AccentOrange}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Old Version" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock x:Name="OldFileNameLabel" FontSize="11" Foreground="{DynamicResource TextSecondary}" MaxWidth="350" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Background="{StaticResource DarkBackground}" CornerRadius="0,0,8,8" Padding="16">
                            <Image x:Name="OldImage" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1" Width="12" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent" ResizeBehavior="PreviousAndNext"/>

                <!-- New Image Card -->
                <Border Grid.Column="2" Style="{StaticResource SettingsCard}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="12,10" Background="{DynamicResource SidebarBackground}" CornerRadius="8,8,0,0">
                            <StackPanel Orientation="Horizontal">
                                <icons:MaterialIcon Kind="FlashOutline" Width="14" Height="14" Foreground="{DynamicResource AccentGreen}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="New Version" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                    <TextBlock x:Name="NewFileNameLabel" FontSize="11" Foreground="{DynamicResource TextSecondary}" MaxWidth="350" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" Background="{StaticResource DarkBackground}" CornerRadius="0,0,8,8" Padding="16">
                            <Image x:Name="NewImage" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- MODE 2: Overlay (Slider / Onion Skin) -->
            <Grid x:Name="OverlayPanel" Visibility="Collapsed">
                <Border Style="{StaticResource SettingsCard}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Info Header -->
                        <Border Grid.Row="0" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="12,10" Background="{DynamicResource SidebarBackground}" CornerRadius="8,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <icons:MaterialIcon Kind="LayersOutline" Width="14" Height="14" Foreground="{DynamicResource AccentBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="OverlayInfoLabel" Text="Overlay Mode" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="NEW vs OLD" FontSize="11" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            </Grid>
                        </Border>

                        <!-- Interactive Image Container -->
                        <Border Grid.Row="1" Background="{StaticResource DarkBackground}" CornerRadius="0,0,8,8" Padding="16" x:Name="ImageContainer">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Base Image (OLD) -->
                                <Image x:Name="OldImageOverlay" Stretch="Uniform" Opacity="1"/>
                                
                                <!-- Top Image (NEW) -->
                                <Image x:Name="NewImageOverlay" Stretch="Uniform" Opacity="1">
                                    <Image.Clip>
                                        <RectangleGeometry x:Name="SliderClip" Rect="0,0,9999,9999"/>
                                    </Image.Clip>
                                </Image>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
