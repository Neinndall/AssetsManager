<Window x:Class="AssetsManager.Views.Dialogs.AudioPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Audio Player" Height="600" Width="400"
        MinWidth="350" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        AllowDrop="True"
        Drop="Window_Drop"
        Background="Transparent"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0" 
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{StaticResource BorderColor}" 
            Background="{StaticResource SidebarBackground}"
            BorderThickness="1" 
            CornerRadius="12" 
            Margin="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Playlist -->
                <RowDefinition Height="Auto"/> <!-- Player Controls -->
            </Grid.RowDefinitions>

            <!-- 1. Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="40" CornerRadius="11,11,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                        <ColumnDefinition Width="*"/>    <!-- Title -->
                        <ColumnDefinition Width="Auto"/> <!-- Window Controls -->
                    </Grid.ColumnDefinitions>

                    <icons:MaterialIcon Grid.Column="0" Kind="Waveform" Width="18" Height="18" Foreground="{StaticResource AccentBrush}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Audio Player" FontSize="13" FontWeight="Normal" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click" Width="34" Height="40">
                            <icons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Close_Click" Width="34" Height="40" Margin="0,0,2,0">
                            <icons:MaterialIcon Kind="WindowClose" Width="15" Height="15"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. Content Area -->
            <Grid Grid.Row="1" Margin="15">
                <!-- Empty State: Full Drop Area -->
                <Grid Visibility="{Binding Service.Playlist.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Invert}">
                    <Rectangle x:Name="DropAreaUI" Stroke="{StaticResource BorderColor}" StrokeThickness="2" 
                               Fill="{StaticResource SidebarBackground}" RadiusX="10" RadiusY="10" 
                               StrokeDashArray="4 2"/>
                    <Border Background="Transparent" CornerRadius="10"
                            DragEnter="DropArea_DragEnter" DragLeave="DropArea_DragLeave">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <icons:MaterialIcon Kind="Waveform" Width="60" Height="60" Foreground="{StaticResource TextMuted}" Margin="0,0,0,15"/>
                            <TextBlock Text="Drag and drop audio files" Foreground="{StaticResource TextPrimary}" FontSize="16" FontWeight="Medium" HorizontalAlignment="Center"/>
                            <TextBlock Text="MP3 • WAV • OGG • YouTube URLs" Foreground="{StaticResource TextMuted}" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Populated State: Playlist Area -->
                <Grid Visibility="{Binding Service.Playlist.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <ListBox x:Name="PlaylistListBox" 
                             ItemsSource="{Binding Service.Playlist}"
                             Background="Transparent" BorderThickness="0"
                             ItemContainerStyle="{StaticResource ModernSelectableCardItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <icons:MaterialIcon Kind="MusicNote" Width="16" Height="16" Foreground="{StaticResource AccentBrush}" Opacity="0.7" Margin="0,0,10,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding AddedAt, StringFormat='Added: {0:HH:mm}'}" Foreground="{StaticResource TextMuted}" FontSize="10"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" Style="{StaticResource TransparentIconButton}" Click="RemoveItem_Click" Tag="{Binding}">
                                        <icons:MaterialIcon Kind="TrashCanOutline" Width="14" Height="14" Foreground="{StaticResource AccentRed}"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>

            <!-- 3. Player Controls Area -->
            <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="0,0,11,11" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20,15">
                <StackPanel>
                    <!-- Track Info (With Trimming) -->
                    <TextBlock x:Name="CurrentTrackName" Text="No track selected" HorizontalAlignment="Center" 
                               Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="13" 
                               Margin="0,0,0,12" TextTrimming="CharacterEllipsis"/>
                    
                    <!-- Progress Slider -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="CurrentTimeText" Text="0:00" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <Slider x:Name="AudioSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="0" VerticalAlignment="Center" 
                                Thumb.DragStarted="AudioSlider_DragStarted" Thumb.DragCompleted="AudioSlider_DragCompleted" ValueChanged="AudioSlider_ValueChanged"/>
                        <TextBlock x:Name="TotalTimeText" Text="0:00" Grid.Column="2" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Main Actions Bar (Symmetric Grid) -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Secondary Tools -->
                        <Button HorizontalAlignment="Left" Style="{StaticResource TransparentIconButton}" Click="AddUrl_Click" ToolTip="Add Audio from URL">
                            <icons:MaterialIcon Kind="Youtube" Width="18" Height="18" Foreground="{StaticResource AccentBrush}"/>
                        </Button>

                        <!-- Center: Primary Controls -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource IconButton}" Width="36" Height="36" Margin="5,0" Click="SkipBackward_Click">
                                <icons:MaterialIcon Kind="SkipPrevious" Width="18" Height="18"/>
                            </Button>
                            
                            <Button x:Name="PlayPauseButton" Style="{StaticResource PrimaryButton}" Width="46" Height="46" Margin="10,0" Click="PlayPause_Click">
                                <icons:MaterialIcon Kind="{Binding IsPlaying, Converter={StaticResource BooleanToMaterialIconConverter}, ConverterParameter='Pause,Play'}" Width="22" Height="22"/>
                            </Button>
                            
                            <Button Style="{StaticResource IconButton}" Width="36" Height="36" Margin="5,0" Click="SkipForward_Click">
                                <icons:MaterialIcon Kind="SkipNext" Width="18" Height="18"/>
                            </Button>
                        </StackPanel>
                        
                        <!-- Right: Playlist Actions -->
                        <Button Grid.Column="2" HorizontalAlignment="Right" Style="{StaticResource TransparentIconButton}" Click="ClearPlaylist_Click" ToolTip="Clear Playlist">
                            <icons:MaterialIcon Kind="PlaylistRemove" Width="18" Height="18" Foreground="{StaticResource TextMuted}"/>
                        </Button>
                    </Grid>

                    <!-- Compact Volume Control (Centered) -->
                    <Grid Margin="0,15,0,5" HorizontalAlignment="Center" Width="220">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>
                        <icons:MaterialIcon Kind="{Binding IsMuted, Converter={StaticResource BooleanToMaterialIconConverter}, ConverterParameter='VolumeMute,VolumeMedium'}" Width="16" Height="16" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="VolumeSlider" Grid.Column="1" Minimum="0" Maximum="1" Value="0.5" VerticalAlignment="Center" Height="18" ValueChanged="VolumeSlider_ValueChanged"/>
                        <TextBlock Grid.Column="2" Text="{Binding Value, ElementName=VolumeSlider, StringFormat={}{0:P0}}" FontSize="9" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" HorizontalAlignment="Right" Width="25"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
