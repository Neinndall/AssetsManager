<Window x:Class="AssetsManager.Views.Dialogs.AudioPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Audio Player" Height="600" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        AllowDrop="True"
        Drop="Window_Drop"
        Background="Transparent"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0" 
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{StaticResource BorderColor}" 
            Background="{StaticResource SidebarBackground}"
            BorderThickness="1" 
            CornerRadius="12" 
            Margin="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Playlist -->
                <RowDefinition Height="Auto"/> <!-- Player Controls -->
            </Grid.RowDefinitions>

            <!-- 1. Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="40" CornerRadius="11,11,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                        <ColumnDefinition Width="*"/>    <!-- Title -->
                        <ColumnDefinition Width="Auto"/> <!-- Window Controls -->
                    </Grid.ColumnDefinitions>

                    <icons:MaterialIcon Grid.Column="0" Kind="Waveform" Width="18" Height="18" Foreground="{StaticResource AccentBrush}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Audio Player" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click" Width="40" Height="40">
                            <icons:MaterialIcon Kind="WindowMinimize" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Close_Click" Width="40" Height="40" Margin="0,0,2,0">
                            <icons:MaterialIcon Kind="WindowClose" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. Playlist Area -->
            <Grid Grid.Row="1" Margin="10">
                <ListBox x:Name="PlaylistListBox" 
                         ItemsSource="{Binding Playlist}"
                         Background="Transparent" BorderThickness="0"
                         ItemContainerStyle="{StaticResource ModernSelectableCardItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <icons:MaterialIcon Kind="MusicNote" Width="16" Height="16" Foreground="{StaticResource AccentBrush}" Opacity="0.7" Margin="0,0,10,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding AddedAt, StringFormat='Added: {0:HH:mm}'}" Foreground="{StaticResource TextMuted}" FontSize="10"/>
                                </StackPanel>

                                <Button Grid.Column="2" Style="{StaticResource TransparentIconButton}" Click="RemoveItem_Click" Tag="{Binding}">
                                    <icons:MaterialIcon Kind="TrashCanOutline" Width="14" Height="14" Foreground="{StaticResource AccentRed}"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding Playlist.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Invert}">
                    <icons:MaterialIcon Kind="MusicOff" Width="48" Height="48" Foreground="{StaticResource TextMuted}" Opacity="0.2"/>
                    <TextBlock Text="Playlist is empty" Foreground="{StaticResource TextMuted}" FontSize="14" Margin="0,10,0,0"/>
                    <TextBlock Text="Add sounds from Explorer" Foreground="{StaticResource TextMuted}" FontSize="11" Opacity="0.6"/>
                </StackPanel>
            </Grid>

            <!-- 3. Player Controls Area -->
            <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="0,0,11,11" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
                <StackPanel>
                    <!-- Track Info -->
                    <TextBlock x:Name="CurrentTrackName" Text="No track selected" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="13" Margin="0,0,0,15"/>
                    
                    <!-- Progress Slider -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="CurrentTimeText" Text="0:00" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="AudioSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="0" VerticalAlignment="Center" 
                                Thumb.DragStarted="AudioSlider_DragStarted" Thumb.DragCompleted="AudioSlider_DragCompleted" ValueChanged="AudioSlider_ValueChanged"/>
                        <TextBlock x:Name="TotalTimeText" Text="0:00" Grid.Column="2" FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Main Buttons -->
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource IconButton}" Width="40" Height="40" Margin="5">
                                <icons:MaterialIcon Kind="SkipPrevious" Width="20" Height="20"/>
                            </Button>
                            
                            <Button x:Name="PlayPauseButton" Style="{StaticResource PrimaryButton}" Width="50" Height="50" Click="PlayPause_Click">
                                <icons:MaterialIcon x:Name="PlayIcon" Kind="Play" Width="24" Height="24"/>
                            </Button>
                            
                            <Button Style="{StaticResource IconButton}" Width="40" Height="40" Margin="5">
                                <icons:MaterialIcon Kind="SkipNext" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                        
                        <Button HorizontalAlignment="Right" Style="{StaticResource TransparentIconButton}" Click="ClearPlaylist_Click" ToolTip="Clear Playlist">
                            <icons:MaterialIcon Kind="PlaylistRemove" Width="18" Height="18" Foreground="{StaticResource TextMuted}"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
