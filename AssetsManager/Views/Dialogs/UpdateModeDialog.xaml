<Window x:Class="AssetsManager.Views.Dialogs.UpdateModeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="Update Mode" Height="Auto" Width="450"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource CardBackground}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
        
    <Border CornerRadius="5" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource AccentBrush}" CornerRadius="5,5,0,0" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon x:Name="iconType" Kind="Update" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="White"/>
                    <TextBlock Grid.Column="1" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontWeight="Bold" Margin="5,10" Foreground="White"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="15,20">
                <TextBlock Text="Choose Update Method" Foreground="{StaticResource TextPrimary}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Button x:Name="CleanUpdateWithSaveButton" Style="{StaticResource ModernButton}" Margin="0,5" Click="CleanUpdateWithSaveButton_Click" Height="65" HorizontalContentAlignment="Left" Padding="15,0">
                    <StackPanel>
                        <TextBlock Text="Clean Update (Save Settings)" FontWeight="Bold"/>
                        <TextBlock Text="This installation method is useful if the update is a hotfix; it ensures you don't lose your app settings. Your settings will be saved." TextWrapping="Wrap" FontSize="12"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="CleanUpdateNoSaveButton" Style="{StaticResource SecondaryButton}" Margin="0,10,0,5" Click="CleanUpdateNoSaveButton_Click" Height="65" HorizontalContentAlignment="Left" Padding="15,0">
                    <StackPanel>
                        <TextBlock Text="Quick Update (Not Save Settings)" FontWeight="Bold"/>
                        <TextBlock Text="This installation method is useful if the update is a big update; it's recommended to use this option. Your settings will not be saved." TextWrapping="Wrap" FontSize="12"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource DestructiveButton}" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>