<Window x:Class="AssetsManager.Views.Dialogs.ProgressDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Background="Transparent"
        Height="Auto" Width="600" 
        SizeToContent="Height"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        TextOptions.TextFormattingMode="Display" 
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
        
    <Border Background="{StaticResource CardBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="12"
            Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Direction="270" Opacity="0.25" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Height="40" Margin="16,0,10,0" MouseLeftButtonDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="{Binding HeaderIconKind}" 
                                                Width="18" Height="18" 
                                                Foreground="{StaticResource AccentBrush}" 
                                                VerticalAlignment="Center" 
                                                Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding HeaderText}" 
                               FontWeight="Normal" FontSize="13" 
                               Foreground="{StaticResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click" Width="34" Height="40">
                        <materialIcons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click" Width="34" Height="40">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="15" Height="15"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Separator -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="{StaticResource BorderColor}" Opacity="0.1"/>

            <!-- Dark Body Area -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="0,0,12,12" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Content -->
                    <Grid Grid.Row="0" Margin="24">
                        <StackPanel>
                            <!-- Technical Status Card -->
                            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <StackPanel>
                                    <!-- 1. Operation and Progress (e.g. Comparing: 1 of 30) -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock x:Name="VerbTextBlock" 
                                                   Text="{Binding OperationVerb}" 
                                                   FontWeight="SemiBold" FontSize="15" 
                                                   Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text=":" 
                                                   FontWeight="SemiBold" FontSize="15" 
                                                   Foreground="{StaticResource TextPrimary}"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock x:Name="ItemProgressTextBlock" 
                                                   Text="0 of 0" 
                                                   FontSize="15" 
                                                   Foreground="{StaticResource TextPrimary}" 
                                                   FontWeight="SemiBold"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>

                                    <!-- 2. Current File Name (Standalone and small) -->
                                    <Grid Margin="0,0,0,12">
                                        <TextBlock x:Name="CurrentFileTextBlock" 
                                                   Text="..." 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondary}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   FontWeight="Medium"/>
                                    </Grid>

                                    <!-- 3. Visual Progress Bar (HUD Style) -->
                                    <Grid Margin="0,0,0,12">
                                        <ProgressBar x:Name="MainProgressBar" 
                                                     Height="8" 
                                                     Minimum="0" Maximum="100" 
                                                     Value="0"
                                                     Style="{StaticResource ModernProgressBar}"/>
                                    </Grid>
                                    
                                    <!-- 4. technical Data Area -->
                                    <StackPanel>
                                        <!-- Sub-progress Row (Chunks/Assets) -->
                                        <StackPanel x:Name="SubProgressRow" Orientation="Horizontal" Margin="0,0,0,10">
                                            <materialIcons:MaterialIcon Kind="ChartBubble" Width="14" Height="14" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="SubProgressTextBlock" 
                                                       Text="0 of 0" 
                                                       FontSize="12" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       VerticalAlignment="Center"
                                                       FontFamily="Consolas"/>
                                        </StackPanel>

                                        <!-- Estimated Time Row -->
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon Kind="ClockTimeFourOutline" Width="14" Height="14" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="EstimatedTimeTextBlock" 
                                                       Text="Calculating..." 
                                                       FontSize="12" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       VerticalAlignment="Center"
                                                       FontFamily="Consolas"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Footer -->
                    <Grid Grid.Row="1" Margin="24,0,24,24">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource PrimaryButton}" Click="CancelButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
