<Window x:Class="AssetsManager.Views.Dialogs.ProgressDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Background="Transparent"
        Height="Auto" Width="550" 
        SizeToContent="Height"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        TextOptions.TextFormattingMode="Display" 
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
        
    <Border Background="{StaticResource CardBackground}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="12"
            Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Direction="270" Opacity="0.25" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="16,10,16,10" MouseLeftButtonDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="{Binding HeaderIconKind}" 
                                                Width="16" Height="16" 
                                                Foreground="{StaticResource AccentBrush}" 
                                                VerticalAlignment="Center" 
                                                Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding HeaderText}" 
                               FontWeight="SemiBold" FontSize="14" 
                               Foreground="{StaticResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click">
                        <materialIcons:MaterialIcon Kind="WindowMinimize" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click" Margin="6,0,0,0">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="12" Height="12"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Separator -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="{StaticResource BorderColor}" Opacity="0.1"/>

            <!-- Dark Body Area -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="0,0,12,12" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Content -->
                    <Grid Grid.Row="0" Margin="24">
                        <StackPanel>
                                                        <TextBlock x:Name="ProgressSummaryTextBlock"
                                                                   Text="{Binding OperationVerb}"
                                                                   FontWeight="SemiBold" FontSize="14"                                       Foreground="{StaticResource TextPrimary}" 
                                       Margin="0,0,0,16"/>
                            
                            <!-- Status Card (Uses CardBackground for contrast on Dark Body) -->
                            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Padding="16" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <TextBlock x:Name="CurrentFileTextBlock" 
                                                   Text="" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource TextPrimary}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   FontWeight="Medium"/>
                                    </Grid>
                                    
                                    <StackPanel Orientation="Horizontal">
                                         <materialIcons:MaterialIcon Kind="ClockTimeFourOutline" Width="14" Height="14" Foreground="{StaticResource TextMuted}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                         <TextBlock x:Name="EstimatedTimeTextBlock" 
                                                    Text="Calculating..." 
                                                    FontSize="12" 
                                                    Foreground="{StaticResource TextSecondary}" 
                                                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Footer -->
                    <Grid Grid.Row="1" Margin="24,0,24,24">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource PrimaryButton}" Click="CancelButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
