<Window x:Class="AssetsManager.Views.Dialogs.WadComparisonResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:controls="clr-namespace:AssetsManager.Views.Dialogs.Controls"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Comparison Results" Height="800" Width="1400"
        Background="{StaticResource SidebarBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource HoverColor}" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                        <materialIcons:MaterialIcon Kind="Compare" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Comparison Results" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock x:Name="summaryTextBlock"
                                   Text="Analyzing differences..." 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="reloadHashesButton"
                            Content="Reload Hashes" 
                            Style="{StaticResource SecondaryButton}"
                            HorizontalContentAlignment="Center"
                            Margin="0,0,8,0"
                            Click="ReloadHashesButton_Click"
                            ToolTip="Reloads hashes from the default application path"/>
                    <Button x:Name="saveButton"
                            Content="Save Report"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalContentAlignment="Center"
                            Click="SaveButton_Click"
                            ToolTip="Save the full list of differences to a JSON file"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Dashboard -->
        <Grid Grid.Row="1" Margin="24,12,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- New Files Card -->
            <Border Grid.Column="0" Style="{StaticResource SettingsCard}" Padding="12,8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#1A00E676" CornerRadius="8" Width="32" Height="32">
                        <materialIcons:MaterialIcon Kind="Plus" Width="18" Height="18" Foreground="{StaticResource AccentGreen}"/>
                    </Border>
                    <TextBlock Text="New Files:" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="12,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CountNewText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Modified Files Card -->
            <Border Grid.Column="2" Style="{StaticResource SettingsCard}" Padding="12,8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#1AFF9100" CornerRadius="8" Width="32" Height="32">
                        <materialIcons:MaterialIcon Kind="Pencil" Width="16" Height="16" Foreground="{StaticResource AccentOrange}"/>
                    </Border>
                    <TextBlock Text="Modified:" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="12,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CountModifiedText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Removed Files Card -->
            <Border Grid.Column="4" Style="{StaticResource SettingsCard}" Padding="12,8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#1AFF5252" CornerRadius="8" Width="32" Height="32">
                        <materialIcons:MaterialIcon Kind="Minus" Width="18" Height="18" Foreground="{StaticResource AccentRed}"/>
                    </Border>
                    <TextBlock Text="Removed:" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="12,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CountRemovedText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Renamed Files Card -->
            <Border Grid.Column="6" Style="{StaticResource SettingsCard}" Padding="12,8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#1A00D1FF" CornerRadius="8" Width="32" Height="32">
                        <materialIcons:MaterialIcon Kind="Rename" Width="16" Height="16" Foreground="{StaticResource AccentBlue}"/>
                    </Border>
                    <TextBlock Text="Renamed:" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="12,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CountRenamedText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="24,10,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <controls:WadResultsTreeControl x:Name="ResultsTree" Grid.Column="0"
                                            SelectedItemChanged="ResultsTree_SelectedItemChanged"
                                            SearchTextChanged="SearchTextBox_TextChanged"
                                            WadContextMenuOpening="ResultsTree_ContextMenuOpening"
                                            ViewDifferencesClick="ViewDifferences_Click"/>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>
            <controls:WadDiffDetailsControl x:Name="DiffDetails" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>
