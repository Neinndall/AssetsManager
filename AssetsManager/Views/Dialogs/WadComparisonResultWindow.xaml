<Window x:Class="AssetsManager.Views.Dialogs.WadComparisonResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:controls="clr-namespace:AssetsManager.Views.Dialogs.Controls"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Comparison Results" Height="800" Width="1400"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        WindowStyle="None"
        AllowsTransparency="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"  
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0" 
                      CornerRadius="0" 
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{StaticResource BorderColor}" 
            Background="{StaticResource SidebarBackground}"
            BorderThickness="1" 
            CornerRadius="12" 
            Margin="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- 0: Title Bar -->
                <RowDefinition Height="Auto"/> <!-- 1: Toolbar (Stats) -->
                <RowDefinition Height="Auto"/> <!-- 2: Dashboard -->
                <RowDefinition Height="*"/>    <!-- 3: Main Content -->
                <RowDefinition Height="Auto"/> <!-- 4: Footer (Actions & Summary) -->
            </Grid.RowDefinitions>

            <!-- 1. Standard Title Bar (40px) -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="40" CornerRadius="11,11,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <icons:MaterialIcon Kind="Compare" Width="18" Height="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Comparison Results" FontSize="13" FontWeight="Normal" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click" Width="34" Height="40">
                            <icons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Maximize_Click" Width="34" Height="40">
                            <icons:MaterialIcon Kind="WindowMaximize" Width="15" Height="15"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="Close_Click" Width="34" Height="40" Margin="0,0,2,0">
                            <icons:MaterialIcon Kind="WindowClose" Width="15" Height="15"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. Stats Toolbar (Aligned Right) -->
            <Border Grid.Row="1" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="24,10">
                <Grid>
                    <!-- Left: Header Info -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="DIAGNOSTIC OVERVIEW" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,2"/>
                        <TextBlock Text="Asset Distribution &amp; Payload Analysis" FontSize="10" Foreground="{StaticResource TextPrimary}" Opacity="0.8"/>
                    </StackPanel>
                    
                    <!-- Right: Stats -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <!-- New -->
                        <Border Style="{StaticResource DiagnosticBadgeStyle}" Background="#1A00E676" BorderBrush="{StaticResource AccentGreen}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="NEW:" FontSize="10" FontWeight="Black" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                                <TextBlock Text="{Binding CountNew}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Modified -->
                        <Border Style="{StaticResource DiagnosticBadgeStyle}" Background="#1AFFB74D" BorderBrush="{StaticResource AccentOrange}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="MODIFIED:" FontSize="10" FontWeight="Black" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                                <TextBlock Text="{Binding CountModified}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Removed -->
                        <Border Style="{StaticResource DiagnosticBadgeStyle}" Background="#1AF44336" BorderBrush="{StaticResource AccentRed}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="REMOVED:" FontSize="10" FontWeight="Black" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                                <TextBlock Text="{Binding CountRemoved}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Renamed -->
                        <Border Style="{StaticResource DiagnosticBadgeStyle}" Background="#1A2196F3" BorderBrush="{StaticResource AccentBlue}" Margin="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="RENAMED:" FontSize="10" FontWeight="Black" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                                <TextBlock Text="{Binding CountRenamed}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 3. Dashboard (Same logic, but cleaner) -->
            <Border Grid.Row="2" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" 
                    Visibility="{Binding IsDashboardVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="24,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <TextBlock Text="CATEGORY DISTRIBUTION" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding TreeModel.CategoryDistribution}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                                        <Grid Margin="0,0,0,4">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Name}" FontSize="11" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding SizeChangeText}" FontSize="10" Foreground="{StaticResource AccentBrush}" Margin="8,0,0,0" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                            <!-- File Count pushed to the right correctly -->
                                            <TextBlock Text="{Binding Count, StringFormat='({0} files)'}" FontSize="10" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                        </Grid>
                                        <ProgressBar Grid.Row="1" Height="4" Value="{Binding Percentage}" Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderColor}" BorderThickness="0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,30,0">
                        <TextBlock Text="TOP SIZE IMPACT" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding TreeModel.TopImpactFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DashboardCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Path}" FontSize="9" Foreground="{StaticResource TextMuted}" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding SizeDiffText}" FontSize="11" FontWeight="Bold" Foreground="{StaticResource AccentOrange}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="AFFECTED AREAS" Style="{StaticResource ToolSectionLabel}" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding TreeModel.AffectedAreas}">
                            <ItemsControl.ItemsPanel><ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBackground}" CornerRadius="4" Padding="8,4" Margin="0,0,6,6" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                                            <!-- Sub-badge for count in areas -->
                                            <Border Background="{StaticResource SidebarBackground}" CornerRadius="2" Margin="6,0,0,0" Padding="4,0">
                                                <TextBlock Text="{Binding Count}" FontSize="9" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 4. Main Workspace -->
            <Grid Grid.Row="3" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <controls:WadResultsTreeControl x:Name="ResultsTree" Grid.Column="0"
                                                DataContext="{Binding TreeModel}"
                                                SelectedItemChanged="ResultsTree_SelectedItemChanged"
                                                SearchTextChanged="SearchTextBox_TextChanged"
                                                WadContextMenuOpening="ResultsTree_ContextMenuOpening"
                                                ViewDifferencesClick="ViewDifferences_Click"/>
                
                <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                <controls:WadDiffDetailsControl x:Name="DiffDetails" Grid.Column="2" 
                                                DataContext="{Binding DetailsModel.SelectedDiff}"/>
            </Grid>

            <!-- 5. Footer (Actions & Summary) -->
            <Border Grid.Row="4" Background="{StaticResource CardBackground}" CornerRadius="0,0,11,11" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="24,12">
                <Grid>
                    <!-- Left: Summary Info -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <icons:MaterialIcon Kind="InformationOutline" Width="16" Height="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SummaryText}" FontSize="11" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right: Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Reload Hashes" Click="ReloadHashesButton_Click" Style="{StaticResource SecondaryButton}" Height="32" Margin="0,0,10,0" Padding="15,0"/>
                        <Button Content="Save Report" Click="SaveButton_Click" Style="{StaticResource PrimaryButton}" Height="32" Padding="20,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>