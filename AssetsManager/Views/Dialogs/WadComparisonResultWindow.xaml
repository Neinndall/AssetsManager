<Window x:Class="AssetsManager.Views.Dialogs.WadComparisonResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:controls="clr-namespace:AssetsManager.Views.Dialogs.Controls"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Comparison Results" Height="800" Width="1400"
        Background="{StaticResource SidebarBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource HoverColor}" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                        <materialIcons:MaterialIcon Kind="Compare" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Comparison Results" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock x:Name="summaryTextBlock"
                                   Text="Analyzing differences..." 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="reloadHashesButton"
                            Content="Reload Hashes" 
                            Style="{StaticResource SecondaryButton}"
                            HorizontalContentAlignment="Left"
                            Margin="0,0,8,0"
                            Click="ReloadHashesButton_Click"
                            ToolTip="Reloads hashes from the default application path"/>
                    <Button x:Name="saveButton"
                            Content="Save Report"
                            Style="{StaticResource ModernButton}"
                            HorizontalContentAlignment="Left"
                            Click="SaveButton_Click"
                            ToolTip="Save the full list of differences to a JSON file"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <controls:WadResultsTreeControl x:Name="ResultsTree" Grid.Column="0"
                                            SelectedItemChanged="ResultsTree_SelectedItemChanged"
                                            SearchTextChanged="SearchTextBox_TextChanged"
                                            WadContextMenuOpening="ResultsTree_ContextMenuOpening"
                                            ViewDifferencesClick="ViewDifferences_Click"/>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>
            <controls:WadDiffDetailsControl x:Name="DiffDetails" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>
