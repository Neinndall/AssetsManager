<Window x:Class="AssetsManager.Views.Dialogs.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Confirmation" Height="Auto" Width="420"
        SizeToContent="Height" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner"
        TextOptions.TextFormattingMode="Display" UseLayoutRounding="True">

    <!-- Fondo de la Cabecera (CardBackground) -->
    <Border Background="{StaticResource CardBackground}" CornerRadius="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Direction="270" Opacity="0.25" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content + Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Height="40" Margin="16,0,10,0" MouseDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon x:Name="iconType" Kind="QuestionMarkCircle" 
                                                Foreground="{StaticResource AccentBrush}" 
                                                Width="18" Height="18" Margin="0,0,10,0"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                               FontWeight="SemiBold" FontSize="12" 
                               Foreground="{StaticResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click" Width="34" Height="40">
                        <materialIcons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="btnNo_Click" Width="34" Height="40">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="15" Height="15"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Separator -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="{StaticResource BorderColor}" Opacity="0.1"/>

            <!-- Dark Body Area (Content + Footer) -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="0,0,12,12" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Content -->
                    <Grid Grid.Row="0" Margin="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Decorative Icon -->
                        <materialIcons:MaterialIcon Kind="AlertCircleOutline" 
                                                    Foreground="{StaticResource TextMuted}" 
                                                    Width="32" Height="32" 
                                                    VerticalAlignment="Top" 
                                                    Margin="0,2,16,0"
                                                    Opacity="0.5"/>

                        <TextBlock Grid.Column="1" x:Name="textBlockMessage" 
                                   TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontSize="13"
                                   LineHeight="20"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Footer -->
                    <Grid Grid.Row="1" Margin="24,0,24,24">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel x:Name="YesNoButtons" Orientation="Horizontal">
                                <Button x:Name="btnYes" Content="Yes" Style="{StaticResource PrimaryButton}" Click="btnYes_Click"/>
                                <Button x:Name="btnNo" Content="No" Style="{StaticResource SecondaryButton}" Margin="12,0,0,0" Click="btnNo_Click"/>
                            </StackPanel>
                            <Button x:Name="btnOk" Content="OK" Style="{StaticResource PrimaryButton}" Click="btnOk_Click" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
