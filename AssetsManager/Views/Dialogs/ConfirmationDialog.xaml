<Controls:MetroWindow x:Class="AssetsManager.Views.Dialogs.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Confirmation" Height="Auto" Width="420"
        SizeToContent="Height" WindowStyle="None" AllowsTransparency="True" 
        WindowStartupLocation="CenterOwner" Background="Transparent"
        WindowTransitionsEnabled="False"
        ShowTitleBar="False"
        ShowIconOnTitleBar="False"
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
        ShowCloseButton="False"
        
        GlowBrush="{x:Null}"
        NonActiveGlowBrush="{x:Null}"
        BorderThickness="0"
        
        ResizeMode="CanMinimize">

    <Border Margin="5" CornerRadius="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Background="{StaticResource SidebarBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content + Footer -->
            </Grid.RowDefinitions>

            <!-- Header (HUD Style: 40px) -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="40" CornerRadius="11,11,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Panel.ZIndex="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="Black" Opacity="0.15" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icon/Title -->
                        <ColumnDefinition Width="*"/>    <!-- Spacer (Drag Area) -->
                        <ColumnDefinition Width="Auto"/> <!-- Window Controls -->
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <materialIcons:MaterialIcon x:Name="iconType" Kind="QuestionMarkCircle" 
                                                    Foreground="{StaticResource AccentBrush}" 
                                                    Width="18" Height="18" Margin="0,0,10,0"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                                   FontWeight="Normal" FontSize="13" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Rectangle Grid.Column="1" Fill="Transparent" IsHitTestVisible="True" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click" Width="34" Height="40">
                            <materialIcons:MaterialIcon Kind="WindowMinimize" Width="15" Height="15"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="btnNo_Click" Width="34" Height="40">
                            <materialIcons:MaterialIcon Kind="WindowClose" Width="15" Height="15"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Body Area (With bottom rounding) -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="0,0,11,11" ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Content -->
                    <Grid Grid.Row="0" Margin="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Decorative Icon -->
                        <materialIcons:MaterialIcon Kind="AlertCircleOutline" 
                                                    Foreground="{StaticResource TextMuted}" 
                                                    Width="32" Height="32" 
                                                    VerticalAlignment="Top" 
                                                    Margin="0,2,16,0"
                                                    Opacity="0.5"/>

                        <TextBlock Grid.Column="1" x:Name="textBlockMessage" 
                                   TextWrapping="Wrap" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontSize="12"
                                   LineHeight="18"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Footer -->
                    <Grid Grid.Row="1" Margin="24,0,24,24">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel x:Name="YesNoButtons" Orientation="Horizontal">
                                <Button x:Name="btnYes" Content="Yes" Style="{StaticResource PrimaryButton}" Click="btnYes_Click"/>
                                <Button x:Name="btnNoBottom" Content="No" Style="{StaticResource SecondaryButton}" Margin="12,0,0,0" Click="btnNo_Click"/>
                            </StackPanel>
                            <Button x:Name="btnOk" Content="OK" Style="{StaticResource PrimaryButton}" Click="btnOk_Click" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Controls:MetroWindow>