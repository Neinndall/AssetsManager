<Window x:Class="AssetsManager.Views.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="Input" Height="Auto" Width="400"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Border Background="{StaticResource CardBackground}" CornerRadius="5" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource AccentBrush}" CornerRadius="5,5,0,0" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="TextBoxEdit" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="White"/>
                    <TextBlock Grid.Column="1" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontWeight="Bold" Margin="5,10" Foreground="White"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="15,20">
                <TextBlock Name="textBlockQuestion" TextWrapping="Wrap" Margin="0,0,0,10" Foreground="{StaticResource TextSecondary}"/>
                <TextBox Name="textBoxInput" MinWidth="300" Style="{StaticResource ModernTextBox}" AcceptsReturn="True" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" MinHeight="30" MaxHeight="200"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                <Button Name="btnOk" Content="OK" Width="80" Margin="0,0,10,0" Click="btnOk_Click" Style="{StaticResource ModernButton}"/>
                <Button Name="btnCancel" Content="Cancel" Width="80" Click="btnCancel_Click" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
