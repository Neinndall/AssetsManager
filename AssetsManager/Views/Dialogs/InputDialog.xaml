<Window x:Class="AssetsManager.Views.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AssetsManager.Views.Dialogs"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Input" Height="Auto" Width="450"
        SizeToContent="Height" WindowStyle="None" AllowsTransparency="True" 
        WindowStartupLocation="CenterOwner" Background="Transparent">
        
    <Border Background="{StaticResource CardBackground}" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="10">
        <Border.Effect>
             <DropShadowEffect BlurRadius="15" ShadowDepth="5" Direction="270" Opacity="0.15" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="8,8,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="16,12" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="TextBoxEdit" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click" Foreground="{StaticResource TextSecondary}">
                            <materialIcons:MaterialIcon Kind="WindowMinimize" Width="14" Height="14"/>
                        </Button>
                        <Button Style="{StaticResource TitleBarButtonStyle}" Click="btnCancel_Click" Margin="4,0,0,0" Foreground="{StaticResource TextSecondary}">
                            <materialIcons:MaterialIcon Kind="WindowClose" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Input Area -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}">
                <StackPanel Margin="24">
                    <TextBlock Name="textBlockQuestion" TextWrapping="Wrap" Margin="0,0,0,12" Foreground="{StaticResource TextSecondary}" FontSize="13"/>
                    <TextBox Name="textBoxInput" 
                             Style="{StaticResource ModernTextBoxEditable}" 
                             AcceptsReturn="True" 
                             TextWrapping="NoWrap" 
                             VerticalScrollBarVisibility="Auto" 
                             MinHeight="36" MaxHeight="200"
                             Padding="8"/>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="0,0,8,8" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="btnCancel" Content="Cancel" Width="80" Click="btnCancel_Click" Style="{StaticResource SecondaryButton}"/>
                    <Button Name="btnOk" Content="OK" Width="80" Margin="12,0,0,0" Click="btnOk_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
