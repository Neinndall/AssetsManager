<Window x:Class="AssetsManager.Views.Dialogs.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
        Title="Downloading Update" Width="440" Height="200"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        TextOptions.TextFormattingMode="Display" 
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <Border Background="{StaticResource CardBackground}" CornerRadius="12" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Direction="270" Opacity="0.25" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/> <!-- Body -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="16,10,16,10" MouseDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="CloudDownload" 
                                                Foreground="{StaticResource AccentBrush}" 
                                                Width="16" Height="16" Margin="0,0,10,0"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                               FontWeight="SemiBold" FontSize="14" 
                               Foreground="{StaticResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click">
                        <materialIcons:MaterialIcon Kind="WindowMinimize" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click" Margin="6,0,0,0">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="12" Height="12"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Separator -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="{StaticResource BorderColor}" Opacity="0.1"/>

            <!-- Dark Body Area -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}" CornerRadius="0,0,12,12" Padding="24">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="MessageTextBlock" 
                               Text="Initializing download..." 
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                    <ProgressBar x:Name="DownloadProgressBar" 
                                 Height="10" 
                                 Minimum="0" Maximum="100" 
                                 HorizontalAlignment="Stretch" 
                                 Style="{StaticResource ModernProgressBar}" 
                                 BorderThickness="0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>