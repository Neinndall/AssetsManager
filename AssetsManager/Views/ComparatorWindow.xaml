<UserControl x:Class="AssetsManager.Views.ComparatorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:comparator="clr-namespace:AssetsManager.Views.Controls.Comparator"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono con Brillo -->
                <materialIcons:MaterialIcon Kind="FileCompare"
                                             Height="48"
                                             Width="48"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBrush}"
                                             Grid.Column="0">
                    <materialIcons:MaterialIcon.Effect>
                        <DropShadowEffect Color="{Binding Color, Source={StaticResource AccentBrush}}" 
                                          BlurRadius="15" 
                                          ShadowDepth="0" 
                                          Opacity="0.4"/>
                    </materialIcons:MaterialIcon.Effect>
                </materialIcons:MaterialIcon>

                <!-- Separador Vertical -->
                <Rectangle Grid.Column="1" 
                           Width="1" 
                           Fill="{StaticResource BorderColor}" 
                           Margin="12,8" 
                           VerticalAlignment="Stretch"/>

                <!-- Textos -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="COMPARATOR" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Compare WAD files and view differences"
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" 
                      Background="Transparent"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24,32,0">
            <StackPanel>
                <!-- Header Card -->
                <Border Style="{StaticResource SettingsCard}" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="ToolboxOutline" 
                                                   FontSize="20" 
                                                   Foreground="{StaticResource AccentBrush}"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Comparison Tools" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Select a tool to compare different types of assets" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <comparator:WadComparisonControl x:Name="WadComparisonControl"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>