<UserControl x:Class="AssetsManager.Views.ComparatorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsManager.Views"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:comparator="clr-namespace:AssetsManager.Views.Controls.Comparator"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono con Brillo -->
                <materialIcons:MaterialIcon x:Name="CompIcon"
                                             Kind="FileCompare"
                                             Height="48"
                                             Width="48"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBrush}"
                                             Grid.Column="0">
                    <materialIcons:MaterialIcon.Effect>
                        <DropShadowEffect Color="{Binding Foreground.Color, ElementName=CompIcon}" 
                                          BlurRadius="15" 
                                          ShadowDepth="0" 
                                          Opacity="0.4"/>
                    </materialIcons:MaterialIcon.Effect>
                </materialIcons:MaterialIcon>

                <!-- Separador Vertical -->
                <Rectangle Grid.Column="1" 
                           Width="1" 
                           Fill="{StaticResource BorderColor}" 
                           Margin="12,8" 
                           VerticalAlignment="Stretch"/>

                <!-- Textos -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="COMPARATOR" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Compare WAD files and view differences"
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="32,24,32,24">
                <comparator:WadComparisonControl x:Name="WadComparisonControl"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>