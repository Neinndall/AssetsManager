<UserControl x:Class="AssetsManager.Views.ForensicWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" FontFamily="{StaticResource AppFontFamily}"
             d:DesignHeight="730" d:DesignWidth="1100">

    <Grid Background="{StaticResource DarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Hero Header -->
            <RowDefinition Height="Auto"/> <!-- Dashboard / Controls -->
            <RowDefinition Height="*"/>    <!-- Main Console -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. HERO HEADER (Comparator Style) -->
        <Border Grid.Row="0" 
                Margin="32,24,32,16" 
                Background="{StaticResource CardBackground}" 
                CornerRadius="16" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="2" Opacity="0.2" Color="Black"/>
            </Border.Effect>
            
            <Border Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                        <ColumnDefinition Width="Auto"/> <!-- Separator -->
                        <ColumnDefinition Width="*"/>    <!-- Titles -->
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource SidebarBackground}" CornerRadius="12" Width="56" Height="56">
                        <materialIcons:MaterialIcon Kind="Fingerprint" Width="30" Height="30" Foreground="{StaticResource AccentPurple}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialIcons:MaterialIcon.Effect>
                                <DropShadowEffect Color="#FFB15CFF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </materialIcons:MaterialIcon.Effect>
                        </materialIcons:MaterialIcon>
                    </Border>

                    <!-- Technical Vertical Separator -->
                    <Rectangle Grid.Column="1" Width="1" Fill="{StaticResource BorderColor}" Margin="20,10" VerticalAlignment="Stretch" Opacity="0.6"/>

                    <!-- Titles -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="HASH GUESSING" FontWeight="SemiBold" FontSize="22" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,2"/>
                        <TextBlock Text="Advanced data mining engine for automated path discovery and pattern analysis" FontSize="12" Foreground="{StaticResource TextSecondary}" Opacity="0.8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- 2. CONTROL CENTER -->
        <StackPanel Grid.Row="1" Margin="32,0,32,16">
            <!-- Label en el borde -->
            <TextBlock Text="ENGINE CONTROL" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMuted}" Margin="4,0,0,6"/>
            
            <Border Style="{StaticResource SettingsCard}" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="LaunchButton" 
                                Click="Guess_Click" 
                                Style="{StaticResource PrimaryButton}" 
                                Padding="16,0" 
                                Height="42"
                                HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Flash" Margin="0,0,10,0" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="LAUNCH ENGINE" FontWeight="Bold" VerticalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- DB Status Integrado aquÃ­ -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Padding="12,6" Background="{StaticResource SidebarBackground}" CornerRadius="6" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Database" Width="14" Height="14" Foreground="{StaticResource AccentBlue}" Margin="0,0,8,0"/>
                                <TextBlock x:Name="OperationsSummaryText" Text="DB STATUS: CHECKING..." FontSize="10" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Padding="12,6" Background="{StaticResource SidebarBackground}" CornerRadius="6" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <TextBlock Text="MODE: AGGRESSIVE" FontSize="9" Foreground="{StaticResource AccentPurple}" FontWeight="Bold" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- 3. MAIN DISCOVERY CONSOLE -->
        <Border Grid.Row="2" Margin="32,0,32,16" Background="{StaticResource CardBackground}" CornerRadius="16" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" ClipToBounds="True">
            <Grid>
                <materialIcons:MaterialIcon Kind="Console" Opacity="0.03" Width="300" Height="300" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-100,-100"/>

                <ListBox x:Name="DiscoveryList" Background="Transparent" BorderThickness="0" Padding="12" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="8" Margin="0,2" Padding="16,12" BorderThickness="1" BorderBrush="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource HoverColor}"/>
                                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource SidebarBackground}"/>
                                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource AccentPurple}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Grid.Column="0" Kind="FileCheck" Foreground="{StaticResource AccentGreen}" Width="18" Height="18" Margin="0,0,16,0" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="HASH IDENTIFIER" FontSize="8" Foreground="{StaticResource TextMuted}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Text="{Binding Hash, StringFormat=x16}" FontFamily="Consolas" FontSize="13" Foreground="White" Opacity="0.9"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="12,0">
                                    <TextBlock Text="RESOLVED PATH" FontSize="8" Foreground="{StaticResource TextMuted}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource AccentGreen}" FontSize="14" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="{StaticResource SidebarBackground}" CornerRadius="6" Padding="10,5" Margin="0,0,8,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="SOURCE" FontSize="7" Foreground="{StaticResource TextMuted}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding SourceWad}" FontSize="10" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#1AAB47BC" CornerRadius="6" Padding="10,5" BorderBrush="{StaticResource AccentPurple}" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="METHOD" FontSize="7" Foreground="{StaticResource AccentPurple}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Method}" FontSize="10" Foreground="{StaticResource AccentPurple}" HorizontalAlignment="Center" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.3">
                    <materialIcons:MaterialIcon Kind="SecurityNetwork" Width="100" Height="100" Foreground="{StaticResource TextMuted}"/>
                    <TextBlock Text="ENGINE READY FOR OPERATION" HorizontalAlignment="Center" FontWeight="Black" Margin="0,20,0,0" FontSize="16" Foreground="{StaticResource TextMuted}"/>
                    <TextBlock Text="Press Launch to start deep discovery" HorizontalAlignment="Center" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4,0,0"/>
                </StackPanel>

                <Border x:Name="LoadingOverlay" Background="{StaticResource SidebarBackground}" Opacity="0.98" Visibility="Collapsed" CornerRadius="16">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid HorizontalAlignment="Center">
                            <materialIcons:MaterialIcon Kind="Radar" Width="120" Height="120" Foreground="{StaticResource AccentPurple}" Opacity="0.1" Style="{StaticResource SpinningIconStyle}"/>
                            <materialIcons:MaterialIcon Kind="Radioactive" Width="48" Height="48" Foreground="{StaticResource AccentPurple}" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource SpinningIconStyle}"/>
                        </Grid>
                        <TextBlock x:Name="DetailedLoadingText" Text="INITIALIZING FORENSIC ENGINE..." HorizontalAlignment="Center" Foreground="White" FontWeight="Black" Margin="0,24,0,0" FontSize="18"/>
                        <Border Background="{StaticResource DarkBackground}" CornerRadius="4" Padding="16,8" Margin="0,12,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <TextBlock x:Name="StatusText" Text="Awaiting cluster synchronization..." HorizontalAlignment="Center" Foreground="{StaticResource AccentBlue}" FontFamily="Consolas" FontSize="12"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 4. FOOTER STATUS BAR -->
        <Border Grid.Row="3" Background="{StaticResource SidebarBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="32,8" Height="40">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialIcons:MaterialIcon x:Name="StatusIcon" Kind="InformationOutline" Width="16" Height="16" Foreground="{StaticResource AccentBlue}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="FooterStatusText" Text="ENGINE STATUS: READY" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="Bold" FontFamily="Consolas"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Opacity="0.6">
                    <TextBlock Text="DISCOVERED THIS SESSION: " FontSize="10" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                    <TextBlock Text="0" x:Name="SessionCountText" FontSize="11" Foreground="{StaticResource AccentGreen}" FontWeight="Bold" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>