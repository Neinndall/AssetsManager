<Application x:Class="AssetsManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AssetsManager"
             xmlns:converters="clr-namespace:AssetsManager.Views.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Font.xaml"/>
                <ResourceDictionary Source="/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/Themes/TextStyles.xaml"/>
                <ResourceDictionary Source="/Themes/AvalonEditStyles.xaml"/>
                <ResourceDictionary Source="/Themes/ModernButton.xaml"/>
                <ResourceDictionary Source="/Themes/ModernRichTextBox.xaml"/>
                <ResourceDictionary Source="/Themes/ModernBorder.xaml"/>
                <ResourceDictionary Source="/Themes/ModernCheckBox.xaml"/>
                <ResourceDictionary Source="/Themes/ModernTextBox.xaml"/>
                <ResourceDictionary Source="/Themes/ModernComboBox.xaml"/>
                <ResourceDictionary Source="/Themes/ModernMenu.xaml"/>
                <ResourceDictionary Source="/Themes/ModernProgressBar.xaml"/>
                <ResourceDictionary Source="/Themes/Animations.xaml"/> 
                <ResourceDictionary Source="/Themes/CustomScrollbarStyles.xaml"/> 
                <ResourceDictionary Source="/Themes/TreeViewStyles.xaml"/> 
                <ResourceDictionary Source="/Themes/ModernListView.xaml"/>
                <ResourceDictionary Source="/Themes/ApiTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global WPF Standard Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Global Custom Converters -->
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
            <converters:PathToIconConverter x:Key="PathToIconConverter"/>
            <converters:ChunkDiffTypeToBrushConverter x:Key="DiffTypeToBrushConverter"/>
            <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="{StaticResource CardBackground}" FalseBrush="Transparent"/>
            <converters:ValueMultiplierConverter x:Key="ValueMultiplierConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
