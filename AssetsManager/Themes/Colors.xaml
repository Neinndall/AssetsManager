<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Lo usamos para Styles.xaml / SidebarMenuButton -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF5577CC"/> 
    <SolidColorBrush x:Key="ModernButtonHoverBrush" Color="#FF6A88D9"/>
    <SolidColorBrush x:Key="ModernButtonPressedBrush" Color="#FF405DAB"/>

    <!-- Modern Dark Theme Colors -->
    <SolidColorBrush x:Key="DarkBackground" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FF2D2D30"/>     <!-- Restaurado: Original lighter color for Sidebar/Cards -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#FF252526"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#FF4FC1FF"/>   <!-- Más brillante para modo oscuro -->
    <SolidColorBrush x:Key="AccentGreen" Color="#FF57CC99"/>  <!-- Más moderno -->
    <SolidColorBrush x:Key="AccentPurple" Color="#FFC77DFF"/>
    <SolidColorBrush x:Key="AccentOrange" Color="#FFFFD166"/>
    <SolidColorBrush x:Key="AccentRed" Color="#FFCC3333"/>

    <SolidColorBrush x:Key="TextPrimary" Color="#FFD1D1D1"/>  <!-- Más suave que el blanco intenso -->
    <SolidColorBrush x:Key="TextSecondary" Color="#FFAAAAAA"/>
    <SolidColorBrush x:Key="TextMuted" Color="#FF757575"/>
    <SolidColorBrush x:Key="BorderColor" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="HoverColor" Color="#FF3E3E42"/>
    
    <!-- Dialog Colors -->
    <SolidColorBrush x:Key="OptionCardBrush" Color="#FF29292C"/> 
    
    <!-- Colores que usará CustomScrollbarStyles.xaml -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#252526" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#505050" />
    <SolidColorBrush x:Key="ScrollBarThumbHoverBackground" Color="#707070" />
    <SolidColorBrush x:Key="ScrollBarThumbPressedBackground" Color="#909090" />

    <!-- Diff Viewer -->
    <!-- Background colors for the text editor lines -->
    <Color x:Key="DiffTextBackgroundAdded">#626BCF7F</Color>
    <Color x:Key="DiffTextBackgroundRemoved">#62FF6B6B</Color>
    <Color x:Key="DiffTextBackgroundModified">#62E7A336</Color>

    <!-- Solid colors for the side navigation panel -->
    <Color x:Key="DiffNavigationAdded">#FF6BCF7F</Color>
    <Color x:Key="DiffNavigationRemoved">#FFFF6B6B</Color>
    <Color x:Key="DiffNavigationModified">#FFE7A336</Color>
    <Color x:Key="DiffNavigationImaginary">#FF3F3F46</Color>

    <Color x:Key="BackgroundPanelNavigation">#FF252526</Color>
    <Color x:Key="DiffNavigationViewPort">#FF007ACC</Color>

</ResourceDictionary>