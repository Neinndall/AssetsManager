<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- BRAND ACCENTS (More vibrant & professional) -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF5C85FF"/> <!-- Blue-ish Indigo -->
    <SolidColorBrush x:Key="ModernButtonHoverBrush" Color="#FF7094FF"/>
    <SolidColorBrush x:Key="ModernButtonPressedBrush" Color="#FF4A6EDF"/>

    <!-- DARK THEME CORE (Refined deep tones) -->
    <SolidColorBrush x:Key="DarkBackground" Color="#FF0F111A"/>    <!-- Deeper Dark -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#FF161925"/> <!-- Slightly lighter than bg -->
    <SolidColorBrush x:Key="CardBackground" Color="#FF1E2233"/>    <!-- Elevated layer -->
    
    <!-- ACCENT PALETTE (Modern & Balanced) -->
    <SolidColorBrush x:Key="AccentBlue" Color="#FF00D1FF"/>
    <SolidColorBrush x:Key="AccentGreen" Color="#FF00E676"/>
    <SolidColorBrush x:Key="AccentPurple" Color="#FFBB86FC"/>
    <SolidColorBrush x:Key="AccentOrange" Color="#FFFF9100"/>
    <SolidColorBrush x:Key="AccentYellow" Color="#FFFFD600"/>
    <SolidColorBrush x:Key="AccentRed" Color="#FFFF5252"/>

    <!-- TYPOGRAPHY -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFE0E0E6"/>   <!-- Crisp Off-white -->
    <SolidColorBrush x:Key="TextSecondary" Color="#FF9499B3"/> <!-- Muted blue-grey -->
    <SolidColorBrush x:Key="TextMuted" Color="#FF5C617A"/>
    
    <!-- BORDERS & INTERACTION -->
    <SolidColorBrush x:Key="BorderColor" Color="#FF2D314D"/>
    <SolidColorBrush x:Key="HoverColor" Color="#FF292E42"/>
    
    <!-- Dialog Colors -->
    <SolidColorBrush x:Key="OptionCardBrush" Color="#FF24293E"/> 
    
    <!-- SCROLLBARS -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#3D4466" />
    <SolidColorBrush x:Key="ScrollBarThumbHoverBackground" Color="#5C658F" />
    <SolidColorBrush x:Key="ScrollBarThumbPressedBackground" Color="#7A85B8" />

    <!-- DIFF VIEWER COLORS -->
    <Color x:Key="DiffTextBackgroundAdded">#2600FF6A</Color>
    <Color x:Key="DiffTextBackgroundRemoved">#26FF003C</Color>
    <Color x:Key="DiffTextBackgroundModified">#26FF9100</Color>

    <Color x:Key="DiffNavigationAdded">#FF00E676</Color>
    <Color x:Key="DiffNavigationRemoved">#FFFF5252</Color>
    <Color x:Key="DiffNavigationModified">#FFFF9100</Color>
    <Color x:Key="DiffNavigationImaginary">#FF2D314D</Color>

    <Color x:Key="BackgroundPanelNavigation">#FF161925</Color>
    <Color x:Key="DiffNavigationViewPort">#FF5C85FF</Color>

</ResourceDictionary>
