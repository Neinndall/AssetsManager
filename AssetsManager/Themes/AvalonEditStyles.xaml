<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Font.xaml"/>
        <ResourceDictionary Source="/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Style for AvalonEdit TextEditor controls -->
    <Style TargetType="{x:Type avalonEdit:TextEditor}" x:Key="BaseTextEditorStyle">
        <Setter Property="FontFamily" Value="{StaticResource TextFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="ShowLineNumbers" Value="True"/>
        <Setter Property="WordWrap" Value="False"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Visible"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        
        <!-- AvalonEdit Options -->
        <Setter Property="Options">
            <Setter.Value>
                <avalonEdit:TextEditorOptions
                    EnableHyperlinks="False"
                    EnableEmailHyperlinks="False"
                    ShowEndOfLine="False"
                    ShowSpaces="False"
                    ShowTabs="False"
                    ConvertTabsToSpaces="True"
                    IndentationSize="2" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
