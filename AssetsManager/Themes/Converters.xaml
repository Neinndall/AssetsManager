<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:AssetsManager.Views.Converters">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 1. Standard WPF Converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    <!-- 2. Custom Business Logic Converters -->
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
    <converters:PathToIconConverter x:Key="PathToIconConverter"/>
    <converters:ChunkDiffTypeToBrushConverter x:Key="ChunkDiffTypeToBrushConverter"/>
    <converters:ValueMultiplierConverter x:Key="ValueMultiplierConverter"/>
    <converters:BooleanToMaterialIconConverter x:Key="BooleanToMaterialIconConverter"/>

    <!-- 3. Specialized Parameterized Converters -->
    <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" 
                                     TrueBrush="{StaticResource CardBackground}" 
                                     FalseBrush="Transparent"/>

</ResourceDictionary>
